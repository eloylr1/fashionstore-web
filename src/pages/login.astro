---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Login Universal
 * Página de inicio de sesión única para admin y clientes (SSR)
 * Detecta automáticamente el rol después de iniciar sesión
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false; // SSR

import '../styles/global.css';

// Si ya está autenticado, redirigir según el rol
const accessToken = Astro.cookies.get('sb-access-token');
const userRole = Astro.cookies.get('user-role');

if (accessToken) {
  if (userRole?.value === 'admin') {
    return Astro.redirect('/admin');
  }
  return Astro.redirect('/tienda');
}
---

<!doctype html>
<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>Iniciar Sesión | FashionMarket</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background-color: #faf9f7; margin: 0; padding: 1rem; font-family: 'Inter', system-ui, sans-serif;">
    <div style="width: 100%; max-width: 400px; margin: 0 auto;">
      <!-- Logo -->
      <div style="text-align: center; margin-bottom: 2rem;">
        <a href="/" style="display: inline-block; text-decoration: none;">
          <span style="font-family: 'Playfair Display', Georgia, serif; font-size: 1.875rem; font-weight: 600; color: #0a1628;">
            Fashion<span style="color: #b8a067;">Market</span>
          </span>
        </a>
        <p style="font-size: 0.875rem; margin-top: 0.5rem; color: #6b6b6b;">
          Accede a tu cuenta
        </p>
      </div>
      
      <!-- Login Card -->
      <div style="background: white; padding: 2rem; box-shadow: 0 10px 40px rgba(10, 22, 40, 0.15); border-radius: 0.5rem;">
        <h1 style="font-family: 'Playfair Display', Georgia, serif; font-size: 1.5rem; font-weight: 500; color: #0a1628; margin: 0 0 1.5rem 0; text-align: center;">
          Iniciar sesión
        </h1>
        
        <!-- Error Message -->
        <div id="error-message" style="display: none; margin-bottom: 1.5rem; padding: 1rem; background: #fef2f2; border: 1px solid rgba(139, 38, 53, 0.2); color: #8b2635; font-size: 0.875rem; border-radius: 0.25rem;">
        </div>
        
        <!-- Success Message (para cuando confirman email) -->
        <div id="success-message" style="display: none; margin-bottom: 1.5rem; padding: 1rem; background: #f0fdf4; border: 1px solid rgba(45, 90, 61, 0.2); color: #2d5a3d; font-size: 0.875rem; border-radius: 0.25rem; text-align: center;">
          <svg style="width: 24px; height: 24px; margin: 0 auto 0.5rem; color: #2d5a3d;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p style="font-weight: 500;">¡Email confirmado!</p>
          <p style="font-size: 0.8rem;">Ahora puedes iniciar sesión</p>
        </div>
        
        <form id="login-form" style="display: flex; flex-direction: column; gap: 1.25rem;">
          <div>
            <label for="email" style="display: block; font-size: 0.875rem; font-weight: 500; color: #404040; margin-bottom: 0.5rem;">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="tu@email.com"
              style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d4d4d4; background: white; color: #2d2d2d; font-size: 0.875rem; outline: none; box-sizing: border-box; border-radius: 0.25rem;"
            />
          </div>
          
          <div>
            <label for="password" style="display: block; font-size: 0.875rem; font-weight: 500; color: #404040; margin-bottom: 0.5rem;">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="6"
              placeholder="••••••••"
              style="width: 100%; padding: 0.75rem 1rem; border: 1px solid #d4d4d4; background: white; color: #2d2d2d; font-size: 0.875rem; outline: none; box-sizing: border-box; border-radius: 0.25rem;"
            />
          </div>
          
          <div style="display: flex; align-items: center; justify-content: space-between;">
            <label style="display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; color: #525252; cursor: pointer;">
              <input type="checkbox" name="remember" style="width: 1rem; height: 1rem;" />
              Recordarme
            </label>
            <a href="/auth/forgot-password" style="font-size: 0.875rem; color: #0a1628; text-decoration: none;">
              ¿Olvidaste tu contraseña?
            </a>
          </div>
          
          <button
            type="submit"
            id="submit-btn"
            style="width: 100%; padding: 0.875rem 1.5rem; background: #0a1628; color: white; font-weight: 500; font-size: 0.875rem; border: none; cursor: pointer; border-radius: 0.25rem; transition: background 0.3s;"
          >
            Acceder
          </button>
        </form>
        
        <!-- Separador -->
        <div style="display: flex; align-items: center; gap: 1rem; margin: 1.5rem 0;">
          <div style="flex: 1; height: 1px; background: #e5e5e5;"></div>
          <span style="font-size: 0.75rem; color: #9a9a9a; text-transform: uppercase; letter-spacing: 0.05em;">o continúa con</span>
          <div style="flex: 1; height: 1px; background: #e5e5e5;"></div>
        </div>
        
        <!-- Social Login Buttons -->
        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
          <!-- Google -->
          <button
            type="button"
            id="google-btn"
            style="width: 100%; padding: 0.75rem 1rem; background: white; border: 1px solid #d4d4d4; border-radius: 0.25rem; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.75rem; font-size: 0.875rem; font-weight: 500; color: #404040; transition: all 0.2s;"
            onmouseover="this.style.background='#f9f9f9'; this.style.borderColor='#b4b4b4';"
            onmouseout="this.style.background='white'; this.style.borderColor='#d4d4d4';"
          >
            <svg width="18" height="18" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Continuar con Google
          </button>
          
          <!-- Facebook -->
          <button
            type="button"
            id="facebook-btn"
            style="width: 100%; padding: 0.75rem 1rem; background: #1877F2; border: none; border-radius: 0.25rem; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.75rem; font-size: 0.875rem; font-weight: 500; color: white; transition: all 0.2s;"
            onmouseover="this.style.background='#166FE5';"
            onmouseout="this.style.background='#1877F2';"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="white">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Continuar con Facebook
          </button>
          
        </div>
        
        <div style="margin-top: 1.5rem; text-align: center;">
          <p style="font-size: 0.875rem; color: #6b6b6b; margin: 0;">
            ¿No tienes cuenta? 
            <a href="/registro" style="color: #0a1628; font-weight: 500; text-decoration: none;">
              Regístrate aquí
            </a>
          </p>
        </div>
      </div>
      
      <!-- Back to store -->
      <p style="text-align: center; margin-top: 1.5rem;">
        <a href="/" style="font-size: 0.875rem; color: #6b6b6b; text-decoration: none;">
          ← Volver a la tienda
        </a>
      </p>
    </div>
    
    <script>
      import { supabase, isSupabaseConfigured } from '../lib/supabase/client';
      
      const form = document.getElementById('login-form') as HTMLFormElement;
      const errorDiv = document.getElementById('error-message') as HTMLDivElement;
      const successDiv = document.getElementById('success-message') as HTMLDivElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const googleBtn = document.getElementById('google-btn') as HTMLButtonElement;
      const facebookBtn = document.getElementById('facebook-btn') as HTMLButtonElement;
      
      // Mostrar mensaje si viene de confirmar email
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('confirmed') === 'true') {
        successDiv.style.display = 'block';
      }
      
      // Función para mostrar errores
      function showError(message: string) {
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
      }
      
      // Función para ocultar errores
      function hideError() {
        errorDiv.style.display = 'none';
        errorDiv.textContent = '';
      }
      
      // OAuth Login Handler
      async function handleOAuthLogin(provider: 'google' | 'facebook' | 'github') {
        hideError();
        
        if (!isSupabaseConfigured() || !supabase) {
          showError('Supabase no está configurado. Por favor, configure las variables de entorno.');
          return;
        }
        
        try {
          const { data, error } = await supabase.auth.signInWithOAuth({
            provider,
            options: {
              redirectTo: `${window.location.origin}/auth/callback?provider=${provider}`,
              queryParams: provider === 'google' ? {
                access_type: 'offline',
                prompt: 'consent',
              } : undefined
            }
          });
          
          if (error) throw error;
          
          // El navegador será redirigido automáticamente
        } catch (error: any) {
          let message = error.message || `Error al iniciar sesión con ${provider}`;
          
          if (message.includes('provider is not enabled')) {
            message = `El inicio de sesión con ${provider.charAt(0).toUpperCase() + provider.slice(1)} no está habilitado. Contacta al administrador.`;
          }
          
          showError(message);
        }
      }
      
      // Event listeners para OAuth
      googleBtn?.addEventListener('click', () => handleOAuthLogin('google'));
      facebookBtn?.addEventListener('click', () => handleOAuthLogin('facebook'));
      
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Reset error
        hideError();
        
        // Check if Supabase is configured
        if (!isSupabaseConfigured() || !supabase) {
          errorDiv.textContent = 'Supabase no está configurado. Por favor, configure las variables de entorno.';
          errorDiv.style.display = 'block';
          return;
        }
        
        // Get form data
        const formData = new FormData(form);
        const email = formData.get('email') as string;
        const password = formData.get('password') as string;
        
        // Disable button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Accediendo...';
        
        try {
          const { data, error } = await supabase.auth.signInWithPassword({
            email,
            password,
          });
          
          if (error) throw error;
          
          if (data.session) {
            // Obtener el rol del usuario desde la tabla profiles
            const { data: profile, error: profileError } = await supabase
              .from('profiles')
              .select('role')
              .eq('id', data.user.id)
              .single() as { data: { role: string } | null, error: any };
            
            // Determinar el rol (por defecto 'customer' si no existe perfil)
            const userRole = (profile as any)?.role || 'customer';
            
            // Guardar tokens y rol en cookies via API
            const response = await fetch('/api/auth/login', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                access_token: data.session.access_token,
                refresh_token: data.session.refresh_token,
                role: userRole,
              }),
            });
            
            if (response.ok) {
              // Guardar nombre del usuario en localStorage para el header
              const userName = data.user.user_metadata?.full_name || data.user.email?.split('@')[0] || 'Usuario';
              localStorage.setItem('user-name', userName);
              
              // Si es admin, cerrar sesión y mostrar mensaje
              if (userRole === 'admin') {
                await supabase.auth.signOut();
                // Limpiar cookies
                document.cookie = 'sb-access-token=; path=/; max-age=0';
                document.cookie = 'sb-refresh-token=; path=/; max-age=0';
                document.cookie = 'user-role=; path=/; max-age=0';
                throw new Error('Los administradores deben usar el acceso exclusivo de administración.');
              } else {
                window.location.href = '/cuenta';
              }
            } else {
              throw new Error('Error al guardar la sesión');
            }
          }
        } catch (error: any) {
          let message = error.message || 'Error al iniciar sesión';
          
          // Traducir mensajes comunes
          if (message.includes('Invalid login credentials')) {
            message = 'Email o contraseña incorrectos';
          } else if (message.includes('Email not confirmed')) {
            message = 'Por favor, confirma tu email antes de iniciar sesión';
          }
          
          errorDiv.textContent = message;
          errorDiv.style.display = 'block';
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Acceder';
        }
      });
    </script>
  </body>
</html>
