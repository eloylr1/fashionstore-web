      // Actualizar tiempos de entrega
      if (standardDelivery) {
        const days = storeSettings.shipping.estimated_delivery_days || 3;
        standardDelivery.textContent = `${days}-${days + 2} dÃ­as laborables`;
      }
      if (expressDelivery) {
        const days = storeSettings.shipping.express_delivery_days || 1;
        expressDelivery.textContent = days === 1 ? '24-48 horas' : `${days} dÃ­as`;
