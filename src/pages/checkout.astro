  <style>
    .stripe-el.StripeElement--focus { background: white; border-color: #3b82f6; box-shadow: 0 0 0 4px rgba(59,130,246,0.1); }
    .stripe-el.StripeElement--invalid { border-color: #ef4444; }
  </style>

  <script is:inline>
    (function() {
      var cart = [], shipping = null, shippingMethod = 'standard', discount = null, settings = null;
      var stripe = null, elements = null, cardNumber = null, cardExpiry = null, cardCvc = null, clientSecret = null;
      
      function fmt(c) { return (c / 100).toLocaleString('es-ES', { style: 'currency', currency: 'EUR' }); }
      function getCart() { try { return JSON.parse(localStorage.getItem('fashionmarket-cart') || '[]'); } catch (e) { return []; } }
      function clearCart() { localStorage.removeItem('fashionmarket-cart'); window.dispatchEvent(new CustomEvent('cart-updated')); }
      
      function goToStep(n) {
        document.querySelectorAll('.checkout-step').forEach(function(el) { el.classList.add('hidden'); });
        var step = document.getElementById('step-' + n);
        if (step) step.classList.remove('hidden');
        
        document.querySelectorAll('#progress-nav .step-btn').forEach(function(btn, i) {
          var stepNum = i + 1, num = btn.querySelector('.step-number'), txt = btn.querySelector('.step-text');
          if (stepNum < n) {
            btn.classList.remove('opacity-50'); btn.disabled = false;
            num.className = 'step-number w-7 h-7 rounded-full bg-emerald-500 text-white text-sm font-semibold flex items-center justify-center';
            num.textContent = '‚úì'; txt.className = 'step-text text-sm font-medium text-slate-700';
          } else if (stepNum === n) {
            btn.classList.remove('opacity-50');
            num.className = 'step-number w-7 h-7 rounded-full bg-blue-600 text-white text-sm font-semibold flex items-center justify-center';
            num.textContent = stepNum === 3 ? '‚úì' : stepNum; txt.className = 'step-text text-sm font-medium text-slate-700';
          } else {
            btn.classList.add('opacity-50'); btn.disabled = true;
            num.className = 'step-number w-7 h-7 rounded-full bg-slate-200 text-slate-500 text-sm font-semibold flex items-center justify-center';
            num.textContent = stepNum === 3 ? '‚úì' : stepNum; txt.className = 'step-text text-sm font-medium text-slate-400';
          }
        });
        
        document.querySelectorAll('.step-line').forEach(function(line, i) {
          if (i + 1 < n) line.className = 'w-8 h-0.5 bg-emerald-500 step-line';
          else line.className = 'w-8 h-0.5 bg-slate-200 step-line';
        });
        
        if (n === 2) { initStripe(); updateSummary(); }
        window.scrollTo({ top: 0, behavior: 'smooth' });
      }
      window.goToStep = goToStep;
      
      function loadSettings() {
        fetch('/api/store/settings').then(function(r) { return r.ok ? r.json() : null; }).then(function(data) {
          if (data) {
            settings = data;
            var codEl = document.getElementById('pm-cod');
            if (settings.payments && settings.payments.cash_on_delivery_enabled) {
              codEl.classList.remove('hidden'); codEl.classList.add('flex');
              var codCost = settings.payments.cod_extra_cost || 0;
              document.getElementById('cod-badge').textContent = codCost > 0 ? '+' + fmt(codCost) : 'Sin cargo';
            }
            updateTotals();
          }
        }).catch(function() {});
      }
      
      function renderCart() {
        cart = getCart();
        var el = document.getElementById('cart-items');
        if (!cart.length) {
          el.innerHTML = '<div class="text-center py-8"><p class="text-slate-400 mb-4">Tu carrito est√° vac√≠o</p><a href="/tienda" class="text-blue-600 hover:underline font-medium">Ir a la tienda ‚Üí</a></div>';
          return;
        }
        el.innerHTML = cart.map(function(item) {
          return '<div class="flex gap-4"><div class="relative w-16 h-20 bg-slate-100 rounded-lg overflow-hidden flex-shrink-0"><img src="' + item.image + '" alt="' + item.name + '" class="w-full h-full object-cover" /><span class="absolute -top-1 -right-1 w-5 h-5 bg-slate-800 text-white text-xs rounded-full flex items-center justify-center">' + item.quantity + '</span></div><div class="flex-1 min-w-0"><h4 class="font-medium text-slate-800 text-sm truncate">' + item.name + '</h4><p class="text-xs text-slate-500 mt-0.5">Talla: ' + item.size + (item.color ? ' ‚Ä¢ ' + item.color : '') + '</p><p class="font-semibold text-slate-800 mt-1">' + fmt(item.price * item.quantity) + '</p></div></div>';
        }).join('');
        updateTotals();
      }
      
      function calcTotals() {
        var subtotal = cart.reduce(function(s, i) { return s + i.price * i.quantity; }, 0);
        var threshold = settings && settings.shipping ? settings.shipping.free_shipping_threshold : 10000;
        var isFree = subtotal >= threshold;
        var shipCost = 0;
        if (!isFree) {
          var s = settings && settings.shipping;
          shipCost = shippingMethod === 'express' ? (s ? s.express_shipping_cost : 999) : (s ? s.standard_shipping_cost : 499);
        }
        var discAmt = discount ? discount.amount : 0;
        var pm = document.querySelector('input[name="paymentMethod"]:checked');
        var codCost = 0;
        if (pm && pm.value === 'cod' && settings && settings.payments) codCost = settings.payments.cod_extra_cost || 0;
        return { subtotal: subtotal, shipping: shipCost, discount: discAmt, cod: codCost, total: Math.max(0, subtotal - discAmt + shipCost + codCost), isFree: isFree };
      }
      
      function updateTotals() {
        var t = calcTotals();
        document.getElementById('subtotal').textContent = fmt(t.subtotal);
        document.getElementById('shipping-total').textContent = t.isFree ? 'Gratis' : fmt(t.shipping);
        document.getElementById('total').textContent = fmt(t.total);
        
        var discRow = document.getElementById('discount-row');
        if (t.discount > 0) { discRow.classList.remove('hidden'); discRow.classList.add('flex'); document.getElementById('discount-amount').textContent = '-' + fmt(t.discount); }
        else { discRow.classList.add('hidden'); }
        
        var codRow = document.getElementById('cod-row');
        if (t.cod > 0) { codRow.classList.remove('hidden'); codRow.classList.add('flex'); document.getElementById('cod-total').textContent = fmt(t.cod); }
        else { codRow.classList.add('hidden'); }
        
        // Actualizar precios de opciones de env√≠o
        document.querySelectorAll('.shipping-option').forEach(function(opt) {
          var priceEl = opt.querySelector('.shipping-price');
          if (t.isFree) {
            priceEl.textContent = 'Gratis';
            priceEl.className = 'shipping-price font-bold text-emerald-600';
          } else {
            var base = parseInt(priceEl.getAttribute('data-base') || '0');
            priceEl.textContent = fmt(base);
            priceEl.className = 'shipping-price font-bold text-slate-800';
          }
        });
        
        var freeAlert = document.getElementById('free-shipping-alert');
        if (t.isFree) freeAlert.classList.remove('hidden');
        else freeAlert.classList.add('hidden');
        
        var btnText = document.getElementById('btn-pay-text');
        if (btnText) btnText.textContent = 'Pagar ' + fmt(t.total);
      }
      
      function setupShippingForm() {
        var form = document.getElementById('shipping-form');
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          if (!form.checkValidity()) { form.reportValidity(); return; }
          shipping = {
            firstName: document.getElementById('firstName').value,
            lastName: document.getElementById('lastName').value,
            email: document.getElementById('email').value,
            phone: document.getElementById('phone').value,
            address: document.getElementById('address').value,
            postalCode: document.getElementById('postalCode').value,
            city: document.getElementById('city').value,
            province: document.getElementById('province').value
          };
          localStorage.setItem('fm-shipping', JSON.stringify(shipping));
          goToStep(2);
        });
        
        document.querySelectorAll('.shipping-option').forEach(function(opt) {
          opt.addEventListener('click', function() {
            shippingMethod = opt.getAttribute('data-method');
            document.querySelectorAll('.shipping-option').forEach(function(o) {
              o.classList.remove('selected', 'bg-blue-50', 'border-blue-500');
              o.classList.add('border-slate-200', 'bg-white');
              o.querySelector('.radio-dot').classList.add('hidden');
              o.querySelector('.radio-circle').classList.remove('border-blue-500');
              o.querySelector('.radio-circle').classList.add('border-slate-300');
            });
            opt.classList.add('selected', 'bg-blue-50', 'border-blue-500');
            opt.classList.remove('border-slate-200', 'bg-white');
            opt.querySelector('.radio-dot').classList.remove('hidden');
            opt.querySelector('.radio-circle').classList.add('border-blue-500');
            opt.querySelector('.radio-circle').classList.remove('border-slate-300');
            opt.querySelector('input').checked = true;
            updateTotals();
          });
        });
        
        if (window.USER_EMAIL) document.getElementById('email').value = window.USER_EMAIL;
        if (window.USER_NAME) {
          var parts = window.USER_NAME.split(' ');
          if (parts[0]) document.getElementById('firstName').value = parts[0];
          if (parts.slice(1).join(' ')) document.getElementById('lastName').value = parts.slice(1).join(' ');
        }
        
        var saved = localStorage.getItem('fm-shipping');
        if (saved) {
          try {
            var d = JSON.parse(saved);
            if (d.firstName) document.getElementById('firstName').value = d.firstName;
            if (d.lastName) document.getElementById('lastName').value = d.lastName;
            if (d.email) document.getElementById('email').value = d.email;
            if (d.phone) document.getElementById('phone').value = d.phone;
            if (d.address) document.getElementById('address').value = d.address;
            if (d.postalCode) document.getElementById('postalCode').value = d.postalCode;
            if (d.city) document.getElementById('city').value = d.city;
            if (d.province) document.getElementById('province').value = d.province;
          } catch (e) {}
        }
      }
      
      function updateSummary() {
        if (!shipping) return;
        document.getElementById('summary-address').textContent = shipping.firstName + ' ' + shipping.lastName + ', ' + shipping.address + ', ' + shipping.postalCode + ' ' + shipping.city;
        document.getElementById('summary-email').textContent = shipping.email;
      }
      
      function setupPaymentMethods() {
        document.querySelectorAll('.payment-method').forEach(function(pm) {
          pm.addEventListener('click', function() {
            var val = pm.querySelector('input').value;
            document.querySelectorAll('.payment-method').forEach(function(p) {
              p.classList.remove('selected', 'bg-blue-50', 'border-blue-500');
              p.classList.add('border-slate-200', 'bg-white');
              p.querySelector('.radio-dot').classList.add('hidden');
              p.querySelector('.radio-circle').classList.remove('border-blue-500');
              p.querySelector('.radio-circle').classList.add('border-slate-300');
            });
            pm.classList.add('selected', 'bg-blue-50', 'border-blue-500');
            pm.classList.remove('border-slate-200', 'bg-white');
            pm.querySelector('.radio-dot').classList.remove('hidden');
            pm.querySelector('.radio-circle').classList.add('border-blue-500');
            pm.querySelector('.radio-circle').classList.remove('border-slate-300');
            pm.querySelector('input').checked = true;
            
            if (val === 'card') {
              document.getElementById('card-form').classList.remove('hidden');
              document.getElementById('cod-info').classList.add('hidden');
            } else {
              document.getElementById('card-form').classList.add('hidden');
              document.getElementById('cod-info').classList.remove('hidden');
            }
            updateTotals();
          });
        });
      }
      
      function initStripe() {
        if (!window.STRIPE_KEY) return;
        if (stripe) { createPI(); return; }
        if (typeof Stripe === 'undefined') return;
        
        try {
          stripe = Stripe(window.STRIPE_KEY);
          elements = stripe.elements({ locale: 'es' });
          var style = { base: { fontSize: '16px', color: '#1e293b', fontFamily: 'system-ui, sans-serif', '::placeholder': { color: '#94a3b8' } }, invalid: { color: '#ef4444' } };
          
          cardNumber = elements.create('cardNumber', { style: style, showIcon: true });
          cardExpiry = elements.create('cardExpiry', { style: style });
          cardCvc = elements.create('cardCvc', { style: style });
          
          cardNumber.mount('#card-number');
          cardExpiry.mount('#card-expiry');
          cardCvc.mount('#card-cvc');
          
          var errEl = document.getElementById('card-errors');
          [cardNumber, cardExpiry, cardCvc].forEach(function(el) {
            el.on('change', function(ev) {
              if (ev.error) { errEl.textContent = ev.error.message; errEl.classList.remove('hidden'); }
              else { errEl.classList.add('hidden'); }
            });
          });
          
          console.log('‚úÖ Stripe ready');
          createPI();
        } catch (err) { console.error('Stripe error:', err); }
      }
      
      function createPI() {
        var t = calcTotals();
        if (t.total <= 0) return;
        fetch('/api/stripe/create-payment-intent', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ amount: t.total, currency: 'eur' })
        }).then(function(r) { return r.ok ? r.json() : null; }).then(function(data) {
          if (data) { clientSecret = data.clientSecret; console.log('‚úÖ PI ready'); }
        }).catch(function(e) { console.error('PI error:', e); });
      }
      
      function pay() {
        var btn = document.getElementById('btn-pay');
        var btnText = document.getElementById('btn-pay-text');
        var errDiv = document.getElementById('payment-error');
        var errMsg = document.getElementById('payment-error-msg');
        var pmInput = document.querySelector('input[name="paymentMethod"]:checked');
        var pm = pmInput ? pmInput.value : 'card';
        
        btn.disabled = true;
        btnText.innerHTML = '<svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Procesando...';
        errDiv.classList.add('hidden');
        
        function showErr(msg) {
          errMsg.textContent = msg; errDiv.classList.remove('hidden');
          btn.disabled = false; btnText.textContent = 'Pagar ' + fmt(calcTotals().total);
        }
        
        if (pm === 'cod') {
          createOrder('cash_on_delivery', null).catch(function(e) { showErr(e.message); });
        } else {
          var name = document.getElementById('cardholderName').value;
          if (!name || !name.trim()) { showErr('Introduce el nombre del titular'); return; }
          if (!stripe || !cardNumber) { showErr('Error de conexi√≥n. Recarga la p√°gina.'); return; }
          if (!clientSecret) { showErr('Error iniciando pago. Int√©ntalo de nuevo.'); return; }
          
          stripe.confirmCardPayment(clientSecret, {
            payment_method: {
              card: cardNumber,
              billing_details: {
                name: name,
                email: shipping ? shipping.email : '',
                phone: shipping ? shipping.phone : '',
                address: shipping ? { line1: shipping.address, city: shipping.city, state: shipping.province, postal_code: shipping.postalCode, country: 'ES' } : {}
              }
            }
          }).then(function(result) {
            if (result.error) {
              var msg = result.error.message || 'Error en el pago';
              if (result.error.code === 'card_declined') msg = 'Tarjeta rechazada';
              if (result.error.code === 'expired_card') msg = 'Tarjeta expirada';
              if (result.error.code === 'incorrect_cvc') msg = 'CVC incorrecto';
              showErr(msg);
            } else if (result.paymentIntent && result.paymentIntent.status === 'succeeded') {
              createOrder('card', result.paymentIntent.id).catch(function(e) { showErr(e.message); });
            }
          }).catch(function(e) { showErr(e.message || 'Error procesando pago'); });
        }
      }
      
      function createOrder(paymentMethod, paymentIntentId) {
        var t = calcTotals();
        var data = {
          items: cart.map(function(i) {
            return { product_id: i.productId, product_name: i.name, product_image: i.image, product_slug: i.slug, quantity: i.quantity, size: i.size, color: i.color || null, unit_price: i.price };
          }),
          shipping_address: {
            full_name: shipping.firstName + ' ' + shipping.lastName,
            phone: shipping.phone,
            address_line1: shipping.address,
            city: shipping.city,
            province: shipping.province,
            postal_code: shipping.postalCode,
            country: 'ES'
          },
          shipping_method: shippingMethod,
          payment_method: paymentMethod,
          payment_intent_id: paymentIntentId,
          discount_code: discount ? discount.code : null,
          discount_amount: t.discount,
          customer_email: shipping.email,
          subtotal: t.subtotal,
          shipping_cost: t.shipping,
          cod_extra_cost: t.cod,
          total: t.total
        };
        
        return fetch('/api/orders/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        }).then(function(r) {
          if (!r.ok) return r.json().then(function(d) { throw new Error(d.error || 'Error al crear el pedido'); });
          return r.json();
        }).then(function(result) {
          document.getElementById('order-number').textContent = result.order_number;
          document.getElementById('confirm-email').textContent = shipping.email;
          clearCart();
          goToStep(3);
        });
      }
      
      function setupDiscount() {
        var input = document.getElementById('discount-input');
        var btn = document.getElementById('btn-discount');
        var successDiv = document.getElementById('discount-success');
        var label = document.getElementById('discount-label');
        var removeBtn = document.getElementById('btn-remove-discount');
        
        btn.addEventListener('click', function() {
          var code = input.value.trim();
          if (!code) return;
          fetch('/api/discount/validate', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ code: code, subtotal: calcTotals().subtotal })
          }).then(function(r) {
            if (!r.ok) return r.json().then(function(d) { throw new Error(d.error); });
            return r.json();
          }).then(function(data) {
            discount = { code: data.code, amount: data.discount_amount };
            label.textContent = data.code + ': -' + fmt(data.discount_amount);
            successDiv.classList.remove('hidden');
            input.value = '';
            updateTotals();
          }).catch(function(e) { alert(e.message || 'C√≥digo no v√°lido'); });
        });
        
        removeBtn.addEventListener('click', function() {
          discount = null;
          successDiv.classList.add('hidden');
          updateTotals();
        });
      }
      
      function init() {
        console.log('üöÄ Checkout Premium');
        cart = getCart();
        if (!cart.length) { renderCart(); return; }
        loadSettings();
        renderCart();
        setupShippingForm();
        setupPaymentMethods();
        setupDiscount();
        document.getElementById('btn-pay').addEventListener('click', pay);
        console.log('‚úÖ Checkout listo');
      }
      
      if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', init);
      else init();
    })();
  </script>
