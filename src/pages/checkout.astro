      try {
        const saved = localStorage.getItem('fashionmarket-cart');
        return saved ? JSON.parse(saved) : [];
      } catch {
        return [];
      }
    };

    const cartItems = getCart();
    const subtotal = cartItems.reduce((sum: number, item: any) => sum + item.price * item.quantity, 0);

    // Formatear precio
    const formatPrice = (cents: number) => {
      return new Intl.NumberFormat('es-ES', {
        style: 'currency',
        currency: 'EUR',
      }).format(cents / 100);
    };

    // Cargar configuraciÃ³n de la tienda
    const loadStoreSettings = async () => {
      try {
        const response = await fetch('/api/store/settings');
        if (response.ok) {
          const data = await response.json();
          storeSettings = { ...storeSettings, ...data };
          
          // Actualizar UI con configuraciÃ³n
          updateShippingOptions();
          updatePaymentOptions();
          updateTotals();
        }
      } catch (error) {
        console.error('Error loading store settings:', error);
      }
    };

    // Actualizar opciones de envÃ­o
    const updateShippingOptions = () => {
      const standardPrice = document.getElementById('standard-price');
      const expressOption = document.getElementById('express-option');
      const expressPrice = document.getElementById('express-price');
      const standardDelivery = document.getElementById('standard-delivery-time');
      const expressDelivery = document.getElementById('express-delivery-time');
      
      // Actualizar precio estÃ¡ndar (o gratis si supera el umbral)
      if (standardPrice) {
        if (subtotal >= storeSettings.shipping.free_shipping_threshold) {
          standardPrice.textContent = 'âœ… GRATIS';
          standardPrice.classList.add('text-green-600');
        } else {
          standardPrice.textContent = formatPrice(storeSettings.shipping.standard_shipping_cost);
          standardPrice.classList.remove('text-green-600');
        }
      }
      
      // Mostrar/ocultar envÃ­o express
      if (expressOption && storeSettings.shipping.express_shipping_enabled) {
        expressOption.classList.remove('hidden');
        if (expressPrice) {
          if (subtotal >= storeSettings.shipping.free_shipping_threshold) {
            expressPrice.textContent = formatPrice(storeSettings.shipping.express_shipping_cost);
          } else {
            expressPrice.textContent = formatPrice(storeSettings.shipping.express_shipping_cost);
