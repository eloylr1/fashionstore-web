      },
    };

    // Estado del checkout
    let appliedDiscount: {
      discount_code_id: string;
      code: string;
      discount_amount: number;
    } | null = null;
    
    let selectedShippingMethod = 'standard';
    let selectedPaymentMethod = 'card';
    
