    const calculateCodCost = () => {
      return selectedPaymentMethod === 'cash_on_delivery' 
        ? (storeSettings.payments.cod_extra_cost || 0) 
        : 0;
    };

    // Renderizar items del carrito
    const renderCartItems = () => {
