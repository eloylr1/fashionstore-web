          body: JSON.stringify({ code, subtotal }),
        });

        const data = await response.json();

        if (!data.valid) {
          showMessage(data.reason || 'CÃ³digo no vÃ¡lido', true);
          return;
        }

        // CÃ³digo vÃ¡lido
        appliedDiscount = {
          discount_code_id: data.discount_code_id,
          code: data.code,
          discount_amount: data.discount_amount,
