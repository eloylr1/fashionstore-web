    const updateTotals = () => {
      const discount = appliedDiscount?.discount_amount || 0;
      const shippingCost = calculateShippingCost();
      const codCost = calculateCodCost();
      const total = subtotal - discount + shippingCost + codCost;
      
      const subtotalDisplay = document.getElementById('subtotal-display');
      const totalDisplay = document.getElementById('total-display');
      const discountRow = document.getElementById('discount-row');
      const discountTotal = document.getElementById('discount-total');
      const shippingDisplay = document.getElementById('shipping-display');
      const codRow = document.getElementById('cod-row');
      const codDisplay = document.getElementById('cod-display');
      
      if (subtotalDisplay) subtotalDisplay.textContent = formatPrice(subtotal);
      if (totalDisplay) totalDisplay.textContent = formatPrice(total);
      
      // EnvÃ­o
      if (shippingDisplay) {
        if (shippingCost === 0 && subtotal >= storeSettings.shipping.free_shipping_threshold) {
          shippingDisplay.textContent = 'âœ… GRATIS';
          shippingDisplay.classList.add('text-green-600');
        } else if (shippingCost === 0) {
          shippingDisplay.textContent = 'GRATIS';
          shippingDisplay.classList.add('text-green-600');
        } else {
          shippingDisplay.textContent = formatPrice(shippingCost);
          shippingDisplay.classList.remove('text-green-600');
        }
      }
      
      // Descuento
      if (discount > 0 && discountRow && discountTotal) {
        discountRow.classList.remove('hidden');
        discountTotal.textContent = `-${formatPrice(discount)}`;
      } else if (discountRow) {
        discountRow.classList.add('hidden');
      }
      
      // Contrareembolso
      if (codCost > 0 && codRow && codDisplay) {
        codRow.classList.remove('hidden');
        codDisplay.textContent = formatPrice(codCost);
      } else if (codRow) {
        codRow.classList.add('hidden');
      }
      
      // Guardar mÃ©todo de envÃ­o y pago en localStorage para el checkout
      localStorage.setItem('fashionmarket-checkout-options', JSON.stringify({
        shippingMethod: selectedShippingMethod,
        paymentMethod: selectedPaymentMethod,
        shippingCost,
        codCost,
      }));
