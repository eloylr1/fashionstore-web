    // Calcular costo de envÃ­o
    const calculateShippingCost = () => {
      if (subtotal >= storeSettings.shipping.free_shipping_threshold) {
        return selectedShippingMethod === 'express' 
          ? storeSettings.shipping.express_shipping_cost 
          : 0;
