---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Registro de Clientes
 * Página de registro para nuevos clientes (SSR)
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false; // SSR

import '../styles/global.css';
import { createClient } from '@supabase/supabase-js';

// Si ya está autenticado con token VÁLIDO, redirigir a la tienda
const accessToken = Astro.cookies.get('sb-access-token');

if (accessToken?.value) {
  try {
    const supabase = createClient(
      import.meta.env.PUBLIC_SUPABASE_URL,
      import.meta.env.PUBLIC_SUPABASE_ANON_KEY
    );
    
    // VALIDAR el token con Supabase
    const { data: { user }, error } = await supabase.auth.getUser(accessToken.value);
    
    if (!error && user) {
      // Token válido - redirigir a tienda
      return Astro.redirect('/tienda');
    } else {
      // Token inválido - LIMPIAR COOKIES
      Astro.cookies.delete('sb-access-token', { path: '/' });
      Astro.cookies.delete('sb-refresh-token', { path: '/' });
      Astro.cookies.delete('user-role', { path: '/' });
    }
  } catch (error) {
    // Error - limpiar cookies
    Astro.cookies.delete('sb-access-token', { path: '/' });
    Astro.cookies.delete('sb-refresh-token', { path: '/' });
    Astro.cookies.delete('user-role', { path: '/' });
  }
}
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Cuenta | FashionMarket</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body class="min-h-screen bg-ivory flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <!-- Logo -->
      <div class="text-center mb-8">
        <a href="/" class="inline-block">
          <span class="font-serif text-3xl font-semibold text-navy-900 tracking-tight">
            Fashion<span class="text-gold-matte">Market</span>
          </span>
        </a>
        <p class="text-charcoal-500 text-sm mt-2">Crea tu cuenta y descubre nuestra colección</p>
      </div>
      
      <!-- Register Card -->
      <div class="bg-white p-8 shadow-elevated">
        <h1 class="font-serif text-2xl font-medium text-navy-900 mb-6 text-center">
          Crear cuenta
        </h1>
        
        <!-- Error Message -->
        <div id="error-message" class="hidden mb-6 p-4 bg-red-50 border border-error/20 text-error text-sm">
        </div>
        
        <!-- Success Message -->
        <div id="success-message" class="hidden mb-6 p-4 bg-green-50 border border-success/20 text-success text-sm">
        </div>
        
        <form id="register-form" class="space-y-5">
          <div>
            <label for="full_name" class="block text-sm font-medium text-charcoal-700 mb-2">
              Nombre completo
            </label>
            <input
              type="text"
              id="full_name"
              name="full_name"
              required
              class="input-elegant"
              placeholder="Tu nombre"
            />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-charcoal-700 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="input-elegant"
              placeholder="tu@email.com"
            />
          </div>
          
          <div>
            <label for="password" class="block text-sm font-medium text-charcoal-700 mb-2">
              Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="6"
              class="input-elegant"
              placeholder="Mínimo 6 caracteres"
            />
          </div>
          
          <div>
            <label for="confirm_password" class="block text-sm font-medium text-charcoal-700 mb-2">
              Confirmar contraseña
            </label>
            <input
              type="password"
              id="confirm_password"
              name="confirm_password"
              required
              minlength="6"
              class="input-elegant"
              placeholder="Repite tu contraseña"
            />
          </div>
          
          <div class="flex items-start gap-2">
            <input
              type="checkbox"
              id="terms"
              name="terms"
              required
              class="mt-1 w-4 h-4 text-navy-900 border-charcoal-300 rounded focus:ring-navy-900"
            />
            <label for="terms" class="text-sm text-charcoal-600">
              Acepto los <a href="#" class="text-navy-900 hover:text-gold-matte underline">términos y condiciones</a> y la <a href="#" class="text-navy-900 hover:text-gold-matte underline">política de privacidad</a>
            </label>
          </div>
          
          <button
            type="submit"
            class="btn-primary w-full"
            id="submit-btn"
          >
            Crear cuenta
          </button>
        </form>
        
        <!-- Separador -->
        <div class="flex items-center gap-4 my-6">
          <div class="flex-1 h-px bg-charcoal-200"></div>
          <span class="text-xs text-charcoal-400 uppercase tracking-wider">o regístrate con</span>
          <div class="flex-1 h-px bg-charcoal-200"></div>
        </div>
        
        <!-- Social Login Buttons -->
        <div class="flex flex-col gap-3">
          <!-- Google -->
          <button
            type="button"
            id="google-btn"
            class="w-full py-3 px-4 bg-white border border-charcoal-300 flex items-center justify-center gap-3 text-sm font-medium text-charcoal-700 hover:bg-charcoal-50 hover:border-charcoal-400 transition-all"
          >
            <svg width="18" height="18" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Continuar con Google
          </button>
          
          <!-- Facebook -->
          <button
            type="button"
            id="facebook-btn"
            class="w-full py-3 px-4 bg-[#1877F2] border-none flex items-center justify-center gap-3 text-sm font-medium text-white hover:bg-[#166FE5] transition-all"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="white">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Continuar con Facebook
          </button>
          
        </div>
        
        <div class="mt-6 text-center">
          <p class="text-sm text-charcoal-500">
            ¿Ya tienes cuenta? 
            <a href="/login" class="text-navy-900 font-medium hover:text-gold-matte transition-colors">
              Inicia sesión
            </a>
          </p>
        </div>
      </div>
      
      <!-- Back to store -->
      <p class="text-center mt-6">
        <a href="/" class="text-sm text-charcoal-500 hover:text-navy-900 transition-colors">
          ← Volver a la tienda
        </a>
      </p>
    </div>
    
    <script>
      import { supabase, isSupabaseConfigured } from '../lib/supabase/client';
      
      const form = document.getElementById('register-form') as HTMLFormElement;
      const errorDiv = document.getElementById('error-message') as HTMLDivElement;
      const successDiv = document.getElementById('success-message') as HTMLDivElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const googleBtn = document.getElementById('google-btn') as HTMLButtonElement;
      const facebookBtn = document.getElementById('facebook-btn') as HTMLButtonElement;
      
      // Función para mostrar errores
      function showError(message: string) {
        errorDiv.textContent = message;
        errorDiv.classList.remove('hidden');
      }
      
      // Función para ocultar errores
      function hideError() {
        errorDiv.classList.add('hidden');
        errorDiv.textContent = '';
      }
      
      // OAuth Signup Handler
      async function handleOAuthSignup(provider: 'google' | 'facebook' | 'github') {
        hideError();
        successDiv.classList.add('hidden');
        
        if (!isSupabaseConfigured() || !supabase) {
          showError('Supabase no está configurado. Por favor, configure las variables de entorno.');
          return;
        }
        
        try {
          const { data, error } = await supabase.auth.signInWithOAuth({
            provider,
            options: {
              redirectTo: `${window.location.origin}/auth/callback?provider=${provider}`,
              queryParams: provider === 'google' ? {
                access_type: 'offline',
                prompt: 'consent',
              } : undefined
            }
          });
          
          if (error) throw error;
          
          // El navegador será redirigido automáticamente
        } catch (error: any) {
          let message = error.message || `Error al registrarse con ${provider}`;
          
          if (message.includes('provider is not enabled')) {
            message = `El registro con ${provider.charAt(0).toUpperCase() + provider.slice(1)} no está habilitado. Contacta al administrador.`;
          }
          
          showError(message);
        }
      }
      
      // Event listeners para OAuth
      googleBtn?.addEventListener('click', () => handleOAuthSignup('google'));
      facebookBtn?.addEventListener('click', () => handleOAuthSignup('facebook'));
      
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Reset messages
        hideError();
        successDiv.classList.add('hidden');
        successDiv.textContent = '';
        
        // Check if Supabase is configured
        if (!isSupabaseConfigured() || !supabase) {
          errorDiv.textContent = 'Supabase no está configurado. Por favor, configure las variables de entorno.';
          errorDiv.classList.remove('hidden');
          return;
        }
        
        // Get form data
        const formData = new FormData(form);
        const fullName = formData.get('full_name') as string;
        const email = formData.get('email') as string;
        const password = formData.get('password') as string;
        const confirmPassword = formData.get('confirm_password') as string;
        
        // Validate passwords match
        if (password !== confirmPassword) {
          errorDiv.textContent = 'Las contraseñas no coinciden';
          errorDiv.classList.remove('hidden');
          return;
        }
        
        // Disable button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Creando cuenta...';
        
        try {
          const { data, error } = await supabase.auth.signUp({
            email,
            password,
            options: {
              data: {
                full_name: fullName,
                role: 'customer' // Los clientes siempre se registran como customers
              },
              emailRedirectTo: `${window.location.origin}/auth/callback`
            }
          });
          
          if (error) throw error;
          
          if (data.user) {
            // Si el email necesita confirmación (Supabase tiene habilitada la confirmación)
            if (data.user.identities?.length === 0) {
              errorDiv.textContent = 'Este email ya está registrado. Por favor, inicia sesión.';
              errorDiv.classList.remove('hidden');
            } else if (!data.session) {
              // Email de confirmación enviado
              successDiv.innerHTML = `
                <div style="text-align: center;">
                  <svg style="width: 48px; height: 48px; margin: 0 auto 1rem; color: #2d5a3d;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <p style="font-weight: 600; margin-bottom: 0.5rem;">¡Revisa tu correo!</p>
                  <p>Hemos enviado un enlace de confirmación a <strong>${email}</strong></p>
                  <p style="margin-top: 0.5rem; font-size: 0.8rem; color: #6b6b6b;">Revisa también tu carpeta de spam</p>
                </div>
              `;
              successDiv.classList.remove('hidden');
              form.style.display = 'none';
            } else {
              // Si el usuario se autentica directamente
              const response = await fetch('/api/auth/login', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  access_token: data.session.access_token,
                  refresh_token: data.session.refresh_token,
                }),
              });
              
              if (response.ok) {
                window.location.href = '/tienda';
              } else {
                throw new Error('Error al guardar la sesión');
              }
            }
          }
        } catch (error: any) {
          let message = error.message || 'Error al crear la cuenta';
          
          // Traducir mensajes comunes
          if (message.includes('already registered')) {
            message = 'Este email ya está registrado';
          } else if (message.includes('Password should be')) {
            message = 'La contraseña debe tener al menos 6 caracteres';
          } else if (message.includes('Invalid email')) {
            message = 'Email inválido';
          }
          
          errorDiv.textContent = message;
          errorDiv.classList.remove('hidden');
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Crear cuenta';
        }
      });
    </script>
  </body>
</html>
