 * FASHIONMARKET - Seguimiento de Pedido (Invitados)
 * Permite a los invitados ver el estado de su pedido con email + nÃºmero
 * â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
 */

export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import { supabase, isSupabaseConfigured } from '../lib/supabase/client';

// Obtener parÃ¡metros de la URL
const orderNumber = Astro.url.searchParams.get('order');
const email = Astro.url.searchParams.get('email');

let order: any = null;
let orderItems: any[] = [];
let error = '';

if (orderNumber && email && isSupabaseConfigured() && supabase) {
  // Buscar pedido por nÃºmero y email de invitado
  const { data: orderData, error: orderError } = await supabase
    .from('orders')
    .select('*')
    .eq('order_number', orderNumber)
    .eq('guest_email', email)
    .single();

  if (orderError || !orderData) {
    error = 'No se encontrÃ³ el pedido. Verifica el nÃºmero de pedido y el email.';
  } else {
    order = orderData;
    
    // Obtener items del pedido
    const { data: items } = await supabase
      .from('order_items')
      .select('*')
      .eq('order_id', order.id);
    
    orderItems = items || [];
  }
}

// Mapeo de estados
const statusMap: Record<string, { label: string; color: string; icon: string }> = {
  'pending': { label: 'Pendiente', color: 'yellow', icon: 'ğŸ•' },
  'awaiting_payment': { label: 'Esperando pago', color: 'orange', icon: 'ğŸ’³' },
  'paid': { label: 'Pagado', color: 'green', icon: 'âœ“' },
  'processing': { label: 'Procesando', color: 'blue', icon: 'ğŸ“¦' },
  'shipped': { label: 'Enviado', color: 'purple', icon: 'ğŸšš' },
  'delivered': { label: 'Entregado', color: 'green', icon: 'âœ“' },
  'cancelled': { label: 'Cancelado', color: 'red', icon: 'âœ•' },
};

function formatPrice(cents: number): string {
  return (cents / 100).toLocaleString('es-ES', { style: 'currency', currency: 'EUR' });
}

function formatDate(date: string): string {
  return new Date(date).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
