  <script define:vars={{ orderId }}>
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    // FORMULARIO DE DEVOLUCIÃ“N
    // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
    
    const form = document.getElementById('return-form');
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const submitSpinner = document.getElementById('submit-spinner');
    const formError = document.getElementById('form-error');
    const formSuccess = document.getElementById('form-success');

    // Estilos de radio buttons
    document.querySelectorAll('.reason-option').forEach(label => {
      const radio = label.querySelector('input[type="radio"]');
      radio?.addEventListener('change', () => {
        // Reset all
        document.querySelectorAll('.reason-option').forEach(l => {
          l.classList.remove('border-gold-matte', 'bg-cream/30');
          l.classList.add('border-charcoal-200');
          const checkIcon = l.querySelector('svg');
          if (checkIcon) checkIcon.classList.add('hidden');
          const dot = l.querySelector('.peer-checked\\:border-gold-matte')?.parentElement || l.querySelector('div:last-child');
        });
        // Active state
        label.classList.remove('border-charcoal-200');
        label.classList.add('border-gold-matte', 'bg-cream/30');
        const checkIcon = label.querySelector('div:last-child svg');
        if (checkIcon) checkIcon.classList.remove('hidden');
      });
    });

    // Submit
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const reason = formData.get('reason');
      const description = formData.get('description');

      if (!reason) {
        formError.textContent = 'Por favor, selecciona un motivo para la devoluciÃ³n.';
        formError.classList.remove('hidden');
        formSuccess.classList.add('hidden');
        return;
      }

      // Disable button
      submitBtn.disabled = true;
      submitText.textContent = 'Enviando solicitud...';
      submitSpinner.classList.remove('hidden');
      formError.classList.add('hidden');
      formSuccess.classList.add('hidden');

      try {
        const response = await fetch('/api/returns/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            order_id: orderId,
            reason,
            description: description || '',
          }),
        });

        const data = await response.json();

        if (!response.ok || !data.success) {
          throw new Error(data.error || 'Error al crear la solicitud');
        }

        // Ã‰xito
        formSuccess.innerHTML = `
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-green-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="font-semibold">Â¡Solicitud enviada correctamente!</p>
              <p class="mt-1">Tu devoluciÃ³n <strong>${data.return_number || ''}</strong> ha sido registrada. RecibirÃ¡s un correo cuando sea revisada por nuestro equipo.</p>
            </div>
          </div>
        `;
        formSuccess.classList.remove('hidden');
        
        // Hide form fields
        document.getElementById('reason-options')?.closest('.space-y-6')?.querySelectorAll(':scope > *:not(#form-success):not(.flex.flex-col)').forEach(el => {
          el.style.display = 'none';
        });

        // Change button to redirect
        submitBtn.disabled = false;
        submitText.textContent = 'Ver mis devoluciones';
        submitSpinner.classList.add('hidden');
        submitBtn.onclick = (e) => {
          e.preventDefault();
          window.location.href = '/cuenta/devoluciones';
        };

      } catch (error) {
        formError.textContent = error.message || 'Error inesperado al enviar la solicitud.';
        formError.classList.remove('hidden');
        submitBtn.disabled = false;
        submitText.textContent = 'Solicitar devoluciÃ³n';
        submitSpinner.classList.add('hidden');
      }
    });
  </script>
