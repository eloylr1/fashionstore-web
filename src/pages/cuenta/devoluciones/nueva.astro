 */

export const prerender = false;

import BaseLayout from '../../../layouts/BaseLayout.astro';
import { supabase } from '../../../lib/supabase/client';

// Verificar autenticaciÃ³n
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (!accessToken || !refreshToken || !supabase) {
  return Astro.redirect('/login?redirect=/cuenta/devoluciones');
}

const sb = supabase as any;

const { data: sessionData, error: sessionError } = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (sessionError || !sessionData.user) {
  return Astro.redirect('/login?redirect=/cuenta/devoluciones');
}

const user = sessionData.user;

// Escribir tokens actualizados en cookies (por si se refrescaron)
if (sessionData.session) {
  const maxAge = 60 * 60 * 24 * 7; // 7 dÃ­as
  Astro.cookies.set('sb-access-token', sessionData.session.access_token, {
    path: '/',
    maxAge,
    sameSite: 'lax',
    httpOnly: false,
  });
  Astro.cookies.set('sb-refresh-token', sessionData.session.refresh_token, {
    path: '/',
    maxAge,
    sameSite: 'lax',
    httpOnly: false,
  });
}

// Obtener order_id desde query params
const orderId = Astro.url.searchParams.get('order');

if (!orderId) {
  return Astro.redirect('/cuenta/devoluciones');
}

// Verificar que el pedido existe, pertenece al usuario y es elegible
const { data: order, error: orderError } = await sb
  .from('orders')
  .select('*')
  .eq('id', orderId)
  .eq('user_id', user.id)
  .single();

if (orderError || !order) {
  return Astro.redirect('/cuenta/devoluciones');
}

if (order.status !== 'delivered') {
  return Astro.redirect(`/cuenta/pedidos/${orderId}`);
}

// Verificar plazo de 30 dÃ­as
const thirtyDaysAgo = new Date();
thirtyDaysAgo.setDate(thirtyDaysAgo.getDate() - 30);
if (order.delivered_at && new Date(order.delivered_at) < thirtyDaysAgo) {
  return Astro.redirect('/cuenta/devoluciones');
}

// Verificar que no exista una devoluciÃ³n activa
const { data: existingReturn } = await sb
  .from('returns')
  .select('id, status')
  .eq('order_id', orderId)
  .not('status', 'eq', 'rejected')
  .limit(1);

const hasActiveReturn = existingReturn && existingReturn.length > 0;

// Obtener items del pedido
const { data: orderItems } = await sb
  .from('order_items')
  .select(`
    *,
    product:products(name, slug, images)
  `)
  .eq('order_id', orderId);

const formatPrice = (cents: number) => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR',
  }).format(cents / 100);
};

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  });
};

const reasonOptions = [
  { value: 'wrong_size', label: 'Talla incorrecta', icon: 'ğŸ“' },
  { value: 'defective', label: 'Producto defectuoso', icon: 'ğŸ”§' },
  { value: 'not_as_described', label: 'No coincide con la descripciÃ³n', icon: 'ğŸ“¦' },
  { value: 'changed_mind', label: 'He cambiado de opiniÃ³n', icon: 'ğŸ’­' },
  { value: 'other', label: 'Otro motivo', icon: 'ğŸ“' },
];
