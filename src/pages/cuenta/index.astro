---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Mi Cuenta (Dashboard del Cliente)
 * Panel principal de la cuenta del usuario
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase } from '../../lib/supabase/client';

interface Profile {
  id: string;
  email: string;
  full_name: string | null;
  phone: string | null;
  role: string;
  avatar_url: string | null;
}

// Verificar si el usuario está autenticado
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (!accessToken || !refreshToken || !supabase) {
  return Astro.redirect('/login?redirect=/cuenta');
}

const sb = supabase as any;

// Establecer sesión
const { data: sessionData, error: sessionError } = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (sessionError || !sessionData.user) {
  Astro.cookies.delete('sb-access-token', { path: '/' });
  Astro.cookies.delete('sb-refresh-token', { path: '/' });
  return Astro.redirect('/login?redirect=/cuenta');
}

const user = sessionData.user;

// Obtener perfil del usuario
const { data: profile } = await sb
  .from('profiles')
  .select('*')
  .eq('id', user.id)
  .single() as { data: Profile | null };

// Obtener pedidos recientes
const { data: recentOrders } = await sb
  .from('orders')
  .select('*')
  .eq('user_id', user.id)
  .order('created_at', { ascending: false })
  .limit(3);

// Obtener direcciones
const { data: addresses } = await sb
  .from('addresses')
  .select('*')
  .eq('user_id', user.id)
  .limit(1);

const menuItems = [
  { 
    icon: 'user', 
    label: 'Mi Perfil', 
    href: '/cuenta/perfil',
    description: 'Edita tu información personal'
  },
  { 
    icon: 'package', 
    label: 'Mis Pedidos', 
    href: '/cuenta/pedidos',
    description: 'Historial y seguimiento de pedidos'
  },
  { 
    icon: 'file-text', 
    label: 'Facturas', 
    href: '/cuenta/facturas',
    description: 'Descarga tus facturas de compra'
  },
  { 
    icon: 'map-pin', 
    label: 'Direcciones', 
    href: '/cuenta/direcciones',
    description: 'Gestiona tus direcciones de envío'
  },
  { 
    icon: 'credit-card', 
    label: 'Métodos de Pago', 
    href: '/cuenta/pagos',
    description: 'Tarjetas y métodos guardados'
  },
  { 
    icon: 'refresh', 
    label: 'Devoluciones', 
    href: '/cuenta/devoluciones',
    description: 'Solicita y gestiona devoluciones'
  },
  { 
    icon: 'heart', 
    label: 'Lista de Deseos', 
    href: '/cuenta/favoritos',
    description: 'Productos guardados'
  },
  { 
    icon: 'settings', 
    label: 'Configuración', 
    href: '/cuenta/configuracion',
    description: 'Preferencias y seguridad'
  },
];

const getStatusColor = (status: string) => {
  const colors: Record<string, string> = {
    pending: 'bg-yellow-100 text-yellow-800',
    paid: 'bg-blue-100 text-blue-800',
    processing: 'bg-purple-100 text-purple-800',
    shipped: 'bg-indigo-100 text-indigo-800',
    delivered: 'bg-green-100 text-green-800',
    cancelled: 'bg-red-100 text-red-800',
    refunded: 'bg-gray-100 text-gray-800',
  };
  return colors[status] || 'bg-gray-100 text-gray-800';
};

const getStatusLabel = (status: string) => {
  const labels: Record<string, string> = {
    pending: 'Pendiente',
    paid: 'Pagado',
    processing: 'En preparación',
    shipped: 'Enviado',
    delivered: 'Entregado',
    cancelled: 'Cancelado',
    refunded: 'Reembolsado',
  };
  return labels[status] || status;
};

const formatPrice = (cents: number) => {
  return new Intl.NumberFormat('es-ES', {
    style: 'currency',
    currency: 'EUR',
  }).format(cents / 100);
};

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
  });
};
---

<BaseLayout title="Mi Cuenta | FashionMarket">
  <main class="min-h-screen bg-cream py-8 lg:py-12">
    <div class="container-custom">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center gap-2 text-sm text-charcoal-500">
          <li><a href="/" class="hover:text-navy-900 transition-colors">Inicio</a></li>
          <li>/</li>
          <li class="text-navy-900 font-medium">Mi Cuenta</li>
        </ol>
      </nav>

      <!-- Header -->
      <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
          <div class="w-16 h-16 bg-navy-900 rounded-full flex items-center justify-center text-white text-2xl font-serif">
            {profile?.full_name ? profile.full_name.charAt(0).toUpperCase() : user.email?.charAt(0).toUpperCase()}
          </div>
          <div class="flex-1">
            <h1 class="text-2xl font-serif text-navy-900">
              ¡Hola, {profile?.full_name || 'Usuario'}!
            </h1>
            <p class="text-charcoal-500">{user.email}</p>
          </div>
          <button 
            type="button"
            onclick="window.location.href='/api/auth/logout'"
            class="px-4 py-2 text-sm border border-charcoal-300 rounded-md hover:bg-charcoal-50 transition-colors"
          >
            Cerrar sesión
          </button>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Menu de navegación -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <nav class="divide-y divide-charcoal-100">
              {menuItems.map((item) => (
                <a 
                  href={item.href}
                  class="flex items-center gap-4 p-4 hover:bg-cream transition-colors group"
                >
                  <div class="w-10 h-10 bg-cream rounded-lg flex items-center justify-center group-hover:bg-gold-matte/20 transition-colors">
                    {item.icon === 'user' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    )}
                    {item.icon === 'package' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                      </svg>
                    )}
                    {item.icon === 'file-text' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    )}
                    {item.icon === 'map-pin' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    )}
                    {item.icon === 'credit-card' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                      </svg>
                    )}
                    {item.icon === 'refresh' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                      </svg>
                    )}
                    {item.icon === 'heart' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                      </svg>
                    )}
                    {item.icon === 'settings' && (
                      <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    )}
                  </div>
                  <div class="flex-1">
                    <span class="font-medium text-navy-900">{item.label}</span>
                    <p class="text-xs text-charcoal-500">{item.description}</p>
                  </div>
                  <svg class="w-5 h-5 text-charcoal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              ))}
            </nav>
          </div>
        </div>

        <!-- Contenido principal -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Resumen rápido -->
          <div class="grid sm:grid-cols-3 gap-4">
            <div class="bg-white rounded-lg shadow-sm p-4 text-center">
              <div class="text-3xl font-serif text-navy-900">{recentOrders?.length || 0}</div>
              <div class="text-sm text-charcoal-500">Pedidos totales</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-4 text-center">
              <div class="text-3xl font-serif text-navy-900">{addresses?.length || 0}</div>
              <div class="text-sm text-charcoal-500">Direcciones</div>
            </div>
            <div class="bg-white rounded-lg shadow-sm p-4 text-center">
              <div class="text-3xl font-serif text-navy-900">0</div>
              <div class="text-sm text-charcoal-500">En lista de deseos</div>
            </div>
          </div>

          <!-- Pedidos recientes -->
          <div class="bg-white rounded-lg shadow-sm">
            <div class="p-4 border-b border-charcoal-100 flex items-center justify-between">
              <h2 class="text-lg font-serif text-navy-900">Pedidos Recientes</h2>
              <a href="/cuenta/pedidos" class="text-sm text-gold-matte hover:text-gold-dark transition-colors">
                Ver todos →
              </a>
            </div>
            
            {(!recentOrders || recentOrders.length === 0) ? (
              <div class="p-8 text-center">
                <svg class="w-16 h-16 mx-auto text-charcoal-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
                <p class="text-charcoal-500 mb-4">Aún no tienes pedidos</p>
                <a 
                  href="/tienda" 
                  class="inline-flex items-center gap-2 px-6 py-3 bg-navy-900 text-white rounded-md hover:bg-navy-800 transition-colors"
                >
                  Explorar tienda
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </div>
            ) : (
              <div class="divide-y divide-charcoal-100">
                {recentOrders.map((order: any) => (
                  <a 
                    href={`/cuenta/pedidos/${order.id}`}
                    class="flex items-center justify-between p-4 hover:bg-cream/50 transition-colors"
                  >
                    <div>
                      <span class="font-medium text-navy-900">{order.order_number}</span>
                      <p class="text-sm text-charcoal-500">{formatDate(order.created_at)}</p>
                    </div>
                    <div class="text-right">
                      <span class={`inline-block px-2 py-1 text-xs rounded-full ${getStatusColor(order.status)}`}>
                        {getStatusLabel(order.status)}
                      </span>
                      <p class="text-sm font-medium text-navy-900 mt-1">{formatPrice(order.total)}</p>
                    </div>
                  </a>
                ))}
              </div>
            )}
          </div>

          <!-- Acciones rápidas -->
          <div class="bg-white rounded-lg shadow-sm p-4">
            <h2 class="text-lg font-serif text-navy-900 mb-4">Acciones Rápidas</h2>
            <div class="grid sm:grid-cols-2 gap-4">
              <a 
                href="/cuenta/perfil"
                class="flex items-center gap-3 p-4 border border-charcoal-200 rounded-lg hover:border-gold-matte hover:bg-cream/50 transition-all"
              >
                <svg class="w-8 h-8 text-gold-matte" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                <div>
                  <span class="font-medium text-navy-900">Editar Perfil</span>
                  <p class="text-xs text-charcoal-500">Actualiza tu información</p>
                </div>
              </a>
              <a 
                href="/cuenta/direcciones"
                class="flex items-center gap-3 p-4 border border-charcoal-200 rounded-lg hover:border-gold-matte hover:bg-cream/50 transition-all"
              >
                <svg class="w-8 h-8 text-gold-matte" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
                </svg>
                <div>
                  <span class="font-medium text-navy-900">Añadir Dirección</span>
                  <p class="text-xs text-charcoal-500">Nueva dirección de envío</p>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
