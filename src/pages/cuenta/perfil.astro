---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Mi Perfil
 * Página para editar información personal del usuario
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase } from '../../lib/supabase/client';

interface Profile {
  id: string;
  email: string;
  full_name: string | null;
  phone: string | null;
  role: string;
}

// Verificar autenticación
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (!accessToken || !refreshToken || !supabase) {
  return Astro.redirect('/login?redirect=/cuenta/perfil');
}

const { data: sessionData, error: sessionError } = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (sessionError || !sessionData.user) {
  return Astro.redirect('/login?redirect=/cuenta/perfil');
}

const user = sessionData.user;

// Obtener perfil de la base de datos
let { data: profile, error: profileError } = await (supabase as any)
  .from('profiles')
  .select('*')
  .eq('id', user.id)
  .single() as { data: Profile | null; error: any };

// Manejar actualización del perfil
let successMessage = '';
let errorMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const fullName = formData.get('full_name')?.toString() || '';
    const phone = formData.get('phone')?.toString() || '';

    // Actualizar perfil en la base de datos
    const { error: updateError } = await (supabase as any)
      .from('profiles')
      .update({
        full_name: fullName,
        phone: phone,
        updated_at: new Date().toISOString()
      })
      .eq('id', user.id);

    if (updateError) {
      console.error('Error actualizando perfil:', updateError);
      errorMessage = `Error al actualizar el perfil: ${updateError.message}`;
    } else {
      successMessage = 'Perfil actualizado correctamente';
      // Actualizar datos locales
      if (profile) {
        profile.full_name = fullName;
        profile.phone = phone;
      }
    }
  } catch (error) {
    console.error('Error en actualización:', error);
    errorMessage = 'Error inesperado al procesar la solicitud';
  }
}
---

<BaseLayout title="Mi Perfil | FashionMarket">
  <main class="min-h-screen bg-cream py-8 lg:py-12">
    <div class="container-custom max-w-3xl">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center gap-2 text-sm text-charcoal-500">
          <li><a href="/" class="hover:text-navy-900 transition-colors">Inicio</a></li>
          <li>/</li>
          <li><a href="/cuenta" class="hover:text-navy-900 transition-colors">Mi Cuenta</a></li>
          <li>/</li>
          <li class="text-navy-900 font-medium">Mi Perfil</li>
        </ol>
      </nav>

      <div class="bg-white rounded-lg shadow-sm">
        <!-- Header -->
        <div class="p-6 border-b border-charcoal-100">
          <h1 class="text-2xl font-serif text-navy-900">Mi Perfil</h1>
          <p class="text-charcoal-500 mt-1">Gestiona tu información personal</p>
        </div>

        <!-- Formulario -->
        <form method="POST" class="p-6 space-y-6">
          {successMessage && (
            <div class="p-4 bg-green-50 border border-green-200 rounded-lg text-green-700">
              {successMessage}
            </div>
          )}

          {errorMessage && (
            <div class="p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
              {errorMessage}
            </div>
          )}

          <!-- Avatar -->
          <div class="flex items-center gap-6">
            <div class="w-20 h-20 bg-navy-900 rounded-full flex items-center justify-center text-white text-3xl font-serif">
              {profile?.full_name ? profile.full_name.charAt(0).toUpperCase() : user.email?.charAt(0).toUpperCase()}
            </div>
            <div>
              <h3 class="font-medium text-navy-900">Foto de perfil</h3>
              <p class="text-sm text-charcoal-500 mb-2">JPG, PNG. Máximo 2MB</p>
              <button type="button" class="text-sm text-gold-matte hover:text-gold-dark transition-colors">
                Cambiar foto
              </button>
            </div>
          </div>

          <div class="grid sm:grid-cols-2 gap-6">
            <!-- Nombre completo -->
            <div class="sm:col-span-2">
              <label for="full_name" class="block text-sm font-medium text-navy-900 mb-2">
                Nombre completo
              </label>
              <input
                type="text"
                id="full_name"
                name="full_name"
                value={profile?.full_name || ''}
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gold-matte focus:border-transparent transition-all"
                placeholder="Tu nombre completo"
              />
            </div>

            <!-- Email (solo lectura) -->
            <div>
              <label for="email" class="block text-sm font-medium text-navy-900 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                value={user.email}
                disabled
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg bg-charcoal-50 text-charcoal-500 cursor-not-allowed"
              />
              <p class="text-xs text-charcoal-500 mt-1">El email no se puede cambiar</p>
            </div>

            <!-- Teléfono -->
            <div>
              <label for="phone" class="block text-sm font-medium text-navy-900 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                value={profile?.phone || ''}
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gold-matte focus:border-transparent transition-all"
                placeholder="+34 600 000 000"
              />
            </div>
          </div>

          <!-- Botones -->
          <div class="flex items-center justify-between pt-4 border-t border-charcoal-100">
            <a 
              href="/cuenta" 
              class="text-charcoal-600 hover:text-navy-900 transition-colors"
            >
              ← Volver a Mi Cuenta
            </a>
            <button
              type="submit"
              class="px-6 py-3 bg-navy-900 text-white rounded-lg hover:bg-navy-800 transition-colors font-medium"
            >
              Guardar cambios
            </button>
          </div>
        </form>
      </div>

      <!-- Sección de seguridad -->
      <div class="bg-white rounded-lg shadow-sm mt-6">
        <div class="p-6 border-b border-charcoal-100">
          <h2 class="text-lg font-serif text-navy-900">Seguridad</h2>
          <p class="text-charcoal-500 text-sm mt-1">Gestiona tu contraseña y seguridad</p>
        </div>
        <div class="p-6">
          <a 
            href="/cuenta/configuracion"
            class="inline-flex items-center gap-2 px-4 py-2 border border-charcoal-200 rounded-lg hover:bg-charcoal-50 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Cambiar contraseña
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
