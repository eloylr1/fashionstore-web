---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Mi Perfil
 * Página para editar información personal del usuario
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { supabase } from '../../lib/supabase/client';

interface Profile {
  id: string;
  email: string;
  full_name: string | null;
  phone: string | null;
  role: string;
}

// Verificar autenticación
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;

if (!accessToken || !refreshToken || !supabase) {
  return Astro.redirect('/login?redirect=/cuenta/perfil');
}

const { data: sessionData, error: sessionError } = await supabase.auth.setSession({
  access_token: accessToken,
  refresh_token: refreshToken,
});

if (sessionError || !sessionData.user) {
  return Astro.redirect('/login?redirect=/cuenta/perfil');
}

const user = sessionData.user;

// Obtener perfil de la base de datos
let { data: profile, error: profileError } = await (supabase as any)
  .from('profiles')
  .select('*')
  .eq('id', user.id)
  .single() as { data: Profile | null; error: any };

// Manejar actualización del perfil
let successMessage = '';
let errorMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const fullName = formData.get('full_name')?.toString() || '';
    const phone = formData.get('phone')?.toString() || '';

    // Actualizar perfil en la base de datos
    const { error: updateError } = await (supabase as any)
      .from('profiles')
      .update({
        full_name: fullName,
        phone: phone,
        updated_at: new Date().toISOString()
      })
      .eq('id', user.id);

    if (updateError) {
      console.error('Error actualizando perfil:', updateError);
      errorMessage = `Error al actualizar el perfil: ${updateError.message}`;
    } else {
      successMessage = 'Perfil actualizado correctamente';
      // Actualizar datos locales
      if (profile) {
        profile.full_name = fullName;
        profile.phone = phone;
      }
    }
  } catch (error) {
    console.error('Error en actualización:', error);
    errorMessage = 'Error inesperado al procesar la solicitud';
  }
}
---

<BaseLayout title="Mi Perfil | FashionMarket">
  <main class="min-h-screen bg-cream py-8 lg:py-12">
    <div class="container-custom max-w-3xl">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center gap-2 text-sm text-charcoal-500">
          <li><a href="/" class="hover:text-navy-900 transition-colors">Inicio</a></li>
          <li>/</li>
          <li><a href="/cuenta" class="hover:text-navy-900 transition-colors">Mi Cuenta</a></li>
          <li>/</li>
          <li class="text-navy-900 font-medium">Mi Perfil</li>
        </ol>
      </nav>

      <div class="bg-white rounded-lg shadow-sm">
        <!-- Header -->
        <div class="p-6 border-b border-charcoal-100">
          <h1 class="text-2xl font-serif text-navy-900">Mi Perfil</h1>
          <p class="text-charcoal-500 mt-1">Gestiona tu información personal</p>
        </div>

        <!-- Formulario -->
        <form method="POST" class="p-6 space-y-6">
          {successMessage && (
            <div class="p-4 bg-green-50 border border-green-200 rounded-lg text-green-700">
              {successMessage}
            </div>
          )}

          {errorMessage && (
            <div class="p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
              {errorMessage}
            </div>
          )}

          <!-- Avatar -->
          <div class="flex items-center gap-6">
            <div class="w-20 h-20 bg-navy-900 rounded-full flex items-center justify-center text-white text-3xl font-serif">
              {profile?.full_name ? profile.full_name.charAt(0).toUpperCase() : user.email?.charAt(0).toUpperCase()}
            </div>
            <div>
              <h3 class="font-medium text-navy-900">{profile?.full_name || 'Usuario'}</h3>
              <p class="text-sm text-charcoal-500">{user.email}</p>
            </div>
          </div>

          <div class="grid sm:grid-cols-2 gap-6">
            <!-- Nombre completo -->
            <div class="sm:col-span-2">
              <label for="full_name" class="block text-sm font-medium text-navy-900 mb-2">
                Nombre completo
              </label>
              <input
                type="text"
                id="full_name"
                name="full_name"
                value={profile?.full_name || ''}
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gold-matte focus:border-transparent transition-all"
                placeholder="Tu nombre completo"
              />
            </div>

            <!-- Email (solo lectura) -->
            <div>
              <label for="email" class="block text-sm font-medium text-navy-900 mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                value={user.email}
                disabled
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg bg-charcoal-50 text-charcoal-500 cursor-not-allowed"
              />
              <p class="text-xs text-charcoal-500 mt-1">El email no se puede cambiar</p>
            </div>

            <!-- Teléfono -->
            <div>
              <label for="phone" class="block text-sm font-medium text-navy-900 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                value={profile?.phone || ''}
                class="w-full px-4 py-3 border border-charcoal-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-gold-matte focus:border-transparent transition-all"
                placeholder="+34 600 000 000"
              />
            </div>
          </div>

          <!-- Botones -->
          <div class="flex items-center justify-between pt-4 border-t border-charcoal-100">
            <a 
              href="/cuenta" 
              class="text-charcoal-600 hover:text-navy-900 transition-colors"
            >
              ← Volver a Mi Cuenta
            </a>
            <button
              type="submit"
              class="px-6 py-3 bg-navy-900 text-white rounded-lg hover:bg-navy-800 transition-colors font-medium"
            >
              Guardar cambios
            </button>
          </div>
        </form>
      </div>

      <!-- Sección de Cambio de Contraseña (Flujo profesional por email) -->
      <div class="bg-white rounded-lg shadow-sm mt-6" id="change-password-section">
        <div class="p-6 border-b border-charcoal-100">
          <h2 class="text-lg font-serif text-navy-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-navy-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Cambiar Contraseña
          </h2>
          <p class="text-charcoal-500 text-sm mt-1">Solicita un enlace seguro para cambiar tu contraseña</p>
        </div>
        
        <div class="p-6">
          <!-- Estado inicial: Botón para solicitar -->
          <div id="request-state">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-5">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <p class="text-sm text-blue-800 font-medium">¿Cómo funciona?</p>
                  <p class="text-sm text-blue-700 mt-1">
                    Te enviaremos un email a <strong>{user.email}</strong> con un enlace seguro. 
                    Al hacer clic en él, podrás establecer tu nueva contraseña.
                  </p>
                </div>
              </div>
            </div>

            <!-- Mensaje de estado -->
            <div id="password-message" class="hidden p-4 rounded-lg text-sm mb-5"></div>

            <button
              type="button"
              id="request-reset-btn"
              class="w-full sm:w-auto px-6 py-3 bg-navy-900 text-white rounded-lg hover:bg-navy-800 transition-colors font-medium disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span id="btn-text">Enviar enlace de cambio de contraseña</span>
              <svg id="btn-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </div>

          <!-- Estado de éxito: Email enviado -->
          <div id="success-state" class="hidden">
            <div class="bg-green-50 border border-green-200 rounded-lg p-6 text-center">
              <div class="w-14 h-14 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76" />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-green-800 mb-2">¡Email enviado!</h3>
              <p class="text-green-700 text-sm mb-4">
                Hemos enviado un enlace a <strong id="sent-email">{user.email}</strong>.<br/>
                Revisa tu bandeja de entrada y haz clic en el enlace para cambiar tu contraseña.
              </p>
              <p class="text-green-600 text-xs">
                Si no lo ves, revisa tu carpeta de spam. El enlace expira en 24 horas.
              </p>
              <button
                type="button"
                id="resend-btn"
                class="mt-4 text-sm text-green-700 hover:text-green-900 underline"
              >
                ¿No recibiste el email? Reenviar
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Elements
    const requestState = document.getElementById('request-state');
    const successState = document.getElementById('success-state');
    const requestResetBtn = document.getElementById('request-reset-btn');
    const resendBtn = document.getElementById('resend-btn');
    const passwordMessage = document.getElementById('password-message');
    const btnText = document.getElementById('btn-text');
    const btnSpinner = document.getElementById('btn-spinner');

    // Show message
    function showMessage(message: string, type: 'success' | 'error') {
      if (!passwordMessage) return;
      
      passwordMessage.textContent = message;
      passwordMessage.classList.remove('hidden', 'bg-green-50', 'border-green-200', 'text-green-700', 'bg-red-50', 'border-red-200', 'text-red-700');
      
      if (type === 'success') {
        passwordMessage.classList.add('bg-green-50', 'border', 'border-green-200', 'text-green-700');
      } else {
        passwordMessage.classList.add('bg-red-50', 'border', 'border-red-200', 'text-red-700');
      }
    }

    // Request password reset
    async function requestPasswordReset() {
      // Set loading state
      if (requestResetBtn) {
        (requestResetBtn as HTMLButtonElement).disabled = true;
      }
      if (btnText) {
        btnText.textContent = 'Enviando...';
      }
      btnSpinner?.classList.remove('hidden');

      try {
        const response = await fetch('/api/auth/request-password-reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Error al enviar el email');
        }

        // Show success state
        requestState?.classList.add('hidden');
        successState?.classList.remove('hidden');
      } catch (error: any) {
        showMessage(error.message || 'Error inesperado. Inténtalo de nuevo.', 'error');
        
        // Reset button
        if (requestResetBtn) {
          (requestResetBtn as HTMLButtonElement).disabled = false;
        }
        if (btnText) {
          btnText.textContent = 'Enviar enlace de cambio de contraseña';
        }
        btnSpinner?.classList.add('hidden');
      }
    }

    // Event listeners
    requestResetBtn?.addEventListener('click', requestPasswordReset);
    resendBtn?.addEventListener('click', () => {
      // Show request state again
      successState?.classList.add('hidden');
      requestState?.classList.remove('hidden');
      
      // Reset button state
      if (requestResetBtn) {
        (requestResetBtn as HTMLButtonElement).disabled = false;
      }
      if (btnText) {
        btnText.textContent = 'Enviar enlace de cambio de contraseña';
      }
      btnSpinner?.classList.add('hidden');
      
      // Trigger new request
      requestPasswordReset();
    });
  </script>
</BaseLayout>
