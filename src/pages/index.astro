---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Homepage
 * Página principal de la tienda - Diseño Premium (SSR para Header dinámico)
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/product/ProductCard.astro';
import { supabase, isSupabaseConfigured } from '../lib/supabase/client';

// Datos de demostración cuando Supabase no está configurado
const demoCategories = [
  { id: '1', name: 'Trajes', slug: 'trajes', image_url: 'https://images.unsplash.com/photo-1594938298603-c8148c4dae35?w=800&q=80', description: 'Trajes de vestir premium' },
  { id: '2', name: 'Camisas', slug: 'camisas', image_url: 'https://images.unsplash.com/photo-1596755094514-f87e34085b2c?w=800&q=80', description: 'Camisas de alta calidad' },
  { id: '3', name: 'Pantalones', slug: 'pantalones', image_url: 'https://images.unsplash.com/photo-1473966968600-fa801b869a1a?w=800&q=80', description: 'Pantalones elegantes y casuales' },
  { id: '4', name: 'Accesorios', slug: 'accesorios', image_url: 'https://images.unsplash.com/photo-1624222247344-550fb60583dc?w=800&q=80', description: 'Complementos elegantes' },
];

const demoProducts = [
  { id: '1', name: 'Traje Italiano Slim Fit', slug: 'traje-italiano-slim-fit', price: 59900, images: ['https://images.unsplash.com/photo-1594938298603-c8148c4dae35?w=600&q=80'], category_id: '1', featured: true, stock: 10, sizes: ['S','M','L','XL'], colors: ['Navy', 'Charcoal'], description: 'Traje de corte italiano', material: 'Lana 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString() },
  { id: '2', name: 'Camisa Oxford Premium', slug: 'camisa-oxford-premium', price: 8900, images: ['https://images.unsplash.com/photo-1596755094514-f87e34085b2c?w=600&q=80'], category_id: '2', featured: true, stock: 25, sizes: ['S','M','L','XL'], colors: ['White', 'Light Blue'], description: 'Camisa oxford clásica', material: 'Algodón 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString() },
  { id: '3', name: 'Pantalón Chino Slim', slug: 'pantalon-chino-slim', price: 7900, images: ['https://images.unsplash.com/photo-1473966968600-fa801b869a1a?w=600&q=80'], category_id: '3', featured: true, stock: 30, sizes: ['S','M','L','XL','XXL'], colors: ['Beige', 'Navy'], description: 'Pantalón chino elegante', material: 'Algodón 98%, Elastano 2%', created_at: new Date().toISOString(), updated_at: new Date().toISOString() },
  { id: '4', name: 'Blazer Casual de Lino', slug: 'blazer-casual-lino', price: 29900, images: ['https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=600&q=80'], category_id: '1', featured: true, stock: 15, sizes: ['S','M','L','XL'], colors: ['Beige', 'Navy'], description: 'Blazer de verano', material: 'Lino 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString() },
];

// Obtener datos reales si Supabase está configurado
let featuredProducts = demoProducts;
let categories = demoCategories;

if (isSupabaseConfigured() && supabase) {
  const { data: realProducts } = await supabase
    .from('products')
    .select('*')
    .eq('featured', true)
    .order('created_at', { ascending: false })
    .limit(8);
  
  const { data: realCategories } = await supabase
    .from('categories')
    .select('*')
    .order('name');
  
  if (realProducts?.length) featuredProducts = realProducts as typeof featuredProducts;
  if (realCategories?.length) categories = realCategories as typeof categories;
}

// Verificar si el usuario está logueado
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const isLoggedIn = Boolean(accessToken);

import NewsletterPopup from '../components/newsletter/NewsletterPopup';
import OffersPopup from '../components/offers/OffersPopup';
import WelcomePopup from '../components/promotions/WelcomePopup';
import NewsletterSuccessPopup from '../components/promotions/NewsletterSuccessPopup';
import HeroCarousel from '../components/home/HeroCarousel';
---

<BaseLayout title="Moda Masculina Premium">
  <!-- Welcome Popup para nuevos visitantes (solo si no está logueado) -->
  <WelcomePopup client:load isLoggedIn={isLoggedIn} />
  
  <!-- Newsletter Success Popup (después de registro) -->
  <NewsletterSuccessPopup client:load />
  
  <!-- Offers Popup (aparece primero) -->
  <OffersPopup client:load />
  
  <!-- Newsletter Popup (aparece después si no se ha suscrito) -->
  <NewsletterPopup client:load />
  
  <!-- Hero Carousel - Pantalla completa con transiciones automáticas -->
  <HeroCarousel client:load />

  <!-- Brand Statement -->
  <section class="py-24" style="background-color: #0a1628;">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-sm font-medium tracking-[0.3em] uppercase mb-8" style="color: #b8a067;">FashionMarket</p>
        <h2 class="font-serif text-3xl sm:text-4xl lg:text-5xl font-medium leading-tight mb-10" style="color: #ffffff !important;">
          "La verdadera elegancia está en los detalles. Cada pieza cuenta una historia de 
          artesanía y distinción."
        </h2>
        <div class="flex flex-wrap items-center justify-center gap-10 text-sm" style="color: #e0e0e0;">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Materiales Premium
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Diseño Exclusivo
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Envío Gratuito
          </span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Categories Section - Diseño Profesional -->
  <section class="py-28 bg-white">
    <div class="container-custom">
      <!-- Header elegante y minimalista -->
      <div class="text-center mb-16">
        <span class="text-sm font-medium tracking-[0.3em] uppercase mb-4 block" style="color: #b8a067;">Colecciones</span>
        <h2 class="font-serif text-4xl lg:text-5xl font-medium mb-4" style="color: #0a1628;">
          Nuestras Categorías
        </h2>
        <p class="text-lg max-w-xl mx-auto" style="color: #6b6b6b;">
          Descubre piezas cuidadosamente seleccionadas para el hombre moderno
        </p>
      </div>

      <!-- Grid de 3 columnas iguales -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
        <!-- Camisas -->
        <a href="/categoria/camisas" class="group relative aspect-[3/4] overflow-hidden" style="background-color: #ebebeb;">
          <img 
            src="https://images.unsplash.com/photo-1596755094514-f87e34085b2c?w=600&q=80"
            alt="Camisas"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <h3 class="font-serif text-3xl mb-2 transition-colors" style="color: #ffffff; text-shadow: 0 2px 8px rgba(0,0,0,0.6);">
              Camisas
            </h3>
            <p class="text-sm mb-4" style="color: rgba(255,255,255,0.85);">Oxford, Lino & Vestir</p>
            <span class="inline-flex items-center gap-2 text-sm font-medium group-hover:gap-4 transition-all" style="color: #ffffff;">
              Ver colección
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>

        <!-- Pantalones -->
        <a href="/categoria/pantalones" class="group relative aspect-[3/4] overflow-hidden" style="background-color: #ebebeb;">
          <img 
            src="https://images.unsplash.com/photo-1473966968600-fa801b869a1a?w=600&q=80"
            alt="Pantalones"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <h3 class="font-serif text-3xl mb-2 transition-colors" style="color: #ffffff; text-shadow: 0 2px 8px rgba(0,0,0,0.6);">
              Pantalones
            </h3>
            <p class="text-sm mb-4" style="color: rgba(255,255,255,0.85);">Chinos, Vestir & Casual</p>
            <span class="inline-flex items-center gap-2 text-sm font-medium group-hover:gap-4 transition-all" style="color: #ffffff;">
              Ver colección
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>

        <!-- Trajes -->
        <a href="/categoria/trajes" class="group relative aspect-[3/4] overflow-hidden" style="background-color: #ebebeb;">
          <img 
            src="https://images.unsplash.com/photo-1594938298603-c8148c4dae35?w=600&q=80"
            alt="Trajes"
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          <div class="absolute bottom-0 left-0 right-0 p-8">
            <h3 class="font-serif text-3xl mb-2 transition-colors" style="color: #ffffff; text-shadow: 0 2px 8px rgba(0,0,0,0.6);">
              Trajes
            </h3>
            <p class="text-sm mb-4" style="color: rgba(255,255,255,0.85);">Slim Fit & Clásicos</p>
            <span class="inline-flex items-center gap-2 text-sm font-medium group-hover:gap-4 transition-all" style="color: #ffffff;">
              Ver colección
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </span>
          </div>
        </a>
      </div>

      <!-- CTA final -->
      <div class="text-center mt-16">
        <a href="/tienda" class="inline-flex items-center gap-3 px-8 py-4 font-medium transition-all duration-300 hover:opacity-90" style="background-color: #0a1628; color: #ffffff;">
          Ver todas las categorías
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Beneficios - Diseño limpio -->
  <section class="py-16" style="background-color: #f5f3ef; border-top: 1px solid #ebebeb; border-bottom: 1px solid #ebebeb;">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
        <div>
          <div class="w-14 h-14 flex items-center justify-center mx-auto mb-5" style="background-color: #0a1628; color: #ffffff;">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
            </svg>
          </div>
          <h4 class="font-serif text-lg font-medium mb-2" style="color: #0a1628;">Envío Gratis</h4>
          <p class="text-sm" style="color: #6b6b6b;">En pedidos superiores a 100€</p>
        </div>
        <div>
          <div class="w-14 h-14 flex items-center justify-center mx-auto mb-5" style="background-color: #0a1628; color: #ffffff;">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </div>
          <h4 class="font-serif text-lg font-medium mb-2" style="color: #0a1628;">Devolución Fácil</h4>
          <p class="text-sm" style="color: #6b6b6b;">30 días para cambios y devoluciones</p>
        </div>
        <div>
          <div class="w-14 h-14 flex items-center justify-center mx-auto mb-5" style="background-color: #0a1628; color: #ffffff;">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h4 class="font-serif text-lg font-medium mb-2" style="color: #0a1628;">Pago Seguro</h4>
          <p class="text-sm" style="color: #6b6b6b;">Transacciones 100% protegidas</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Products -->
  <section class="py-24 bg-ivory">
    <div class="container-custom">
      <div class="flex flex-col sm:flex-row items-start sm:items-end justify-between mb-16">
        <div>
          <span class="text-sm font-medium tracking-[0.3em] uppercase mb-4 block" style="color: #b8a067;">Selección Exclusiva</span>
          <h2 class="font-serif text-4xl lg:text-5xl font-medium" style="color: #0a1628;">
            Productos Destacados
          </h2>
        </div>
        <a href="/tienda" class="mt-6 sm:mt-0 group inline-flex items-center gap-2 text-sm font-medium transition-colors hover:opacity-80" style="color: #0a1628;">
          Ver toda la colección
          <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredProducts?.map((product) => (
          <ProductCard product={product} />
        ))}
      </div>
      
      {(!featuredProducts || featuredProducts.length === 0) && (
        <div class="text-center py-16">
          <p class="text-lg" style="color: #6b6b6b;">
            Próximamente nuevos productos destacados.
          </p>
        </div>
      )}
    </div>
  </section>

  <!-- Parallax Feature Section -->
  <section class="relative h-[70vh] min-h-[500px] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://images.unsplash.com/photo-1490578474895-699cd4e2cf59?w=1920&q=80" 
        alt="Estilo premium"
        class="w-full h-full object-cover"
        style="object-position: center 30%;"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-navy-900/80 via-navy-900/70 to-navy-900/80"></div>
    </div>
    
    <div class="relative z-10 text-center px-4 max-w-3xl mx-auto">
      <span class="text-sm font-medium tracking-[0.3em] uppercase mb-6 block" style="color: #b8a067;">
        Experiencia Premium
      </span>
      <h2 class="font-serif text-4xl sm:text-5xl lg:text-6xl font-medium leading-tight mb-8" style="color: #ffffff; text-shadow: 0 2px 10px rgba(0,0,0,0.5);">
        El Arte de Vestir Bien
      </h2>
      <p class="text-lg mb-10 leading-relaxed max-w-2xl mx-auto" style="color: rgba(255,255,255,0.9);">
        Más que ropa, ofrecemos una experiencia. Cada prenda está pensada para hacerte sentir seguro, 
        elegante y auténtico.
      </p>
      <a href="/tienda" class="inline-flex items-center gap-3 px-8 py-4 font-medium text-sm tracking-wide transition-all duration-300 hover:bg-white" style="background-color: #b8a067; color: #0a1628;">
        Comenzar a Explorar
      </a>
    </div>
  </section>
  
  <!-- Brand Values - Iconos Premium -->
  <section class="py-24" style="background-color: #f5f3ef;">
    <div class="container-custom">
      <div class="text-center mb-16">
        <span class="text-sm font-medium tracking-[0.3em] uppercase mb-4 block" style="color: #b8a067;">Nuestro Compromiso</span>
        <h2 class="font-serif text-4xl lg:text-5xl font-medium" style="color: #0a1628;">
          ¿Por Qué Elegirnos?
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white p-8 text-center group hover:shadow-elevated transition-shadow duration-300">
          <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center transition-colors" style="background-color: #0a1628; color: #b8a067;">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-serif text-xl font-medium mb-3" style="color: #0a1628;">
            Envío Premium
          </h3>
          <p class="text-sm leading-relaxed" style="color: #6b6b6b;">
            Entrega gratuita en pedidos +100€. Packaging exclusivo y sostenible.
          </p>
        </div>
        
        <div class="bg-white p-8 text-center group hover:shadow-elevated transition-shadow duration-300">
          <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center transition-colors" style="background-color: #0a1628; color: #b8a067;">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-serif text-xl font-medium mb-3" style="color: #0a1628;">
            Calidad Garantizada
          </h3>
          <p class="text-sm leading-relaxed" style="color: #6b6b6b;">
            30 días de garantía de satisfacción. Devolución sin complicaciones.
          </p>
        </div>
        
        <div class="bg-white p-8 text-center group hover:shadow-elevated transition-shadow duration-300">
          <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center transition-colors" style="background-color: #0a1628; color: #b8a067;">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-serif text-xl font-medium mb-3" style="color: #0a1628;">
            Entrega Rápida
          </h3>
          <p class="text-sm leading-relaxed" style="color: #6b6b6b;">
            Recibe tu pedido en 24-48h. Seguimiento en tiempo real.
          </p>
        </div>
        
        <div class="bg-white p-8 text-center group hover:shadow-elevated transition-shadow duration-300">
          <div class="w-20 h-20 mx-auto mb-6 flex items-center justify-center transition-colors" style="background-color: #0a1628; color: #b8a067;">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
            </svg>
          </div>
          <h3 class="font-serif text-xl font-medium mb-3" style="color: #0a1628;">
            Asesoría Personal
          </h3>
          <p class="text-sm leading-relaxed" style="color: #6b6b6b;">
            Nuestros estilistas te ayudan a encontrar tu estilo perfecto.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="newsletter-section relative overflow-hidden" style="background: linear-gradient(165deg, #070d1a 0%, #0c1a2e 40%, #0f1f38 70%, #0a1628 100%);">
    <!-- Decorative elements -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-0 left-0 w-full h-px" style="background: linear-gradient(90deg, transparent, rgba(184,160,103,0.2) 50%, transparent);"></div>
      <div class="absolute bottom-0 left-0 w-full h-px" style="background: linear-gradient(90deg, transparent, rgba(184,160,103,0.1) 50%, transparent);"></div>
      <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full opacity-[0.03]" style="background: radial-gradient(circle, #b8a067, transparent 70%);"></div>
      <div class="absolute -bottom-32 -left-32 w-80 h-80 rounded-full opacity-[0.02]" style="background: radial-gradient(circle, #b8a067, transparent 70%);"></div>
    </div>

    <div class="relative max-w-2xl mx-auto px-6 py-24 text-center">
      <!-- Icono decorativo -->
      <div class="flex justify-center mb-6">
        <div class="relative">
