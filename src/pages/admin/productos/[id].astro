---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Edit Product
 * Página para editar un producto existente (SSR)
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';
import ImageUploader from '../../../components/admin/ImageUploader';
import SizeStockManager from '../../../components/admin/SizeStockManager';
import { supabaseAdmin, isSupabaseAdminConfigured } from '../../../lib/supabase/server';

const { id } = Astro.params;

// Validar que id exista
if (!id) {
  return Astro.redirect('/admin/productos');
}

// Obtener producto a editar
let product = null;
let categories: { id: string; name: string; slug: string }[] = [];

if (isSupabaseAdminConfigured() && supabaseAdmin) {
  const { data: productData, error: prodError } = await supabaseAdmin
    .from('products')
    .select('*')
    .eq('id', id)
    .single();
  
  if (prodError) console.error('Error fetching product:', prodError);
  if (productData) {
    product = productData;
  }
  
  const { data: categoriesData } = await supabaseAdmin
    .from('categories')
    .select('id, name, slug')
    .order('name');
  
  if (categoriesData) {
    categories = categoriesData;
  }
} else {
  // Datos de demostración
  categories = [
    { id: '1', name: 'Trajes', slug: 'trajes' },
    { id: '2', name: 'Camisas', slug: 'camisas' },
    { id: '3', name: 'Accesorios', slug: 'accesorios' },
  ];
  
  // Producto de demo
  product = {
    id: id,
    name: 'Producto de ejemplo',
    slug: 'producto-ejemplo',
    description: 'Descripción del producto de ejemplo',
    price: 9900,
    stock: 10,
    category_id: '1',
    images: [],
    sizes: ['S', 'M', 'L', 'XL'],
    colors: ['Navy', 'Black'],
    material: 'Algodón 100%',
    featured: false,
  };
}

// Si no existe el producto, redirigir
if (!product) {
  return Astro.redirect('/admin/productos');
}
---

<AdminLayout title={`Editar: ${product.name}`}>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-6">
      <ol class="flex items-center gap-2 text-sm text-charcoal-500">
        <li><a href="/admin" class="hover:text-navy-900">Dashboard</a></li>
        <li>/</li>
        <li><a href="/admin/productos" class="hover:text-navy-900">Productos</a></li>
        <li>/</li>
        <li class="text-navy-900">Editar</li>
      </ol>
    </nav>
    
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-2xl font-semibold text-navy-900">
        Editar Producto
      </h1>
      <a 
        href="/admin/productos"
        class="text-sm text-charcoal-600 hover:text-navy-900 transition-colors"
      >
        ← Volver a productos
      </a>
    </div>
    
    <!-- Form -->
    <form id="product-form" class="space-y-8">
      <input type="hidden" name="id" value={id} />
      
      <!-- Basic Info -->
      <div class="bg-white p-6 rounded-lg shadow-sm border border-charcoal-100">
        <h2 class="font-medium text-navy-900 mb-4">Información básica</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-charcoal-700 mb-2">
              Nombre del producto *
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              value={product.name}
              class="input-elegant w-full"
            />
          </div>
          
          <div>
            <label for="slug" class="block text-sm font-medium text-charcoal-700 mb-2">
              Slug (URL)
            </label>
            <input 
              type="text" 
              id="slug" 
              name="slug"
              value={product.slug}
              class="input-elegant w-full"
              placeholder="Se genera automáticamente"
            />
          </div>
          
          <div class="md:col-span-2">
            <label for="description" class="block text-sm font-medium text-charcoal-700 mb-2">
              Descripción
            </label>
            <textarea 
              id="description" 
              name="description" 
              rows="4"
              class="input-elegant w-full resize-none"
            >{product.description}</textarea>
          </div>
          
          <div>
            <label for="category" class="block text-sm font-medium text-charcoal-700 mb-2">
              Categoría *
            </label>
            <select id="category" name="category_id" required class="select-elegant w-full">
              <option value="">Seleccionar categoría</option>
              {categories.map((cat) => (
                <option value={cat.id} selected={cat.id === product.category_id}>
                  {cat.name}
                </option>
              ))}
            </select>
          </div>
          
          <div>
            <label for="material" class="block text-sm font-medium text-charcoal-700 mb-2">
              Material
            </label>
            <input 
              type="text" 
              id="material" 
              name="material"
              value={product.material}
              class="input-elegant w-full"
              placeholder="Ej: Algodón 100%"
            />
          </div>
        </div>
      </div>
      
      <!-- Pricing & Stock -->
      <div class="bg-white p-6 rounded-lg shadow-sm border border-charcoal-100">
        <h2 class="font-medium text-navy-900 mb-4">Precio</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <label for="price" class="block text-sm font-medium text-charcoal-700 mb-2">
              Precio (céntimos) *
            </label>
            <input 
              type="number" 
              id="price" 
              name="price" 
              required
              min="0"
              value={product.price}
              class="input-elegant w-full"
            />
            <p class="text-xs text-charcoal-500 mt-1">Ej: 9900 = 99,00€</p>
          </div>
          
          <div>
            <label for="stock" class="block text-sm font-medium text-charcoal-700 mb-2">
              Stock Total (calculado)
            </label>
            <input 
              type="number" 
              id="stock" 
              name="stock" 
              min="0"
              value={product.stock}
              class="input-elegant w-full bg-charcoal-50"
              readonly
            />
            <p class="text-xs text-charcoal-500 mt-1">Se calcula automáticamente desde el stock por talla</p>
          </div>
          
          <div class="flex items-center">
            <label class="flex items-center gap-2 cursor-pointer">
              <input 
                type="checkbox" 
                name="featured" 
                checked={product.featured}
                class="w-4 h-4 text-navy-900 border-charcoal-300 rounded focus:ring-navy-500"
              />
              <span class="text-sm text-charcoal-700">Producto destacado</span>
            </label>
          </div>
        </div>
      </div>
      
      <!-- Sizes & Colors -->
      <div class="bg-white p-6 rounded-lg shadow-sm border border-charcoal-100">
        <h2 class="font-medium text-navy-900 mb-4">Tallas y colores</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="sizes" class="block text-sm font-medium text-charcoal-700 mb-2">
              Tallas disponibles
            </label>
            <input 
              type="text" 
              id="sizes" 
              name="sizes"
              value={product.sizes?.join(', ')}
              class="input-elegant w-full"
              placeholder="S, M, L, XL"
            />
            <p class="text-xs text-charcoal-500 mt-1">Separadas por comas</p>
          </div>
          
          <div>
            <label for="colors" class="block text-sm font-medium text-charcoal-700 mb-2">
              Colores disponibles
            </label>
            <input 
              type="text" 
              id="colors" 
              name="colors"
              value={product.colors?.join(', ')}
              class="input-elegant w-full"
              placeholder="Navy, Black, White"
            />
            <p class="text-xs text-charcoal-500 mt-1">Separados por comas</p>
          </div>
        </div>
      </div>
      
      <!-- Stock por Talla -->
      <SizeStockManager 
        client:load 
        productId={product.id}
        sizes={product.sizes || ['S', 'M', 'L', 'XL']}
        productName={product.name}
      />
      
      <!-- Images -->
      <div class="bg-white p-6 rounded-lg shadow-sm border border-charcoal-100">
        <h2 class="font-medium text-navy-900 mb-4">Imágenes del producto</h2>
        <ImageUploader 
          client:load 
          existingImages={product.images || []} 
          inputName="images"
        />
        <input type="hidden" name="images" id="images" value={JSON.stringify(product.images || [])} />
      </div>
      
      <!-- Actions -->
      <div class="flex items-center justify-end gap-4 pt-4">
        <a 
          href="/admin/productos"
          class="px-6 py-3 text-sm font-medium text-charcoal-600 hover:text-navy-900 transition-colors"
        >
          Cancelar
        </a>
        <button 
          type="submit"
          id="submit-btn"
          class="px-6 py-3 bg-navy-900 text-white text-sm font-medium hover:bg-navy-800 transition-colors"
        >
          Guardar cambios
        </button>
      </div>
    </form>
    
    <!-- Status messages -->
    <div id="form-message" class="hidden fixed bottom-4 right-4 p-4 rounded-lg shadow-lg max-w-md z-50"></div>
  </div>
</AdminLayout>

<script define:vars={{ productId: id }}>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('product-form');
    const submitBtn = document.getElementById('submit-btn');
    const messageDiv = document.getElementById('form-message');
    
    function showMessage(message, isError = false) {
      messageDiv.textContent = message;
      messageDiv.className = `fixed bottom-4 right-4 p-4 rounded-lg shadow-lg max-w-md z-50 ${
        isError ? 'bg-red-100 text-red-800 border border-red-300' : 'bg-green-100 text-green-800 border border-green-300'
      }`;
      messageDiv.classList.remove('hidden');
      setTimeout(() => messageDiv.classList.add('hidden'), 5000);
    }
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Guardando...';
      submitBtn.disabled = true;
      
      try {
        const formData = new FormData(form);
        
        // Procesar tallas y colores como arrays
        const sizesStr = formData.get('sizes') || '';
        const colorsStr = formData.get('colors') || '';
        const sizes = sizesStr ? sizesStr.split(',').map(s => s.trim()).filter(Boolean) : [];
        const colors = colorsStr ? colorsStr.split(',').map(c => c.trim()).filter(Boolean) : [];
        
        // Obtener imágenes del hidden input
        const imagesInput = document.getElementById('images');
        let images = [];
        try {
          images = JSON.parse(imagesInput.value || '[]');
        } catch (e) {
          console.error('Error parsing images:', e);
        }
        
        // Construir el objeto de datos
        const data = {
          name: formData.get('name'),
          slug: formData.get('slug') || null,
          description: formData.get('description') || null,
          category_id: formData.get('category_id'),
          material: formData.get('material') || null,
          price: parseInt(formData.get('price'), 10),
          compare_at_price: formData.get('compare_at_price') ? parseInt(formData.get('compare_at_price'), 10) : null,
          stock: parseInt(formData.get('stock'), 10),
          featured: formData.get('featured') === 'on',
          sizes,
          colors,
          images
        };
        
        console.log('Enviando datos:', data);
        
        const response = await fetch(`/api/admin/products/${productId}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          credentials: 'include',
          body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (!response.ok) {
          throw new Error(result.error || 'Error al guardar el producto');
        }
        
        showMessage('¡Producto actualizado correctamente!');
        
        // Redirigir después de éxito
        setTimeout(() => {
          window.location.href = '/admin/productos';
        }, 1500);
        
      } catch (error) {
        console.error('Error:', error);
        showMessage(error.message || 'Error al guardar el producto', true);
      } finally {
        submitBtn.textContent = originalText;
        submitBtn.disabled = false;
      }
    });
  });
</script>
