</AdminLayout>

<script define:vars={{ productsJson, categoriesJson }}>
  // Datos iniciales
  const allProducts = JSON.parse(productsJson);
  const allCategories = JSON.parse(categoriesJson);
  
  // Estado del modal de eliminar
  let deleteModalOpen = false;
  let deleteProductId = null;
  let deleteProductName = '';

  // Elementos DOM
  const tbody = document.getElementById('products-tbody');
  const productsCount = document.getElementById('products-count');
  const noResults = document.getElementById('no-results');
  const productsTable = document.getElementById('products-table');
  const deleteModalContainer = document.getElementById('delete-modal-container');

  // Escuchar eventos de filtrado desde el componente React
  window.addEventListener('filterChange', (e) => {
    const filters = e.detail;
    applyFilters(filters);
  });

  // Aplicar filtros
  function applyFilters(filters) {
    const rows = document.querySelectorAll('.product-row');
    let visibleCount = 0;

    rows.forEach(row => {
      const name = row.querySelector('.product-name')?.textContent?.toLowerCase() || '';
      const categoryId = row.dataset.category || '';
      const featured = row.dataset.featured === 'true';
      const stock = parseInt(row.dataset.stock || '0', 10);
      
      let visible = true;

      // Filtro de búsqueda
      if (filters.search && !name.includes(filters.search.toLowerCase())) {
        visible = false;
      }

      // Filtro de categoría
      if (filters.category && categoryId !== filters.category) {
        visible = false;
      }

      // Filtro de estado
      if (filters.status === 'featured' && !featured) {
        visible = false;
      } else if (filters.status === 'normal' && featured) {
        visible = false;
      }

      // Filtro de stock
      if (filters.stock === 'low' && stock >= 10) {
        visible = false;
      } else if (filters.stock === 'normal' && (stock < 10 || stock > 50)) {
        visible = false;
      } else if (filters.stock === 'high' && stock <= 50) {
        visible = false;
      }

      row.style.display = visible ? '' : 'none';
      if (visible) visibleCount++;
    });

    // Actualizar contador
    productsCount.textContent = `${visibleCount} de ${allProducts.length} productos`;

    // Mostrar/ocultar mensaje de sin resultados
    if (visibleCount === 0 && allProducts.length > 0) {
      noResults.classList.remove('hidden');
      productsTable.classList.add('hidden');
    } else {
      noResults.classList.add('hidden');
      productsTable.classList.remove('hidden');
    }
  }

  // Limpiar filtros
  document.getElementById('clear-filters-btn')?.addEventListener('click', () => {
    // Disparar evento para limpiar filtros en React
    window.dispatchEvent(new CustomEvent('clearFilters'));
    applyFilters({ search: '', category: '', status: 'all', stock: 'all' });
  });

  // Modal de eliminar producto
  function showDeleteModal(id, name) {
    deleteProductId = id;
    deleteProductName = name;
    
    deleteModalContainer.innerHTML = `
      <div class="fixed inset-0 z-50 overflow-y-auto" id="delete-modal">
        <div class="fixed inset-0 bg-black/50 backdrop-blur-sm" id="delete-backdrop"></div>
        <div class="relative min-h-screen flex items-center justify-center p-4">
          <div class="relative bg-white w-full max-w-md shadow-2xl overflow-hidden">
            <div class="pt-8 pb-4 px-6 text-center">
              <div class="mx-auto w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-4">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Eliminar producto</h3>
              <p class="text-gray-500">
                ¿Estás seguro de que deseas eliminar 
                <span class="font-semibold text-gray-900">"${name}"</span>?
              </p>
              <p class="text-sm text-gray-400 mt-2">Esta acción no se puede deshacer.</p>
            </div>
            <div id="delete-error" class="hidden mx-6 mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
              <p class="text-sm text-red-600"></p>
            </div>
            <div class="px-6 pb-6 flex gap-3">
              <button type="button" id="cancel-delete" class="flex-1 px-4 py-3 text-sm font-medium text-gray-700 bg-gray-100 hover:bg-gray-200 transition-colors">
                Cancelar
              </button>
              <button type="button" id="confirm-delete" class="flex-1 px-4 py-3 text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Eliminar
              </button>
            </div>
          </div>
        </div>
      </div>
    `;

    // Event listeners del modal
    document.getElementById('delete-backdrop')?.addEventListener('click', hideDeleteModal);
    document.getElementById('cancel-delete')?.addEventListener('click', hideDeleteModal);
    document.getElementById('confirm-delete')?.addEventListener('click', confirmDelete);

    // Prevenir scroll del body
    document.body.style.overflow = 'hidden';
  }

  function hideDeleteModal() {
    deleteModalContainer.innerHTML = '';
    deleteProductId = null;
    deleteProductName = '';
    document.body.style.overflow = '';
  }

  async function confirmDelete() {
    if (!deleteProductId) return;

    const confirmBtn = document.getElementById('confirm-delete');
    const errorDiv = document.getElementById('delete-error');
    
    // Estado de carga
    confirmBtn.innerHTML = `
      <svg class="animate-spin w-4 h-4" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Eliminando...
    `;
    confirmBtn.disabled = true;

    try {
      const response = await fetch(`/api/admin/products/${deleteProductId}`, {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' }
      });

      if (!response.ok) {
        const data = await response.json();
        throw new Error(data.error || 'Error al eliminar');
      }

      // Eliminar fila de la tabla
      document.querySelector(`.product-row[data-id="${deleteProductId}"]`)?.remove();
      
      // Actualizar contador
      const remainingRows = document.querySelectorAll('.product-row').length;
      productsCount.textContent = `${remainingRows} productos en total`;

      hideDeleteModal();
    } catch (error) {
      errorDiv.classList.remove('hidden');
      errorDiv.querySelector('p').textContent = error.message;
      confirmBtn.innerHTML = `
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Eliminar
      `;
      confirmBtn.disabled = false;
    }
  }

  // Event listeners para botones de eliminar
  document.querySelectorAll('.delete-product-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const id = btn.dataset.id;
      const name = btn.dataset.name;
      showDeleteModal(id, name);
    });
  });

  // Cerrar modal con Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && document.getElementById('delete-modal')) {
      hideDeleteModal();
    }
  });
</script>

<script>
  // Conectar el componente React de filtros con el sistema de filtrado
  import { useState, useEffect } from 'react';
  
  // Escuchar cambios de filtros desde React y propagar al script principal
  window.addEventListener('message', (e) => {
    if (e.data.type === 'filterChange') {
      window.dispatchEvent(new CustomEvent('filterChange', { detail: e.data.filters }));
    }
  });
</script>
