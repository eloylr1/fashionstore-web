/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Products List (Mejorado)
 * Listado y gestión de productos con filtros y búsqueda
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false; // SSR

import AdminLayout from '../../../layouts/AdminLayout.astro';
import { supabase, isSupabaseConfigured } from '../../../lib/supabase/client';
import { supabaseAdmin, isSupabaseAdminConfigured } from '../../../lib/supabase/server';
import { formatPrice } from '../../../lib/stores/cart';
import ProductFilters from '../../../components/admin/ProductFilters.tsx';
import DeleteProductModal from '../../../components/admin/DeleteProductModal.tsx';

// Verificar autenticación basada en cookies
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const userRole = Astro.cookies.get('user-role')?.value;

// Siempre verificar rol de admin
if (!accessToken || userRole !== 'admin') {
  return Astro.redirect('/admin/acceso-seguro');
}

// Verificación adicional con Supabase si está disponible
if (isSupabaseAdminConfigured() && supabaseAdmin) {
  try {
    const { data: { user }, error: authError } = await supabaseAdmin.auth.getUser(accessToken);
    if (authError || !user) {
      return Astro.redirect('/admin/acceso-seguro');
    }
  } catch (e) {
    console.error('Error verificando usuario:', e);
  }
}

// Datos de demostración
let products: any[] = [
  { id: '1', name: 'Traje Italiano Slim Fit', slug: 'traje-italiano-slim-fit', price: 599.00, images: ['/placeholder-product.svg'], category_id: '1', featured: true, stock: 10, sizes: ['S','M','L','XL'], colors: ['Navy', 'Charcoal'], description: 'Traje de corte italiano', material: 'Lana 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '1', name: 'Trajes' } },
  { id: '2', name: 'Camisa Oxford Premium', slug: 'camisa-oxford-premium', price: 89.00, images: ['/placeholder-product.svg'], category_id: '2', featured: true, stock: 25, sizes: ['S','M','L','XL'], colors: ['White', 'Light Blue'], description: 'Camisa oxford clásica', material: 'Algodón 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '2', name: 'Camisas' } },
  { id: '3', name: 'Cinturón de Cuero', slug: 'cinturon-cuero', price: 75.00, images: ['/placeholder-product.svg'], category_id: '3', featured: true, stock: 50, sizes: ['85cm','90cm','95cm','100cm'], colors: ['Brown', 'Black'], description: 'Cinturón artesanal', material: 'Cuero genuino', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '3', name: 'Cinturones' } },
  { id: '4', name: 'Blazer Casual Lino', slug: 'blazer-casual-lino', price: 299.00, images: ['/placeholder-product.svg'], category_id: '4', featured: true, stock: 15, sizes: ['S','M','L','XL'], colors: ['Beige', 'Navy'], description: 'Blazer de verano', material: 'Lino 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '4', name: 'Blazers' } },
  { id: '5', name: 'Corbata de Seda', slug: 'corbata-seda', price: 65.00, images: ['/placeholder-product.svg'], category_id: '5', featured: false, stock: 8, sizes: ['Única'], colors: ['Burgundy', 'Navy'], description: 'Corbata elegante', material: 'Seda 100%', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '5', name: 'Corbatas' } },
  { id: '6', name: 'Gemelos Plata', slug: 'gemelos-plata', price: 120.00, images: ['/placeholder-product.svg'], category_id: '6', featured: false, stock: 3, sizes: ['Única'], colors: ['Silver'], description: 'Gemelos artesanales', material: 'Plata 925', created_at: new Date().toISOString(), updated_at: new Date().toISOString(), categories: { id: '6', name: 'Gemelos' } },
];

let categories: any[] = [
  { id: '1', name: 'Trajes' },
  { id: '2', name: 'Camisas' },
  { id: '3', name: 'Cinturones' },
  { id: '4', name: 'Blazers' },
  { id: '5', name: 'Corbatas' },
  { id: '6', name: 'Gemelos' },
];

// Obtener productos y categorías reales
if (isSupabaseConfigured() && supabase) {
  const { data: realProducts } = await supabase
    .from('products')
    .select(`
      *,
      categories (
        id,
        name
      )
    `)
    .order('created_at', { ascending: false });
  
  if (realProducts?.length) products = realProducts;

  const { data: realCategories } = await supabase
    .from('categories')
    .select('id, name')
    .order('name', { ascending: true });

  if (realCategories?.length) categories = realCategories;
}

// Convertir a JSON para pasar al cliente
const productsJson = JSON.stringify(products);
const categoriesJson = JSON.stringify(categories);
---

<AdminLayout title="Productos">
