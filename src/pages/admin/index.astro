---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Dashboard
 * Panel principal de administración con métricas en tiempo real
 * Auto-refresh cada 30 segundos para datos siempre actualizados
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import DashboardComplete from '../../components/admin/DashboardComplete';
import ReportExporter from '../../components/admin/ReportExporter';

// La autenticación ya está verificada por el middleware

// Fecha actual formateada
const today = new Date().toLocaleDateString('es-ES', { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});

// Hora de saludo
const hour = new Date().getHours();
const greeting = hour < 12 ? 'Buenos días' : hour < 20 ? 'Buenas tardes' : 'Buenas noches';
---

<AdminLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Header con saludo -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h2 class="font-serif text-3xl font-semibold text-navy-900">
          {greeting}, Admin
        </h2>
        <p class="text-charcoal-500 mt-1 capitalize">
          {today}
        </p>
      </div>
      
      <div class="flex items-center gap-3">
        <a 
          href="/admin/productos/nuevo" 
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-navy-900 text-white text-sm font-medium hover:bg-navy-800 transition-all duration-200 shadow-lg shadow-navy-900/20"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo Producto
        </a>
      </div>
    </div>

    <!-- Dashboard Completo con datos en tiempo real (auto-refresh 30s) -->
    <DashboardComplete client:load />

    <!-- Exportar Reportes -->
    <div class="bg-white border border-charcoal-100 p-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-4">
        <div>
          <h3 class="text-lg font-semibold text-navy-900">Exportar Reportes</h3>
          <p class="text-sm text-charcoal-500">Descarga o envía por email las métricas de ventas</p>
        </div>
      </div>
      <ReportExporter client:load />
    </div>

    <!-- Acciones Rápidas -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
      <a 
        href="/admin/productos/nuevo" 
        class="flex items-center gap-4 p-5 bg-white border border-charcoal-100 hover:border-navy-200 hover:shadow-lg transition-all group"
      >
        <div class="w-12 h-12 bg-navy-100 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-navy-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-navy-900">Nuevo Producto</p>
          <p class="text-xs text-charcoal-500">Añadir al catálogo</p>
        </div>
      </a>

      <a 
        href="/admin/categorias" 
        class="flex items-center gap-4 p-5 bg-white border border-charcoal-100 hover:border-purple-200 hover:shadow-lg transition-all group"
      >
        <div class="w-12 h-12 bg-purple-100 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-purple-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-navy-900">Categorías</p>
          <p class="text-xs text-charcoal-500">Gestionar secciones</p>
        </div>
      </a>

      <a 
        href="/admin/promociones" 
        class="flex items-center gap-4 p-5 bg-white border border-charcoal-100 hover:border-amber-200 hover:shadow-lg transition-all group"
      >
        <div class="w-12 h-12 bg-amber-100 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-amber-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-navy-900">Promociones</p>
          <p class="text-xs text-charcoal-500">Códigos descuento</p>
        </div>
      </a>

      <a 
        href="/" 
        target="_blank"
        class="flex items-center gap-4 p-5 bg-white border border-charcoal-100 hover:border-green-200 hover:shadow-lg transition-all group"
      >
        <div class="w-12 h-12 bg-green-100 flex items-center justify-center group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </div>
        <div>
          <p class="font-medium text-navy-900">Ver Tienda</p>
          <p class="text-xs text-charcoal-500">Abrir en nueva pestaña</p>
        </div>
      </a>
    </div>

    <!-- Info Sistema -->
    <div class="bg-gradient-to-br from-navy-900 to-navy-800 p-6 text-white flex items-start gap-4">
      <div class="w-12 h-12 bg-white/10 flex items-center justify-center flex-shrink-0">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div>
        <h4 class="font-semibold text-lg">FashionMarket Admin Panel</h4>
        <p class="text-sm text-white/70 mt-1">v1.0.0 • Panel de administración profesional</p>
        <p class="text-xs text-white/50 mt-2">
          Los datos se actualizan automáticamente cada 30 segundos. 
          Puedes hacer clic en "Actualizar" para refrescar manualmente.
        </p>
      </div>
    </div>
  </div>
</AdminLayout>
