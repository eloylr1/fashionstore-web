---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Dashboard
 * Panel principal de administración profesional (SSR Protegido)
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import DashboardAnalytics from '../../components/admin/DashboardAnalytics';
import { supabase, isSupabaseConfigured } from '../../lib/supabase/client';

// Verificar autenticación
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const userRole = Astro.cookies.get('user-role')?.value;

if (!accessToken || userRole !== 'admin') {
  return Astro.redirect('/admin/acceso-seguro');
}

// Inicializar estadísticas
let stats = {
  products: 0,
  categories: 0,
  lowStock: 0,
  orders: 0,
  revenue: 0,
  customers: 0,
};

let recentProducts: any[] = [];
let lowStockProducts: any[] = [];
let recentOrders: any[] = [];

// Obtener estadísticas de Supabase
if (isSupabaseConfigured() && supabase) {
  try {
    // Productos
    const { count: productsCount } = await supabase
      .from('products')
      .select('*', { count: 'exact', head: true });
    stats.products = productsCount || 0;

    // Categorías
    const { count: categoriesCount } = await supabase
      .from('categories')
      .select('*', { count: 'exact', head: true });
    stats.categories = categoriesCount || 0;

    // Stock bajo
    const { data: lowStock, count: lowStockCount } = await supabase
      .from('products')
      .select('id, name, stock, images', { count: 'exact' })
      .lt('stock', 10)
      .order('stock', { ascending: true })
      .limit(5);
    stats.lowStock = lowStockCount || 0;
    lowStockProducts = lowStock || [];

    // Productos recientes
    const { data: recent } = await supabase
      .from('products')
      .select('*')
      .order('created_at', { ascending: false })
      .limit(5);
    recentProducts = recent || [];

    // Clientes (profiles)
    const { count: customersCount } = await supabase
      .from('profiles')
      .select('*', { count: 'exact', head: true });
    stats.customers = customersCount || 0;

  } catch (error) {
    console.error('Error fetching stats:', error);
  }
}

// Fecha actual formateada
const today = new Date().toLocaleDateString('es-ES', { 
  weekday: 'long', 
  year: 'numeric', 
  month: 'long', 
  day: 'numeric' 
});

// Hora de saludo
const hour = new Date().getHours();
const greeting = hour < 12 ? 'Buenos días' : hour < 20 ? 'Buenas tardes' : 'Buenas noches';
---

<AdminLayout title="Dashboard">
  <div class="space-y-8">
    <!-- Header con saludo -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h2 class="font-serif text-3xl font-semibold text-navy-900">
          {greeting}, Admin
        </h2>
        <p class="text-charcoal-500 mt-1 capitalize">
          {today}
        </p>
      </div>
      
      <div class="flex items-center gap-3">
        <a 
          href="/admin/productos/nuevo" 
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-navy-900 text-white text-sm font-medium hover:bg-navy-800 transition-all duration-200 shadow-lg shadow-navy-900/20"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo Producto
        </a>
      </div>
    </div>

    <!-- Analytics Dashboard (Isla React con gráfico) -->
    <DashboardAnalytics client:load />

    <!-- Stats Grid (métricas básicas) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Total Productos -->
      <div class="group bg-white p-6 border border-charcoal-100 hover:border-navy-200 hover:shadow-lg transition-all duration-300">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-charcoal-500 uppercase tracking-wider">Productos</p>
            <p class="text-4xl font-serif font-bold text-navy-900 mt-2">
              {stats.products}
            </p>
            <p class="text-sm text-charcoal-400 mt-1">en catálogo</p>
          </div>
          <div class="w-14 h-14 bg-gradient-to-br from-navy-100 to-navy-200 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-navy-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
        </div>
        <a href="/admin/productos" class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-navy-700 hover:text-leather transition-colors group-hover:gap-2">
          Ver productos
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Categorías -->
      <div class="group bg-white p-6 border border-charcoal-100 hover:border-leather/30 hover:shadow-lg transition-all duration-300">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-charcoal-500 uppercase tracking-wider">Categorías</p>
            <p class="text-4xl font-serif font-bold text-navy-900 mt-2">
              {stats.categories}
            </p>
            <p class="text-sm text-charcoal-400 mt-1">activas</p>
          </div>
          <div class="w-14 h-14 bg-gradient-to-br from-leather/10 to-leather/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-leather" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
          </div>
        </div>
        <a href="/admin/categorias" class="inline-flex items-center gap-1 mt-4 text-sm font-medium text-navy-700 hover:text-leather transition-colors group-hover:gap-2">
          Gestionar
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Stock Bajo - Alerta -->
      <div class={`group p-6 border transition-all duration-300 ${stats.lowStock > 0 ? 'bg-gradient-to-br from-amber-50 to-orange-50 border-amber-200 hover:shadow-lg hover:shadow-amber-100' : 'bg-white border-charcoal-100 hover:shadow-lg'}`}>
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-charcoal-500 uppercase tracking-wider">Stock Bajo</p>
            <p class={`text-4xl font-serif font-bold mt-2 ${stats.lowStock > 0 ? 'text-amber-600' : 'text-navy-900'}`}>
              {stats.lowStock}
            </p>
            <p class="text-sm text-charcoal-400 mt-1">productos</p>
          </div>
          <div class={`w-14 h-14 flex items-center justify-center group-hover:scale-110 transition-transform duration-300 ${stats.lowStock > 0 ? 'bg-amber-100' : 'bg-charcoal-100'}`}>
            <svg class={`w-7 h-7 ${stats.lowStock > 0 ? 'text-amber-600' : 'text-charcoal-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
        </div>
        {stats.lowStock > 0 ? (
          <p class="mt-4 text-sm text-amber-700 font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            Requiere atención
          </p>
        ) : (
          <p class="mt-4 text-sm text-green-600 font-medium flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Stock óptimo
          </p>
        )}
      </div>

      <!-- Clientes -->
      <div class="group bg-white p-6 border border-charcoal-100 hover:border-green-200 hover:shadow-lg transition-all duration-300">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-sm font-medium text-charcoal-500 uppercase tracking-wider">Clientes</p>
            <p class="text-4xl font-serif font-bold text-navy-900 mt-2">
              {stats.customers}
            </p>
            <p class="text-sm text-charcoal-400 mt-1">registrados</p>
          </div>
          <div class="w-14 h-14 bg-gradient-to-br from-green-100 to-emerald-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
        </div>
        <p class="mt-4 text-sm text-charcoal-400">
          Base de usuarios
        </p>
      </div>
    </div>

    <!-- Contenido Principal -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">
      <!-- Productos Recientes - Columna Grande -->
      <div class="xl:col-span-2 bg-white border border-charcoal-100 overflow-hidden">
        <div class="px-6 py-5 border-b border-charcoal-100 flex items-center justify-between bg-gradient-to-r from-charcoal-50 to-white">
          <div>
            <h3 class="font-serif text-lg font-semibold text-navy-900">Productos Recientes</h3>
            <p class="text-sm text-charcoal-500 mt-0.5">Últimos añadidos al catálogo</p>
          </div>
          <a 
            href="/admin/productos/nuevo" 
            class="inline-flex items-center gap-2 px-4 py-2 bg-navy-900 text-white text-sm font-medium hover:bg-navy-800 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Añadir
          </a>
        </div>
        
        {recentProducts.length > 0 ? (
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-charcoal-50 text-left">
                <tr>
                  <th class="px-6 py-3 text-xs font-semibold text-charcoal-600 uppercase tracking-wider">Producto</th>
                  <th class="px-6 py-3 text-xs font-semibold text-charcoal-600 uppercase tracking-wider">Precio</th>
                  <th class="px-6 py-3 text-xs font-semibold text-charcoal-600 uppercase tracking-wider">Stock</th>
                  <th class="px-6 py-3 text-xs font-semibold text-charcoal-600 uppercase tracking-wider">Estado</th>
                  <th class="px-6 py-3 text-xs font-semibold text-charcoal-600 uppercase tracking-wider"></th>
                </tr>
              </thead>
              <tbody class="divide-y divide-charcoal-100">
                {recentProducts.map((product) => (
                  <tr class="hover:bg-charcoal-50/50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-cream flex-shrink-0 overflow-hidden">
                          <img 
                            src={product.images?.[0] || '/placeholder-product.svg'} 
                            alt={product.name}
                            class="w-full h-full object-cover"
                          />
                        </div>
                        <div>
                          <p class="text-sm font-semibold text-navy-900">{product.name}</p>
                          <p class="text-xs text-charcoal-400">{product.slug}</p>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <span class="text-sm font-semibold text-navy-900">
                        {(product.price / 100).toFixed(2)}€
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      <span class={`text-sm font-medium ${product.stock < 10 ? 'text-amber-600' : 'text-charcoal-700'}`}>
                        {product.stock} uds
                      </span>
                    </td>
                    <td class="px-6 py-4">
                      {product.featured ? (
                        <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                          <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
                          Destacado
                        </span>
                      ) : (
                        <span class="inline-flex items-center gap-1 px-2.5 py-1 bg-charcoal-100 text-charcoal-600 text-xs font-medium rounded-full">
                          <span class="w-1.5 h-1.5 bg-charcoal-400 rounded-full"></span>
                          Normal
                        </span>
                      )}
                    </td>
                    <td class="px-6 py-4 text-right">
                      <a 
                        href={`/admin/productos/${product.id}`}
                        class="inline-flex items-center gap-1 text-sm font-medium text-navy-700 hover:text-leather transition-colors"
                      >
                        Editar
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div class="px-6 py-16 text-center">
            <div class="w-16 h-16 mx-auto bg-charcoal-100 flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-charcoal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h4 class="text-lg font-medium text-navy-900 mb-2">No hay productos</h4>
            <p class="text-charcoal-500 mb-6">Comienza añadiendo tu primer producto al catálogo</p>
            <a 
              href="/admin/productos/nuevo" 
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-navy-900 text-white text-sm font-medium hover:bg-navy-800 transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Crear Producto
            </a>
          </div>
        )}
      </div>

      <!-- Panel Lateral -->
      <div class="space-y-6">
        <!-- Alertas de Stock -->
        <div class="bg-white border border-charcoal-100 overflow-hidden">
          <div class="px-5 py-4 border-b border-charcoal-100 bg-gradient-to-r from-amber-50 to-white">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-amber-100 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-navy-900">Alertas de Stock</h3>
                <p class="text-xs text-charcoal-500">Menos de 10 unidades</p>
              </div>
            </div>
          </div>
          
          {lowStockProducts.length > 0 ? (
            <div class="divide-y divide-charcoal-100">
              {lowStockProducts.map((product) => (
                <div class="flex items-center gap-4 px-5 py-4 hover:bg-charcoal-50/50 transition-colors">
                  <div class="w-10 h-10 bg-cream flex-shrink-0 overflow-hidden">
                    <img 
                      src={product.images?.[0] || '/placeholder-product.svg'} 
                      alt={product.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-navy-900 truncate">{product.name}</p>
                    <p class="text-xs text-amber-600 font-medium">
                      ⚠️ Solo {product.stock} uds
                    </p>
                  </div>
                  <a 
                    href={`/admin/productos/${product.id}`}
                    class="p-2 text-charcoal-400 hover:text-navy-700 hover:bg-charcoal-100 transition-colors"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                    </svg>
                  </a>
                </div>
              ))}
            </div>
          ) : (
            <div class="px-5 py-10 text-center">
              <div class="w-12 h-12 mx-auto bg-green-100 flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <p class="text-sm font-medium text-green-700">¡Stock óptimo!</p>
              <p class="text-xs text-charcoal-500 mt-1">Todos los productos tienen suficiente inventario</p>
            </div>
          )}
        </div>

        <!-- Acciones Rápidas -->
        <div class="bg-white border border-charcoal-100 overflow-hidden">
          <div class="px-5 py-4 border-b border-charcoal-100">
            <h3 class="font-semibold text-navy-900">Acciones Rápidas</h3>
          </div>
          <div class="p-4 space-y-2">
            <a 
              href="/admin/productos/nuevo" 
              class="flex items-center gap-3 px-4 py-3 bg-navy-50 hover:bg-navy-100 text-navy-900 transition-colors"
            >
              <svg class="w-5 h-5 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4" />
              </svg>
              <span class="text-sm font-medium">Nuevo Producto</span>
            </a>
            <a 
              href="/admin/categorias" 
              class="flex items-center gap-3 px-4 py-3 bg-charcoal-50 hover:bg-charcoal-100 text-navy-900 transition-colors"
            >
              <svg class="w-5 h-5 text-charcoal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              <span class="text-sm font-medium">Gestionar Categorías</span>
            </a>
            <a 
              href="/admin/pedidos" 
              class="flex items-center gap-3 px-4 py-3 bg-charcoal-50 hover:bg-charcoal-100 text-navy-900 transition-colors"
            >
              <svg class="w-5 h-5 text-charcoal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span class="text-sm font-medium">Ver Pedidos</span>
            </a>
            <a 
              href="/" 
              target="_blank"
              class="flex items-center gap-3 px-4 py-3 bg-charcoal-50 hover:bg-charcoal-100 text-navy-900 transition-colors"
            >
              <svg class="w-5 h-5 text-charcoal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span class="text-sm font-medium">Ver Tienda</span>
            </a>
          </div>
        </div>

        <!-- Info Sistema -->
        <div class="bg-gradient-to-br from-navy-900 to-navy-800 p-5 text-white">
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 bg-white/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h4 class="font-semibold">FashionMarket Admin</h4>
              <p class="text-sm text-white/70 mt-1">v1.0.0</p>
              <p class="text-xs text-white/50 mt-2">Panel de administración profesional para tu tienda de moda.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
