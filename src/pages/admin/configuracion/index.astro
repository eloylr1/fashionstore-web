---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Settings
 * Configuración general de la tienda
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';
import SettingsPanel from '../../../components/admin/SettingsPanel.tsx';

// La autenticación ya está verificada por el middleware
---

<AdminLayout title="Configuración">
  <div class="space-y-6">
    <!-- Header -->
    <div class="bg-white border border-charcoal-100 p-6">
      <h1 class="text-xl font-semibold text-navy-900">Configuración de la Tienda</h1>
      <p class="text-sm text-charcoal-500 mt-1">Datos generales de tu negocio</p>
    </div>

    <!-- Settings Panel -->
    <SettingsPanel client:load />

    <!-- Quick Links Section -->
    <div class="bg-white border border-charcoal-100 p-6">
      <h3 class="text-sm font-semibold text-navy-900 mb-4">Enlaces a paneles externos</h3>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <a 
          href="https://supabase.com/dashboard" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-charcoal-50 border border-charcoal-100 hover:border-navy-200 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-emerald-100 text-emerald-600 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M21.362 9.354H12V.396a.396.396 0 0 0-.716-.233L2.203 12.424l-.401.562a1.04 1.04 0 0 0 .836 1.659H12v8.959a.396.396 0 0 0 .716.233l9.081-12.261.401-.562a1.04 1.04 0 0 0-.836-1.66z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-emerald-700">Supabase</span>
            <p class="text-xs text-charcoal-500">Base de datos</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-emerald-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>

        <a 
          href="https://cloudinary.com/console" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-charcoal-50 border border-charcoal-100 hover:border-navy-200 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-blue-100 text-blue-600 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.84 10.636a5.23 5.23 0 00-2.264-3.381 5.24 5.24 0 00-3.996-.784 5.73 5.73 0 00-10.16 4.86A4.04 4.04 0 000 15.116a4.04 4.04 0 004.04 4.04h13.678a4.04 4.04 0 001.122-7.92v-.6z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-blue-700">Cloudinary</span>
            <p class="text-xs text-charcoal-500">Imágenes</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>

        <a 
          href="https://dashboard.stripe.com" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-charcoal-50 border border-charcoal-100 hover:border-navy-200 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-indigo-100 text-indigo-600 flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
            <span class="text-lg font-bold">S</span>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-indigo-700">Stripe</span>
            <p class="text-xs text-charcoal-500">Pagos</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</AdminLayout>
