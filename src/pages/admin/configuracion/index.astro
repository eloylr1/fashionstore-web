---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Settings (Profesional con Tabs)
 * Configuración completa del sistema con pestañas interactivas
 * ═══════════════════════════════════════════════════════════════════════════
 */

export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';
import SettingsTabs from '../../../components/admin/SettingsTabs.tsx';

// Verificar autenticación
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const userRole = Astro.cookies.get('user-role')?.value;

if (!accessToken || userRole !== 'admin') {
  return Astro.redirect('/admin/acceso-seguro');
}
---

<AdminLayout title="Configuración">
  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <p class="text-charcoal-500">
          Configura todos los aspectos de tu tienda
        </p>
      </div>
      
      <!-- System Status Pills -->
      <div class="flex flex-wrap items-center gap-2">
        <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-green-50 text-green-700 text-xs font-medium border border-green-200">
          <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
          Base de datos
        </span>
        <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-green-50 text-green-700 text-xs font-medium border border-green-200">
          <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
          Cloudinary
        </span>
        <span class="inline-flex items-center gap-1.5 px-3 py-1 bg-amber-50 text-amber-700 text-xs font-medium border border-amber-200">
          <span class="w-1.5 h-1.5 bg-amber-500 rounded-full"></span>
          Stripe Test
        </span>
      </div>
    </div>

    <!-- Settings Tabs Component (React with client:load) -->
    <SettingsTabs client:load />

    <!-- Quick Links Section -->
    <div class="mt-8 pt-8 border-t border-charcoal-200">
      <h3 class="text-sm font-semibold text-charcoal-700 mb-4">Enlaces rápidos a paneles externos</h3>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <a 
          href="https://supabase.com/dashboard" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-white border border-charcoal-200 hover:border-navy-300 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-emerald-100 text-emerald-600 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M21.362 9.354H12V.396a.396.396 0 0 0-.716-.233L2.203 12.424l-.401.562a1.04 1.04 0 0 0 .836 1.659H12v8.959a.396.396 0 0 0 .716.233l9.081-12.261.401-.562a1.04 1.04 0 0 0-.836-1.66z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-navy-700">Supabase</span>
            <p class="text-xs text-charcoal-500">Base de datos</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-navy-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>

        <a 
          href="https://cloudinary.com/console" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-white border border-charcoal-200 hover:border-navy-300 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-blue-100 text-blue-600 flex items-center justify-center group-hover:bg-blue-200 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-navy-700">Cloudinary</span>
            <p class="text-xs text-charcoal-500">Imágenes</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-navy-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>

        <a 
          href="https://dashboard.stripe.com" 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 p-4 bg-white border border-charcoal-200 hover:border-navy-300 hover:shadow-md transition-all group"
        >
          <div class="w-10 h-10 bg-indigo-100 text-indigo-600 flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M13.976 9.15c-2.172-.806-3.356-1.426-3.356-2.409 0-.831.683-1.305 1.901-1.305 2.227 0 4.515.858 6.09 1.631l.89-5.494C18.252.975 15.697 0 12.165 0 9.667 0 7.589.654 6.104 1.872 4.56 3.147 3.757 4.992 3.757 7.218c0 4.039 2.467 5.76 6.476 7.219 2.585.92 3.445 1.574 3.445 2.583 0 .98-.84 1.545-2.354 1.545-1.875 0-4.965-.921-6.99-2.109l-.9 5.555C5.175 22.99 8.385 24 11.714 24c2.641 0 4.843-.624 6.328-1.813 1.664-1.305 2.525-3.236 2.525-5.732 0-4.128-2.524-5.851-6.591-7.305z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-medium text-navy-900 group-hover:text-navy-700">Stripe</span>
            <p class="text-xs text-charcoal-500">Pagos</p>
          </div>
          <svg class="w-4 h-4 text-charcoal-400 group-hover:text-navy-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Version Info -->
    <div class="text-center py-4 text-xs text-charcoal-400">
      FashionMarket v1.0.0 • Desarrollado con Astro, React y Supabase
    </div>
  </div>
</AdminLayout>
