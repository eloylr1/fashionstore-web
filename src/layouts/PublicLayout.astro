---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Public Layout
 * Layout para páginas públicas de la tienda (storefront con header/footer)
 * ═══════════════════════════════════════════════════════════════════════════
 */

import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import CartSlideOver from '../components/islands/CartSlideOver';
import ShopChatbot from '../components/chatbot/ShopChatbot.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<BaseLayout title={title} description={description} image={image}>
  <!-- Header de la tienda -->
  <Header />
  
  <!-- Contenido principal -->
  <main class="flex-1">
    <slot />
  </main>
  
  <!-- Footer -->
  <Footer />
  
  <!-- Cart Slide Over (Isla React) -->
  <CartSlideOver client:load />
  
  <!-- Chatbot Asistente -->
  <ShopChatbot />
  
  <!-- Script para inicializar el carrito -->
  <script>
    import { initializeCart } from '../stores/cart';
    initializeCart();
  </script>
</BaseLayout>
