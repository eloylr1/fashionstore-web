---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Base Layout
 * Layout base común (HTML shell) para todas las páginas
 * ═══════════════════════════════════════════════════════════════════════════
 */

import '../styles/global.css';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import CartSlideOver from '../components/islands/CartSlideOver';

interface Props {
  title: string;
  description?: string;
  image?: string;
  noHeaderFooter?: boolean;
}

const { 
  title, 
  description = 'FashionMarket - Moda masculina premium. Descubre nuestra colección de camisas, pantalones y trajes de alta calidad.',
  image = '/og-image.jpg',
  noHeaderFooter = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title} | FashionMarket</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | FashionMarket`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | FashionMarket`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preconnect para fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  
  <body class="min-h-screen flex flex-col bg-ivory">
    {!noHeaderFooter && <Header />}
    
    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>
    
    {!noHeaderFooter && <Footer />}
    
    <!-- Cart Slide Over (Isla React) -->
    <CartSlideOver client:load />
    
    <!-- Script para inicializar el carrito -->
    <script>
      import { initializeCart } from '../stores/cart';
      initializeCart();
    </script>
  </body>
</html>
