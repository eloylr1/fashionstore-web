  }

  // ==================== CHIP HANDLER ====================
  function handleChip(chip) {
    addUserMsg(chip);
    
    var lower = chip.toLowerCase();
    
    if (lower.indexOf("vendidos") !== -1 || lower.indexOf("popular") !== -1) {
      fetchProducts("popular", function(products) {
        if (products.length > 0) {
          addBotMsg("üî• Estos son nuestros m√°s vendidos:", ["‚ú® Novedades", "üõí Ver tienda", "‚ùì Ayuda"], products);
        } else {
          addBotMsg("No encontr√© productos destacados. <a href='/tienda' style='color:#c9a227'>Ver tienda</a>", ["‚ú® Novedades", "‚ùì Ayuda"], null);
