  .chatbot-toggle {
    position: fixed;
    bottom: 28px;
    right: 28px;
    z-index: 9998;
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: var(--chat-primary);
    color: white;
    border: none;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(10, 22, 40, 0.4);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: visible;
  }

  .chatbot-toggle::before {
    content: '';
    position: absolute;
    inset: -4px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--chat-accent) 0%, var(--chat-primary) 100%);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .chatbot-toggle:hover {
    transform: scale(1.08) translateY(-2px);
    box-shadow: 0 12px 40px rgba(10, 22, 40, 0.5);
  }

  .chatbot-toggle:hover::before {
    opacity: 1;
  }

  .chatbot-toggle-inner {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .chatbot-toggle svg {
    width: 28px;
    height: 28px;
    transition: all 0.3s ease;
  }

  .chatbot-icon-close {
    display: none;
    transform: rotate(-90deg);
  }

  .chatbot-toggle.active .chatbot-icon-open {
    display: none;
  }

  .chatbot-toggle.active .chatbot-icon-close {
    display: block;
    transform: rotate(0deg);
  }

  .chatbot-toggle.active .chatbot-toggle-inner {
    transform: rotate(90deg);
  }

  /* Badge con animaciÃ³n */
  .chatbot-badge {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 18px;
    height: 18px;
    background: var(--chat-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid white;
    transition: all 0.3s;
  }

  .chatbot-badge-dot {
    width: 6px;
    height: 6px;
    background: white;
    border-radius: 50%;
    animation: badge-pulse 2s ease-in-out infinite;
  }

  .chatbot-toggle.active .chatbot-badge {
    transform: scale(0);
    opacity: 0;
  }

  @keyframes badge-pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  /* Tooltip */
  .chatbot-tooltip {
    position: absolute;
    right: calc(100% + 12px);
    top: 50%;
    transform: translateY(-50%);
    background: var(--chat-primary);
    color: white;
    padding: 8px 14px;
    border-radius: 8px;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
    box-shadow: var(--chat-shadow-sm);
  }

  .chatbot-tooltip::after {
    content: '';
    position: absolute;
    right: -6px;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: var(--chat-primary);
  }

  .chatbot-toggle:hover .chatbot-tooltip {
    opacity: 1;
    visibility: visible;
  }

  .chatbot-toggle.active .chatbot-tooltip {
    display: none;
  }

