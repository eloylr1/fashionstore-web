---
/**
 * ═══════════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET CHATBOT - Diseño Interactivo Premium
 * ═══════════════════════════════════════════════════════════════════════════════
 */
---

<!-- Widget Container -->
<div id="chatbot-widget" class="cb-widget">
  
  <!-- Botón flotante -->
  <button id="chatbot-fab" class="cb-fab" type="button" aria-label="Abrir chat" aria-expanded="false">
    <svg class="cb-fab__icon cb-fab__icon--chat" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
    </svg>
    <svg class="cb-fab__icon cb-fab__icon--close" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>

  <!-- Panel del chat -->
  <div id="chatbot-panel" class="cb-panel" aria-hidden="true">
    
    <!-- Header -->
    <header class="cb-header">
      <button id="chatbot-back" class="cb-header__back" type="button" aria-label="Volver">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </button>
      <div class="cb-header__avatar">
        <svg viewBox="0 0 24 24" fill="currentColor">
          <rect x="3" y="3" width="18" height="18" rx="3" fill="#c9a227"/>
          <circle cx="9" cy="10" r="1.5" fill="#1a1a2e"/>
          <circle cx="15" cy="10" r="1.5" fill="#1a1a2e"/>
          <path d="M8 14h8" stroke="#1a1a2e" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <div class="cb-header__info">
        <h2 class="cb-header__title">Asistente</h2>
        <span class="cb-header__status">En línea</span>
      </div>
      <div class="cb-header__actions">
        <button id="chatbot-refresh" class="cb-header__btn" type="button" aria-label="Reiniciar">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M23 4v6h-6M1 20v-6h6"/>
            <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
          </svg>
        </button>
        <button id="chatbot-menu" class="cb-header__btn" type="button" aria-label="Menú">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <circle cx="12" cy="5" r="2"/>
            <circle cx="12" cy="12" r="2"/>
            <circle cx="12" cy="19" r="2"/>
          </svg>
        </button>
      </div>
    </header>

    <!-- Mensajes -->
    <main id="chatbot-messages" class="cb-messages">
      <!-- Los mensajes se insertan dinámicamente -->
    </main>

    <!-- Input -->
    <footer class="cb-footer">
      <div class="cb-input-wrapper">
        <span class="cb-input-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
        </span>
        <input type="text" id="chatbot-input" class="cb-input" placeholder="Escribe tu mensaje..." autocomplete="off"/>
        <button type="button" id="chatbot-send" class="cb-send" aria-label="Enviar">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
          </svg>
        </button>
      </div>
    </footer>
  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════════
     VARIABLES
     ═══════════════════════════════════════════════════════════════════════════════ */
  :root {
    --cb-bg-dark: #1a1a2e;
    --cb-bg-darker: #16162a;
    --cb-bg-card: #252542;
    --cb-accent: #c9a227;
    --cb-accent-light: #e6c453;
    --cb-text: #ffffff;
    --cb-text-muted: #8b8ba3;
    --cb-border: #2d2d4a;
    --cb-success: #22c55e;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     WIDGET
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-widget {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 9999;
    font-family: system-ui, -apple-system, sans-serif;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     FAB
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-fab {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--cb-accent);
    color: var(--cb-bg-dark);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(201, 162, 39, 0.4);
    transition: all 0.3s ease;
    position: relative;
  }

  .cb-fab:hover {
    transform: scale(1.08);
    box-shadow: 0 6px 30px rgba(201, 162, 39, 0.5);
  }

  .cb-fab__icon {
    width: 28px;
    height: 28px;
    transition: all 0.3s ease;
  }

  .cb-fab__icon--close {
    position: absolute;
    opacity: 0;
    transform: rotate(-90deg) scale(0.5);
  }

  .cb-fab[aria-expanded="true"] .cb-fab__icon--chat {
    opacity: 0;
    transform: rotate(90deg) scale(0.5);
  }

  .cb-fab[aria-expanded="true"] .cb-fab__icon--close {
    opacity: 1;
    transform: rotate(0) scale(1);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     PANEL
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-panel {
    position: absolute;
    bottom: 75px;
    right: 0;
    width: 400px;
    height: 600px;
    background: var(--cb-bg-dark);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.5);
  }

  .cb-panel[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     HEADER
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-header {
    background: var(--cb-bg-darker);
    padding: 16px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid var(--cb-border);
  }

  .cb-header__back {
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    color: var(--cb-text);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    transition: background 0.2s;
  }

  .cb-header__back:hover {
    background: var(--cb-bg-card);
  }

  .cb-header__back svg {
    width: 20px;
    height: 20px;
  }

  .cb-header__avatar {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .cb-header__avatar svg {
    width: 100%;
    height: 100%;
  }

  .cb-header__info {
    flex: 1;
  }

  .cb-header__title {
    font-size: 17px;
    font-weight: 600;
    color: var(--cb-text);
    margin: 0;
  }

  .cb-header__status {
    font-size: 13px;
    color: var(--cb-success);
  }

  .cb-header__actions {
    display: flex;
    gap: 8px;
  }

  .cb-header__btn {
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    color: var(--cb-text-muted);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .cb-header__btn:hover {
    background: var(--cb-bg-card);
    color: var(--cb-text);
  }

  .cb-header__btn svg {
    width: 20px;
    height: 20px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     MESSAGES
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    background: var(--cb-bg-dark);
  }

  .cb-messages::-webkit-scrollbar {
    width: 6px;
  }

  .cb-messages::-webkit-scrollbar-thumb {
    background: var(--cb-border);
    border-radius: 3px;
  }

  /* Message */
  .cb-msg {
    max-width: 90%;
    animation: msgSlide 0.3s ease;
  }

  @keyframes msgSlide {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .cb-msg--user {
    align-self: flex-end;
  }

  .cb-msg--bot {
    align-self: flex-start;
  }

  .cb-msg__bubble {
    padding: 14px 18px;
    border-radius: 18px;
    font-size: 15px;
    line-height: 1.5;
  }

  .cb-msg--user .cb-msg__bubble {
    background: var(--cb-accent);
    color: var(--cb-bg-dark);
    border-bottom-right-radius: 6px;
  }

  .cb-msg--bot .cb-msg__bubble {
    background: var(--cb-bg-card);
    color: var(--cb-text);
    border-bottom-left-radius: 6px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     CHIPS - Botones interactivos con emojis
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 14px;
  }

  .cb-chip {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: var(--cb-bg-card);
    color: var(--cb-accent);
    border: 1.5px solid var(--cb-accent);
    padding: 10px 16px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: inherit;
    white-space: nowrap;
  }

  .cb-chip:hover {
    background: var(--cb-accent);
    color: var(--cb-bg-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(201, 162, 39, 0.3);
  }

  .cb-chip:active {
    transform: translateY(0);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     PRODUCTS GRID
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-products {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-top: 14px;
  }

  .cb-product {
    background: var(--cb-bg-card);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.2s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
    position: relative;
  }

  .cb-product:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .cb-product__badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: var(--cb-accent);
    color: var(--cb-bg-dark);
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
  }

  .cb-product__img {
    width: 100%;
    height: 100px;
    background: var(--cb-border);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .cb-product__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .cb-product:hover .cb-product__img img {
    transform: scale(1.05);
  }

  .cb-product__img-placeholder {
    width: 40px;
    height: 40px;
    color: var(--cb-text-muted);
    opacity: 0.5;
  }

  .cb-product__info {
    padding: 12px;
  }

  .cb-product__name {
    font-size: 13px;
    font-weight: 600;
    color: var(--cb-text);
    margin: 0 0 4px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .cb-product__price {
    font-size: 16px;
    font-weight: 700;
    color: var(--cb-accent);
    margin: 0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     FOOTER / INPUT
     ═══════════════════════════════════════════════════════════════════════════════ */
  .cb-footer {
    padding: 16px 20px;
    background: var(--cb-bg-darker);
    border-top: 1px solid var(--cb-border);
  }

  .cb-input-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
    background: var(--cb-bg-card);
    border-radius: 30px;
    padding: 6px 6px 6px 18px;
    border: 1px solid var(--cb-border);
    transition: border-color 0.2s;
  }

  .cb-input-wrapper:focus-within {
    border-color: var(--cb-accent);
  }

  .cb-input-icon {
    color: var(--cb-text-muted);
    flex-shrink: 0;
  }

  .cb-input-icon svg {
    width: 20px;
    height: 20px;
  }

  .cb-input {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--cb-text);
    font-size: 15px;
    padding: 10px 0;
    font-family: inherit;
  }

  .cb-input:focus {
    outline: none;
  }

  .cb-input::placeholder {
    color: var(--cb-text-muted);
  }

  .cb-send {
    width: 44px;
    height: 44px;
    background: var(--cb-accent);
    color: var(--cb-bg-dark);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
    flex-shrink: 0;
  }

  .cb-send:hover {
    background: var(--cb-accent-light);
    transform: scale(1.05);
  }

  .cb-send svg {
    width: 20px;
    height: 20px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     RESPONSIVE
     ═══════════════════════════════════════════════════════════════════════════════ */
  @media (max-width: 480px) {
    .cb-widget {
      bottom: 16px;
      right: 16px;
    }

    .cb-panel {
      width: calc(100vw - 32px);
      height: 75vh;
      bottom: 70px;
      right: 0;
    }

    .cb-fab {
      width: 54px;
      height: 54px;
    }

    .cb-products {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script is:inline src="/js/chatbot.js"></script>

<script is:inline>
// @ts-nocheck
(function() {
  var fab = document.getElementById('chatbot-fab');
  var panel = document.getElementById('chatbot-panel');
  var backBtn = document.getElementById('chatbot-back');
  var refreshBtn = document.getElementById('chatbot-refresh');
  var input = document.getElementById('chatbot-input');
  var sendBtn = document.getElementById('chatbot-send');
  var messagesContainer = document.getElementById('chatbot-messages');
  
  if (!fab || !panel || !input || !sendBtn || !messagesContainer) return;
  
  var isOpen = false;
  var initialized = false;

  function openChat() {
    isOpen = true;
    fab.setAttribute('aria-expanded', 'true');
    panel.setAttribute('aria-hidden', 'false');
    setTimeout(function() { input.focus(); }, 100);
    
    if (!initialized && window.ChatbotEngine) {
      initialized = true;
      var welcome = window.ChatbotEngine.getWelcomeMessage();
      renderBotMessage(welcome.text, welcome.chips, welcome.products);
    }
  }
  
  function closeChat() {
    isOpen = false;
    fab.setAttribute('aria-expanded', 'false');
    panel.setAttribute('aria-hidden', 'true');
  }
  
  function toggleChat() {
    isOpen ? closeChat() : openChat();
  }
  
  function resetChat() {
    messagesContainer.innerHTML = '';
    initialized = false;
    if (window.ChatbotEngine) {
      initialized = true;
      var welcome = window.ChatbotEngine.getWelcomeMessage();
      renderBotMessage(welcome.text, welcome.chips, welcome.products);
    }
  }

  function escapeHtml(text) {
    var div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  function renderUserMessage(text) {
    var msgEl = document.createElement('div');
    msgEl.className = 'cb-msg cb-msg--user';
    msgEl.innerHTML = '<div class="cb-msg__bubble">' + escapeHtml(text) + '</div>';
    messagesContainer.appendChild(msgEl);
    scrollToBottom();
  }
  
  function renderBotMessage(text, chips, products) {
    var msgEl = document.createElement('div');
    msgEl.className = 'cb-msg cb-msg--bot';
    
    var html = '<div class="cb-msg__bubble">' + text + '</div>';
    
    // Productos en grid
    if (products && products.length > 0) {
      html += '<div class="cb-products">';
      for (var i = 0; i < products.length; i++) {
        var p = products[i];
        var badgeHtml = p.badge ? '<span class="cb-product__badge">' + p.badge + '</span>' : '';
        var imgHtml = p.image 
          ? '<img src="' + p.image + '" alt="' + escapeHtml(p.name) + '" loading="lazy"/>'
          : '<svg class="cb-product__img-placeholder" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46L16 2a4 4 0 01-8 0L3.62 3.46a2 2 0 00-1.34 2.23l.58 3.47a1 1 0 00.99.84H6v10c0 1.1.9 2 2 2h8a2 2 0 002-2V10h2.15a1 1 0 00.99-.84l.58-3.47a2 2 0 00-1.34-2.23z"/></svg>';
        
        html += '<a href="' + p.url + '" class="cb-product">' +
          badgeHtml +
          '<div class="cb-product__img">' + imgHtml + '</div>' +
          '<div class="cb-product__info">' +
          '<p class="cb-product__name">' + escapeHtml(p.name) + '</p>' +
          '<p class="cb-product__price">' + p.price.toFixed(0) + '€</p>' +
          '</div></a>';
      }
      html += '</div>';
    }
    
    // Chips interactivos
    if (chips && chips.length > 0) {
      html += '<div class="cb-chips">';
      for (var j = 0; j < chips.length; j++) {
        var chipText = typeof chips[j] === 'object' ? chips[j].text : chips[j];
        html += '<button type="button" class="cb-chip" data-chip="' + j + '">' + escapeHtml(chipText) + '</button>';
      }
      html += '</div>';
    }
    
    msgEl.innerHTML = html;
    messagesContainer.appendChild(msgEl);
    
    // Event listeners para chips
    var chipBtns = msgEl.querySelectorAll('.cb-chip');
    for (var k = 0; k < chipBtns.length; k++) {
      (function(idx) {
        chipBtns[idx].addEventListener('click', function() {
          var chipText = typeof chips[idx] === 'object' ? chips[idx].text : chips[idx];
          handleUserInput(chipText);
        });
      })(k);
    }
    
    scrollToBottom();
  }
  
  function scrollToBottom() {
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }

  function handleUserInput(text) {
    if (!text || !text.trim()) return;
    
    var cleanText = text.trim();
    renderUserMessage(cleanText);
    
    if (window.ChatbotEngine) {
      var response = window.ChatbotEngine.processMessage(cleanText);
      setTimeout(function() {
        renderBotMessage(response.text, response.chips, response.products);
      }, 400);
    }
  }
  
  function handleSend() {
    var text = input.value;
    input.value = '';
    handleUserInput(text);
  }

  // Event listeners
  fab.addEventListener('click', toggleChat);
  if (backBtn) backBtn.addEventListener('click', closeChat);
  if (refreshBtn) refreshBtn.addEventListener('click', resetChat);
  sendBtn.addEventListener('click', handleSend);
  
  input.addEventListener('keydown', function(e) {
    if (e.key === 'Enter') {
      e.preventDefault();
      handleSend();
    }
  });
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && isOpen) closeChat();
  });
})();
</script>
