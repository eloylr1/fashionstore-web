    'marrÃ³n': ['marrÃ³n', 'brown'],
    'beige': ['beige', 'crema']
  };

  const PRICE_PATTERNS = [
    { pattern: /menos de (\d+)/i, extract: (m) => parseInt(m[1]) },
    { pattern: /hasta (\d+)/i, extract: (m) => parseInt(m[1]) },
    { pattern: /mÃ¡ximo (\d+)/i, extract: (m) => parseInt(m[1]) },
    { pattern: /barato/i, extract: () => 30 }
  ];

  const GREETING_KEYWORDS = ['hola', 'buenas', 'hey', 'buenos dÃ­as', 'quÃ© tal'];
  const THANKS_KEYWORDS = ['gracias', 'genial', 'perfecto', 'vale', 'ok'];

  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // FUNCIONES DEL ENGINE
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

  function initChatbot() {
    addBotMessage(
      'Â¡Hola! ğŸ‘‹ Soy tu asistente de FashionMarket. Â¿QuÃ© buscas hoy?',
      ['Ver novedades', 'Buscar por categorÃ­a', 'Ayuda']
    );
  }

  function processMessage(userMessage) {
    const text = userMessage.toLowerCase().trim();
    addUserMessage(userMessage);

    if (chatState.awaitingResponse) {
      chatState.awaitingResponse = null;
      return handleProductSearch(extractFilters(text));
    }

    // Detectar FAQ
    for (const [key, faqItem] of Object.entries(chatState.faq)) {
      if (faqItem.keywords.some(kw => text.includes(kw))) {
        let msg = faqItem.answer;
        if (faqItem.link) msg += ` <a href="${faqItem.link}" class="chatbot-link">MÃ¡s info â†’</a>`;
        return addBotMessage(msg, ['Tengo otra duda', 'Buscar productos']);
      }
    }

    // Saludo
    if (GREETING_KEYWORDS.some(g => text.includes(g))) {
      return addBotMessage(
        'Â¡Hola! ğŸ˜Š Â¿En quÃ© puedo ayudarte? Puedo recomendarte ropa o resolver dudas.',
        ['Ver novedades', 'Camisetas', 'Pantalones', 'Ayuda']
      );
    }

    // Gracias
    if (THANKS_KEYWORDS.some(t => text.includes(t))) {
      return addBotMessage('Â¡De nada! ğŸ™Œ AquÃ­ estoy si necesitas algo mÃ¡s.', ['Seguir comprando']);
    }

    // Ayuda
    if (text.includes('ayuda') || text === '?') {
      return addBotMessage(
        'ğŸ›’ Buscar productos: "sudadera negra"\nğŸ“¦ EnvÃ­os y devoluciones\nğŸ’³ Formas de pago\nğŸ“ GuÃ­a de tallas',
        ['Buscar ropa', 'EnvÃ­os', 'Tallas']
      );
    }

    // Ver todo
    if (text.includes('ver todo') || text.includes('catÃ¡logo') || text.includes('novedades')) {
      const popular = getPopularProducts(3);
      return addBotMessage('Estas son nuestras novedades mÃ¡s populares:', null, popular);
    }

    // BÃºsqueda de productos
    const filters = extractFilters(text);
    if (filters.category || filters.style || filters.occasion || filters.color || filters.maxPrice ||
        text.includes('busco') || text.includes('quiero') || text.includes('necesito')) {
      return handleProductSearch(filters);
    }

    // No entendido
    const popular = getPopularProducts(2);
    addBotMessage(
      'No estoy seguro de entenderte. Â¿Buscas alguna de estas prendas?',
      ['Ver categorÃ­as', 'EnvÃ­os', 'Contacto'],
      popular
    );
  }

  function extractFilters(text) {
    const filters = {};

    for (const [cat, syns] of Object.entries(CATEGORY_SYNONYMS)) {
      if (syns.some(s => text.includes(s))) { filters.category = cat; break; }
    }

    for (const [style, kws] of Object.entries(STYLE_KEYWORDS)) {
      if (kws.some(k => text.includes(k))) { filters.style = style; break; }
    }

    for (const [occ, kws] of Object.entries(OCCASION_KEYWORDS)) {
      if (kws.some(k => text.includes(k))) { filters.occasion = occ; break; }
    }

    for (const [color, kws] of Object.entries(COLOR_KEYWORDS)) {
      if (kws.some(k => text.includes(k))) { filters.color = color; break; }
    }

    for (const { pattern, extract } of PRICE_PATTERNS) {
      const m = text.match(pattern);
      if (m) { filters.maxPrice = extract(m); break; }
    }

    const sizeMatch = text.match(/\b(xs|s|m|l|xl|xxl|\d{2})\b/i);
    if (sizeMatch) filters.size = sizeMatch[1].toUpperCase();

    return filters;
  }

  function handleProductSearch(filters) {
    chatState.filters = { ...chatState.filters, ...filters };
    let results = searchProducts(chatState.filters);

    if (results.length === 0) {
      chatState.filters = {};
      const popular = getPopularProducts(3);
      return addBotMessage('No encontrÃ© coincidencias exactas, pero estos son muy populares:', null, popular);
    }

    if (!chatState.filters.category && !chatState.filters.style && results.length > 4) {
      chatState.awaitingResponse = 'category';
      return addBotMessage('Â¿QuÃ© tipo de prenda buscas?', ['Camisetas', 'Sudaderas', 'Pantalones', 'Camisas']);
    }

    const top = results.slice(0, 4);
    const msg = top.length === 1 ? 'Â¡Tengo justo lo que buscas!' : `EncontrÃ© ${results.length} opciones. Las mejores:`;
    addBotMessage(msg, null, top);
    chatState.filters = {};
  }

  function searchProducts(filters) {
    let results = chatState.catalog.filter(p => p.inStock);

    if (filters.category) results = results.filter(p => p.category === filters.category);
    if (filters.color) results = results.filter(p => p.colors.some(c => c.toLowerCase().includes(filters.color)));
    if (filters.maxPrice) results = results.filter(p => p.price <= filters.maxPrice);
    if (filters.size) results = results.filter(p => p.sizes.some(s => s.toUpperCase() === filters.size));

    results = results.map(p => {
      let score = p.popularity;
      if (filters.style && p.tags.includes(filters.style)) score += 30;
      if (filters.occasion && p.tags.includes(filters.occasion)) score += 25;
      return { ...p, score };
    });

    results.sort((a, b) => b.score - a.score);
    return results;
  }

  function getPopularProducts(count) {
    return [...chatState.catalog].filter(p => p.inStock).sort((a, b) => b.popularity - a.popularity).slice(0, count);
  }

