<style>
  #cb-widget {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 99999;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  #cb-fab {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #c9a227 0%, #ddb84a 100%);
    color: #1a1a2e;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(201, 162, 39, 0.5);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  #cb-fab:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(201, 162, 39, 0.6);
  }

  #cb-panel {
    position: absolute;
    bottom: 75px;
    right: 0;
    width: 380px;
    height: 550px;
    background: #1e1e32;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0,0,0,0.5);
    display: flex;
    flex-direction: column;
  }

  #cb-header {
    background: #15152a;
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 12px;
    border-bottom: 1px solid #3d3d5c;
  }

  #cb-avatar {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, #c9a227 0%, #ddb84a 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 26px;
  }

  #cb-header-info {
    flex: 1;
  }

  #cb-title {
    color: #ffffff;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: -0.3px;
  }

  #cb-status {
    color: #4ade80;
    font-size: 13px;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  #cb-dot {
    width: 8px;
    height: 8px;
    background: #4ade80;
    border-radius: 50%;
    display: inline-block;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  #cb-refresh, #cb-close-btn {
    width: 38px;
    height: 38px;
    background: #2a2a48;
    border: none;
    color: #b8b8d0;
    font-size: 18px;
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.2s;
  }

  #cb-refresh:hover, #cb-close-btn:hover {
    background: #3d3d5c;
    color: #ffffff;
  }

  #cb-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    background: #1e1e32;
  }

  #cb-messages::-webkit-scrollbar {
    width: 6px;
  }

  #cb-messages::-webkit-scrollbar-thumb {
    background: #3d3d5c;
    border-radius: 3px;
  }

  .cb-msg {
    max-width: 92%;
    animation: cbSlide 0.3s ease;
  }

  @keyframes cbSlide {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .cb-msg-user {
    align-self: flex-end;
  }

  .cb-msg-bot {
    align-self: flex-start;
  }

  .cb-bubble {
    padding: 14px 18px;
    border-radius: 20px;
    font-size: 15px;
    line-height: 1.6;
  }

  .cb-msg-user .cb-bubble {
    background: linear-gradient(135deg, #c9a227 0%, #ddb84a 100%);
    color: #1a1a1a;
    font-weight: 500;
    border-bottom-right-radius: 6px;
  }

  .cb-msg-bot .cb-bubble {
    background: #2a2a48;
    color: #f0f0f8;
    border-bottom-left-radius: 6px;
    border: 1px solid #3d3d5c;
  }

  /* CHIPS - BOTONES SEPARADOS */
  .cb-chips {
    display: flex !important;
    flex-wrap: wrap !important;
    gap: 10px !important;
    margin-top: 14px !important;
    padding: 0 !important;
  }

  .cb-chip {
    display: inline-flex !important;
    align-items: center !important;
    background: #2a2a48 !important;
    color: #f5d76e !important;
    border: 2px solid #c9a227 !important;
    padding: 10px 18px !important;
    border-radius: 25px !important;
    font-size: 14px !important;
    font-weight: 600 !important;
    cursor: pointer !important;
    transition: all 0.2s !important;
    font-family: inherit !important;
    white-space: nowrap !important;
    text-decoration: none !important;
    box-sizing: border-box !important;
  }

  .cb-chip:hover {
    background: #c9a227 !important;
    color: #1a1a1a !important;
    transform: translateY(-2px) !important;
    box-shadow: 0 4px 12px rgba(201, 162, 39, 0.4) !important;
  }

  /* PRODUCTOS - GRID */
  .cb-products {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-top: 14px;
  }

  .cb-product {
    background: #2a2a48;
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: all 0.2s;
    position: relative;
    border: 1px solid #3d3d5c;
  }

  .cb-product:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    border-color: #c9a227;
  }

  .cb-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: linear-gradient(135deg, #c9a227 0%, #ddb84a 100%);
    color: #1a1a1a;
    padding: 4px 10px;
    border-radius: 8px;
    font-size: 10px;
    font-weight: 800;
    letter-spacing: 0.5px;
    z-index: 2;
    box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  }

  .cb-product-img {
    width: 100%;
    height: 100px;
    object-fit: cover;
    background: #15152a;
  }

  .cb-product-info {
    padding: 12px;
  }

  .cb-product-name {
    color: #ffffff;
    font-size: 13px;
    font-weight: 600;
    margin: 0 0 6px 0;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .cb-product-price {
    color: #f5d76e;
    font-size: 16px;
    font-weight: 800;
    margin: 0;
  }

  .cb-loading {
    display: flex;
    gap: 6px;
    padding: 10px 0;
  }

  .cb-loading span {
    width: 8px;
    height: 8px;
    background: #c9a227;
    border-radius: 50%;
    animation: bounce 1.4s infinite ease-in-out both;
  }

  .cb-loading span:nth-child(1) { animation-delay: -0.32s; }
  .cb-loading span:nth-child(2) { animation-delay: -0.16s; }

  @keyframes bounce {
    0%, 80%, 100% { transform: scale(0); }
    40% { transform: scale(1); }
  }

  #cb-footer {
    padding: 16px;
    background: #15152a;
    border-top: 1px solid #3d3d5c;
    display: flex;
    gap: 12px;
  }

  #cb-input {
    flex: 1;
    background: #2a2a48;
    border: 2px solid #3d3d5c;
    border-radius: 25px;
    padding: 14px 20px;
    color: #ffffff;
    font-size: 15px;
    font-family: inherit;
  }

  #cb-input:focus {
    outline: none;
    border-color: #c9a227;
    background: #33334f;
  }

  #cb-input::placeholder {
    color: #8888a8;
  }

  #cb-send {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #c9a227 0%, #ddb84a 100%);
    color: #1a1a1a;
    border: none;
    border-radius: 50%;
    font-size: 20px;
    cursor: pointer;
    transition: all 0.2s;
    font-weight: bold;
  }

  #cb-send:hover {
    transform: scale(1.08);
    box-shadow: 0 4px 16px rgba(201, 162, 39, 0.5);
  }

  @media (max-width: 480px) {
    #cb-widget { bottom: 15px; right: 15px; }
    #cb-panel { width: calc(100vw - 30px); height: 70vh; }
    #cb-fab { width: 55px; height: 55px; }
  }
</style>

