---
/**
 * ═══════════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET CHATBOT WIDGET
 * Widget de chat flotante accesible y responsive
 * ═══════════════════════════════════════════════════════════════════════════════
 */
---

<!-- Widget Container -->
<div id="chatbot-widget" class="chatbot-widget">
  
  <!-- Botón flotante -->
  <button 
    id="chatbot-fab" 
    class="chatbot-fab"
    type="button"
    aria-label="Abrir chat de ayuda"
    aria-expanded="false"
    aria-controls="chatbot-panel"
  >
    <span class="chatbot-fab__icon chatbot-fab__icon--chat">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
      </svg>
    </span>
    <span class="chatbot-fab__icon chatbot-fab__icon--close">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </span>
    <span class="chatbot-fab__badge" aria-hidden="true"></span>
  </button>

  <!-- Panel del chat -->
  <div 
    id="chatbot-panel" 
    class="chatbot-panel"
    role="dialog"
    aria-label="Chat de ayuda FashionMarket"
    aria-hidden="true"
  >
    <!-- Header -->
    <header class="chatbot-header">
      <div class="chatbot-header__info">
        <div class="chatbot-header__avatar">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
          </svg>
        </div>
        <div class="chatbot-header__text">
          <h2 class="chatbot-header__title">FashionMarket</h2>
          <span class="chatbot-header__status">
            <span class="chatbot-header__status-dot"></span>
            Online
          </span>
        </div>
      </div>
      <button 
        id="chatbot-close" 
        class="chatbot-close"
        type="button"
        aria-label="Cerrar chat"
      >
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </header>

    <!-- Mensajes -->
    <main id="chatbot-messages" class="chatbot-messages" role="log" aria-live="polite" aria-label="Historial de mensajes">
      <!-- Los mensajes se insertan dinámicamente -->
    </main>

    <!-- Input -->
    <footer class="chatbot-footer">
      <form id="chatbot-form" class="chatbot-form">
        <input 
          type="text" 
          id="chatbot-input" 
          class="chatbot-input"
          placeholder="Escribe tu mensaje..."
          aria-label="Escribe tu mensaje"
          autocomplete="off"
        />
        <button 
          type="submit" 
          id="chatbot-send" 
          class="chatbot-send"
          aria-label="Enviar mensaje"
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="22" y1="2" x2="11" y2="13"></line>
            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
          </svg>
        </button>
      </form>
    </footer>
  </div>
</div>

<style>
  /* ═══════════════════════════════════════════════════════════════════════════════
     CSS VARIABLES
     ═══════════════════════════════════════════════════════════════════════════════ */
  :root {
    --cb-primary: #0a1628;
    --cb-primary-light: #162035;
    --cb-accent: #b8a067;
    --cb-accent-hover: #d4b978;
    --cb-white: #ffffff;
    --cb-gray-50: #f9fafb;
    --cb-gray-100: #f3f4f6;
    --cb-gray-200: #e5e7eb;
    --cb-gray-400: #9ca3af;
    --cb-gray-600: #4b5563;
    --cb-gray-800: #1f2937;
    --cb-success: #10b981;
    --cb-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --cb-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
    --cb-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
    --cb-shadow-xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    --cb-radius-sm: 8px;
    --cb-radius: 12px;
    --cb-radius-lg: 16px;
    --cb-radius-full: 9999px;
    --cb-transition: 0.2s ease;
    --cb-transition-slow: 0.3s ease;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     WIDGET CONTAINER
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-widget {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 9999;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     FAB BUTTON
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-fab {
    width: 56px;
    height: 56px;
    border-radius: var(--cb-radius-full);
    background: var(--cb-primary);
    color: var(--cb-white);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(10, 22, 40, 0.4);
    transition: all var(--cb-transition-slow);
    position: relative;
  }

  .chatbot-fab:hover {
    transform: scale(1.05) translateY(-2px);
    box-shadow: 0 8px 30px rgba(10, 22, 40, 0.5);
  }

  .chatbot-fab:focus {
    outline: none;
    box-shadow: 0 0 0 3px var(--cb-accent), 0 4px 20px rgba(10, 22, 40, 0.4);
  }

  .chatbot-fab__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--cb-transition-slow);
  }

  .chatbot-fab__icon svg {
    width: 24px;
    height: 24px;
  }

  .chatbot-fab__icon--close {
    position: absolute;
    opacity: 0;
    transform: rotate(-90deg) scale(0.5);
  }

  .chatbot-fab[aria-expanded="true"] .chatbot-fab__icon--chat {
    opacity: 0;
    transform: rotate(90deg) scale(0.5);
  }

  .chatbot-fab[aria-expanded="true"] .chatbot-fab__icon--close {
    opacity: 1;
    transform: rotate(0) scale(1);
  }

  .chatbot-fab__badge {
    position: absolute;
    top: -2px;
    right: -2px;
    width: 14px;
    height: 14px;
    background: var(--cb-accent);
    border: 2px solid var(--cb-white);
    border-radius: var(--cb-radius-full);
    transition: all var(--cb-transition);
  }

  .chatbot-fab[aria-expanded="true"] .chatbot-fab__badge {
    transform: scale(0);
    opacity: 0;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     PANEL
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-panel {
    position: absolute;
    bottom: 70px;
    right: 0;
    width: 380px;
    height: 520px;
    background: var(--cb-white);
    border-radius: var(--cb-radius-lg);
    box-shadow: var(--cb-shadow-xl);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(16px) scale(0.95);
    transition: all var(--cb-transition-slow);
    border: 1px solid var(--cb-gray-200);
  }

  .chatbot-panel[aria-hidden="false"] {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     HEADER
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-header {
    background: linear-gradient(135deg, var(--cb-primary) 0%, var(--cb-primary-light) 100%);
    color: var(--cb-white);
    padding: 16px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-shrink: 0;
  }

  .chatbot-header__info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .chatbot-header__avatar {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: var(--cb-radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .chatbot-header__avatar svg {
    width: 22px;
    height: 22px;
  }

  .chatbot-header__text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .chatbot-header__title {
    font-size: 15px;
    font-weight: 600;
    margin: 0;
    letter-spacing: -0.01em;
  }

  .chatbot-header__status {
    font-size: 12px;
    opacity: 0.9;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .chatbot-header__status-dot {
    width: 8px;
    height: 8px;
    background: var(--cb-success);
    border-radius: var(--cb-radius-full);
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .chatbot-close {
    width: 32px;
    height: 32px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--cb-radius-sm);
    color: var(--cb-white);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background var(--cb-transition);
  }

  .chatbot-close:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .chatbot-close:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.5);
  }

  .chatbot-close svg {
    width: 18px;
    height: 18px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     MESSAGES
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    background: var(--cb-gray-50);
  }

  .chatbot-messages::-webkit-scrollbar {
    width: 6px;
  }

  .chatbot-messages::-webkit-scrollbar-track {
    background: transparent;
  }

  .chatbot-messages::-webkit-scrollbar-thumb {
    background: var(--cb-gray-300);
    border-radius: 3px;
  }

  /* Message bubbles */
  .chatbot-msg {
    max-width: 85%;
    animation: msgIn 0.3s ease;
  }

  @keyframes msgIn {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chatbot-msg--user {
    align-self: flex-end;
  }

  .chatbot-msg--bot {
    align-self: flex-start;
  }

  .chatbot-msg__bubble {
    padding: 12px 16px;
    border-radius: var(--cb-radius);
    font-size: 14px;
    line-height: 1.5;
  }

  .chatbot-msg--user .chatbot-msg__bubble {
    background: var(--cb-primary);
    color: var(--cb-white);
    border-bottom-right-radius: 4px;
  }

  .chatbot-msg--bot .chatbot-msg__bubble {
    background: var(--cb-white);
    color: var(--cb-gray-800);
    border-bottom-left-radius: 4px;
    box-shadow: var(--cb-shadow-sm);
    border: 1px solid var(--cb-gray-200);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     CHIPS - MUY IMPORTANTE
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 12px;
    padding-top: 12px;
    border-top: 1px solid var(--cb-gray-200);
  }

  .chatbot-chip {
    display: inline-block;
    background: var(--cb-white);
    color: var(--cb-gray-800);
    border: 1px solid var(--cb-gray-200);
    padding: 8px 14px;
    border-radius: var(--cb-radius-full);
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all var(--cb-transition);
    white-space: nowrap;
    font-family: inherit;
    line-height: 1;
  }

  .chatbot-chip:hover {
    background: var(--cb-primary);
    color: var(--cb-white);
    border-color: var(--cb-primary);
    transform: translateY(-1px);
    box-shadow: var(--cb-shadow);
  }

  .chatbot-chip:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--cb-accent);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     PRODUCT CARDS
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-products {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 12px;
  }

  .chatbot-product {
    background: var(--cb-white);
    border: 1px solid var(--cb-gray-200);
    border-radius: var(--cb-radius);
    padding: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    transition: all var(--cb-transition);
  }

  .chatbot-product:hover {
    border-color: var(--cb-accent);
    box-shadow: 0 2px 8px rgba(184, 160, 103, 0.15);
  }

  .chatbot-product__info {
    flex: 1;
    min-width: 0;
  }

  .chatbot-product__name {
    font-size: 13px;
    font-weight: 600;
    color: var(--cb-gray-800);
    margin: 0 0 2px 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .chatbot-product__desc {
    font-size: 11px;
    color: var(--cb-gray-600);
    margin: 0 0 4px 0;
  }

  .chatbot-product__price {
    font-size: 14px;
    font-weight: 700;
    color: var(--cb-accent);
    margin: 0;
  }

  .chatbot-product__btn {
    background: var(--cb-primary);
    color: var(--cb-white);
    padding: 8px 14px;
    border-radius: var(--cb-radius-sm);
    font-size: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--cb-transition);
    flex-shrink: 0;
  }

  .chatbot-product__btn:hover {
    background: var(--cb-accent);
  }

  .chatbot-product__btn:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--cb-accent);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     FOOTER / INPUT
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-footer {
    padding: 16px;
    background: var(--cb-white);
    border-top: 1px solid var(--cb-gray-200);
    flex-shrink: 0;
  }

  .chatbot-form {
    display: flex;
    gap: 10px;
    align-items: center;
    background: var(--cb-gray-100);
    border: 1px solid var(--cb-gray-200);
    border-radius: var(--cb-radius-full);
    padding: 4px 4px 4px 16px;
    transition: all var(--cb-transition);
  }

  .chatbot-form:focus-within {
    border-color: var(--cb-primary);
    background: var(--cb-white);
    box-shadow: 0 0 0 3px rgba(10, 22, 40, 0.08);
  }

  .chatbot-input {
    flex: 1;
    border: none;
    background: transparent;
    padding: 10px 0;
    font-size: 14px;
    color: var(--cb-gray-800);
    font-family: inherit;
  }

  .chatbot-input:focus {
    outline: none;
  }

  .chatbot-input::placeholder {
    color: var(--cb-gray-400);
  }

  .chatbot-send {
    width: 40px;
    height: 40px;
    background: var(--cb-primary);
    color: var(--cb-white);
    border: none;
    border-radius: var(--cb-radius-full);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--cb-transition);
    flex-shrink: 0;
  }

  .chatbot-send:hover {
    background: var(--cb-accent);
  }

  .chatbot-send:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--cb-accent);
  }

  .chatbot-send svg {
    width: 18px;
    height: 18px;
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     LINKS
     ═══════════════════════════════════════════════════════════════════════════════ */
  .chatbot-link {
    color: var(--cb-accent);
    text-decoration: underline;
    font-weight: 500;
  }

  .chatbot-link:hover {
    color: var(--cb-accent-hover);
  }

  /* ═══════════════════════════════════════════════════════════════════════════════
     RESPONSIVE
     ═══════════════════════════════════════════════════════════════════════════════ */
  @media (max-width: 480px) {
    .chatbot-widget {
      bottom: 16px;
      right: 16px;
    }

    .chatbot-panel {
      width: calc(100vw - 32px);
      height: 70vh;
      bottom: 65px;
      right: -8px;
    }

    .chatbot-fab {
      width: 52px;
      height: 52px;
    }
  }
</style>

<script is:inline src="/js/chatbot.js"></script>

<script>
(function() {
  // ═══════════════════════════════════════════════════════════════════════════════
  // DOM ELEMENTS
  // ═══════════════════════════════════════════════════════════════════════════════
  
  const fab = document.getElementById('chatbot-fab');
  const panel = document.getElementById('chatbot-panel');
  const closeBtn = document.getElementById('chatbot-close');
  const form = document.getElementById('chatbot-form');
  const input = document.getElementById('chatbot-input');
  const messagesContainer = document.getElementById('chatbot-messages');
  
  let isOpen = false;
  let initialized = false;

  // ═══════════════════════════════════════════════════════════════════════════════
  // OPEN / CLOSE
  // ═══════════════════════════════════════════════════════════════════════════════
  
  function openChat() {
    isOpen = true;
    fab.setAttribute('aria-expanded', 'true');
    panel.setAttribute('aria-hidden', 'false');
    
    setTimeout(() => {
      input.focus();
    }, 100);
    
    if (!initialized && window.ChatbotEngine) {
      initialized = true;
      const welcome = window.ChatbotEngine.getWelcomeMessage();
      renderBotMessage(welcome.text, welcome.chips, welcome.products);
    }
  }
  
  function closeChat() {
    isOpen = false;
    fab.setAttribute('aria-expanded', 'false');
    panel.setAttribute('aria-hidden', 'true');
    fab.focus();
  }
  
  function toggleChat() {
    if (isOpen) {
      closeChat();
    } else {
      openChat();
    }
  }

  // ═══════════════════════════════════════════════════════════════════════════════
  // RENDER MESSAGES
  // ═══════════════════════════════════════════════════════════════════════════════
  
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  function renderUserMessage(text) {
    const msgEl = document.createElement('div');
    msgEl.className = 'chatbot-msg chatbot-msg--user';
    msgEl.innerHTML = `<div class="chatbot-msg__bubble">${escapeHtml(text)}</div>`;
    messagesContainer.appendChild(msgEl);
    scrollToBottom();
  }
  
  function renderBotMessage(text, chips, products) {
    const msgEl = document.createElement('div');
    msgEl.className = 'chatbot-msg chatbot-msg--bot';
    
    let html = `<div class="chatbot-msg__bubble">${text}</div>`;
    
    // Render products
    if (products && products.length > 0) {
      html += '<div class="chatbot-products">';
      products.forEach(product => {
        html += `
          <div class="chatbot-product">
            <div class="chatbot-product__info">
              <p class="chatbot-product__name">${escapeHtml(product.name)}</p>
              <p class="chatbot-product__desc">${escapeHtml(product.description)}</p>
              <p class="chatbot-product__price">${product.price.toFixed(2)}€</p>
            </div>
            <a href="${product.url}" class="chatbot-product__btn">Ver →</a>
          </div>
        `;
      });
      html += '</div>';
    }
    
    // Render chips - IMPORTANTE: cada chip es un button separado
    if (chips && chips.length > 0) {
      html += '<div class="chatbot-chips">';
      chips.forEach((chip, index) => {
        html += `<button type="button" class="chatbot-chip" data-chip-index="${index}">${escapeHtml(chip)}</button>`;
      });
      html += '</div>';
    }
    
    msgEl.innerHTML = html;
    messagesContainer.appendChild(msgEl);
    
    // Add click handlers to chips
    if (chips && chips.length > 0) {
      const chipButtons = msgEl.querySelectorAll('.chatbot-chip');
      chipButtons.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          handleUserInput(chips[index]);
        });
      });
    }
    
    scrollToBottom();
  }
  
  function scrollToBottom() {
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }

  // ═══════════════════════════════════════════════════════════════════════════════
  // HANDLE INPUT
  // ═══════════════════════════════════════════════════════════════════════════════
  
  function handleUserInput(text) {
    if (!text || !text.trim()) return;
    
    const cleanText = text.trim();
    renderUserMessage(cleanText);
    
    // Procesar con el engine
    if (window.ChatbotEngine) {
      const response = window.ChatbotEngine.processMessage(cleanText);
      
      // Pequeño delay para efecto natural
      setTimeout(() => {
        renderBotMessage(response.text, response.chips, response.products);
      }, 300);
    }
  }
  
  function handleSubmit(e) {
    e.preventDefault();
    const text = input.value;
    input.value = '';
    handleUserInput(text);
  }

  // ═══════════════════════════════════════════════════════════════════════════════
  // EVENT LISTENERS
  // ═══════════════════════════════════════════════════════════════════════════════
  
  fab.addEventListener('click', toggleChat);
  closeBtn.addEventListener('click', closeChat);
  form.addEventListener('submit', handleSubmit);
  
  // Escape para cerrar
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      closeChat();
    }
  });
  
  // Click fuera para cerrar (opcional)
  document.addEventListener('click', (e) => {
    if (isOpen && !panel.contains(e.target) && !fab.contains(e.target)) {
      closeChat();
    }
  });
})();
</script>
