---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Header Component
 * Header del panel de administración
 * ═══════════════════════════════════════════════════════════════════════════
 */

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="bg-white border-b border-charcoal-100 px-6 py-4">
  <div class="flex items-center justify-between">
    <!-- Mobile Menu Button + Title -->
    <div class="flex items-center gap-4">
      <button 
        type="button"
        class="lg:hidden p-2 -ml-2 text-charcoal-600 hover:text-navy-900 transition-colors"
        aria-label="Menú"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <h1 class="font-serif text-xl font-medium text-navy-900">
        {title}
      </h1>
    </div>
    
    <!-- Right Actions -->
    <div class="flex items-center gap-4">
      <!-- Notifications -->
      <button 
        type="button"
        class="relative p-2 text-charcoal-600 hover:text-navy-900 transition-colors"
        aria-label="Notificaciones"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
        </svg>
        <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-leather rounded-full"></span>
      </button>
      
      <!-- User Menu -->
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-navy-100 rounded-full flex items-center justify-center">
          <span class="text-sm font-medium text-navy-700">A</span>
        </div>
        <span class="hidden sm:block text-sm font-medium text-charcoal-700">Admin</span>
      </div>
    </div>
  </div>
</header>
