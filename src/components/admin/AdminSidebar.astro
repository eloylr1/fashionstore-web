---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Admin Sidebar Component
 * Navegación lateral profesional del panel de administración
 * ═══════════════════════════════════════════════════════════════════════════
 */

interface NavItem {
  href: string;
  label: string;
  icon: string;
  exact?: boolean;
  badge?: string | null;
}

const mainNavItems: NavItem[] = [
  { 
    href: '/admin', 
    label: 'Dashboard', 
    icon: 'dashboard',
    exact: true
  },
  { 
    href: '/admin/productos', 
    label: 'Productos', 
    icon: 'products',
  },
  { 
    href: '/admin/stock', 
    label: 'Stock', 
    icon: 'stock',
  },
  { 
    href: '/admin/categorias', 
    label: 'Categorías', 
    icon: 'categories' 
  },
  { 
    href: '/admin/pedidos', 
    label: 'Pedidos', 
    icon: 'orders',
  },
  { 
    href: '/admin/clientes', 
    label: 'Clientes', 
    icon: 'users' 
  },
];

const commerceNavItems: NavItem[] = [
  {
    href: '/admin/promociones',
    label: 'Promociones',
    icon: 'promo'
  },
  {
    href: '/admin/envios',
    label: 'Envíos',
    icon: 'shipping'
  },
  {
    href: '/admin/pagos',
    label: 'Métodos de Pago',
    icon: 'payments'
  },
  {
    href: '/admin/impuestos',
    label: 'Impuestos',
    icon: 'tax'
  },
];

const systemNavItems: NavItem[] = [
  {
    href: '/admin/configuracion',
    label: 'Configuración',
    icon: 'settings'
  }
];

const currentPath = Astro.url.pathname;

// Función para renderizar iconos
const icons: Record<string, string> = {
