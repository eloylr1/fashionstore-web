---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Button Component
 * Componente de botón reutilizable con variantes de estilo
 * ═══════════════════════════════════════════════════════════════════════════
 */

interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
  fullWidth?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  disabled = false,
  fullWidth = false,
  class: className = '',
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium tracking-wide transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2';

const variants = {
  primary: 'bg-navy-900 text-white hover:bg-navy-800 focus:ring-navy-500',
  secondary: 'bg-gold-matte text-navy-900 hover:bg-gold-dark focus:ring-gold-matte',
  outline: 'border-2 border-navy-900 text-navy-900 hover:bg-navy-900 hover:text-white focus:ring-navy-500',
  ghost: 'text-navy-900 hover:bg-charcoal-100 focus:ring-charcoal-300',
};

const sizes = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-4 text-base',
};

const disabledStyles = disabled ? 'opacity-50 cursor-not-allowed pointer-events-none' : '';
const widthStyles = fullWidth ? 'w-full' : '';

const combinedStyles = `${baseStyles} ${variants[variant]} ${sizes[size]} ${disabledStyles} ${widthStyles} ${className}`.trim();

const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={combinedStyles}>
    <slot />
  </a>
) : (
  <button type={type} disabled={disabled} class={combinedStyles}>
    <slot />
  </button>
)}
