---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Footer Component
 * Pie de página de la tienda - Diseño Premium
 * ═══════════════════════════════════════════════════════════════════════════
 */

const currentYear = new Date().getFullYear();

const footerLinks = {
  tienda: [
    { href: '/categoria/camisas', label: 'Camisas' },
    { href: '/categoria/pantalones', label: 'Pantalones' },
    { href: '/categoria/trajes', label: 'Trajes' },
    { href: '/tienda', label: 'Ver todo' },
  ],
  cuenta: [
    { href: '/cuenta', label: 'Mi cuenta' },
    { href: '/cuenta/pedidos', label: 'Mis pedidos' },
    { href: '/cuenta/favoritos', label: 'Favoritos' },
    { href: '/cuenta/devoluciones', label: 'Devoluciones' },
  ],
  ayuda: [
    { href: '/cuenta/direcciones', label: 'Direcciones de envío' },
    { href: '/cuenta/pagos', label: 'Métodos de pago' },
    { href: '/cuenta/configuracion', label: 'Configuración' },
    { href: '/login', label: 'Iniciar sesión' },
  ],
};
---

<footer style="background-color: #0a1628; color: #ffffff;">
  <!-- Main Footer Content -->
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block mb-6">
          <span class="font-serif text-3xl font-semibold tracking-tight" style="color: #ffffff;">
            Fashion<span style="color: #b8a067;">Market</span>
          </span>
        </a>
        <p class="text-sm leading-relaxed mb-6 max-w-xs" style="color: #a8a8a8;">
          Moda masculina premium para el hombre contemporáneo. Calidad artesanal, diseño atemporal, elegancia en cada detalle.
        </p>
        <a href="/tienda" class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium transition-all duration-300 hover:opacity-90" style="background-color: #b8a067; color: #0a1628;">
          Explorar Tienda
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      
      <!-- Tienda Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] mb-6" style="color: #b8a067;">
          Tienda
        </h4>
        <ul class="space-y-4">
          {footerLinks.tienda.map((link) => (
            <li>
              <a href={link.href} class="footer-link text-sm transition-colors inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Cuenta Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] mb-6" style="color: #b8a067;">
          Mi Cuenta
        </h4>
        <ul class="space-y-4">
          {footerLinks.cuenta.map((link) => (
            <li>
              <a href={link.href} class="footer-link text-sm transition-colors inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Ayuda Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] mb-6" style="color: #b8a067;">
          Ayuda
        </h4>
        <ul class="space-y-4">
          {footerLinks.ayuda.map((link) => (
            <li>
              <a href={link.href} class="footer-link text-sm transition-colors inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] mb-6" style="color: #b8a067;">
          Contacto
        </h4>
        <ul class="space-y-4 text-sm" style="color: #a8a8a8;">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <button 
              id="copy-email-btn"
              class="footer-link text-left cursor-pointer"
              data-email="eloylopezruiz2005@gmail.com"
            >
              eloylopezruiz2005@gmail.com
              <span id="copy-tooltip" class="ml-2 text-xs opacity-0 transition-opacity" style="color: #b8a067;">¡Copiado!</span>
            </button>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+34900123456" class="footer-link">
              +34 900 123 456
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" style="color: #b8a067;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Lun - Vie: 9:00 - 20:00</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Payment Methods & Trust -->
  <div style="border-top: 1px solid #1a2744;">
    <div class="container-custom py-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-center gap-4">
          <span class="text-xs uppercase tracking-wider" style="color: #6b6b6b;">Pago seguro</span>
          <div class="flex items-center gap-3">
            <div class="w-12 h-8 flex items-center justify-center text-xs" style="background-color: rgba(255,255,255,0.1); color: #a8a8a8;">VISA</div>
            <div class="w-12 h-8 flex items-center justify-center text-xs" style="background-color: rgba(255,255,255,0.1); color: #a8a8a8;">MC</div>
            <div class="w-12 h-8 flex items-center justify-center text-xs" style="background-color: rgba(255,255,255,0.1); color: #a8a8a8;">AMEX</div>
            <div class="w-12 h-8 flex items-center justify-center text-xs" style="background-color: rgba(255,255,255,0.1); color: #a8a8a8;">PayPal</div>
          </div>
        </div>
        <div class="flex items-center gap-6 text-xs" style="color: #6b6b6b;">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Compra 100% segura
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            Garantía de calidad
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div style="border-top: 1px solid #1a2744;">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-xs" style="color: #6b6b6b;">
          © {currentYear} FashionMarket. Todos los derechos reservados. Diseñado con ♥ en España.
        </p>
        <div class="flex space-x-6">
          <a href="/cuenta/configuracion" class="footer-link-small text-xs">
            Privacidad
          </a>
          <a href="/cuenta/configuracion" class="footer-link-small text-xs">
            Términos
          </a>
          <button 
            onclick="window.openCookieSettings && window.openCookieSettings()" 
            class="footer-link-small text-xs cursor-pointer hover:underline"
          >
            Gestionar Cookies
          </button>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-link {
    color: #a8a8a8;
    transition: color 0.2s ease;
  }
  .footer-link:hover {
    color: #ffffff;
  }
  .footer-link-small {
    color: #6b6b6b;
    transition: color 0.2s ease;
  }
  .footer-link-small:hover {
    color: #ffffff;
  }
</style>

<script>
  document.getElementById('copy-email-btn')?.addEventListener('click', async function() {
    const email = this.dataset.email || '';
    const tooltip = document.getElementById('copy-tooltip');
    
    try {
      await navigator.clipboard.writeText(email);
      if (tooltip) {
        tooltip.style.opacity = '1';
        setTimeout(() => {
          tooltip.style.opacity = '0';
        }, 2000);
      }
    } catch (err) {
      // Fallback para navegadores antiguos
      const textArea = document.createElement('textarea');
      textArea.value = email;
      document.body.appendChild(textArea);
      textArea.select();
      document.execCommand('copy');
      document.body.removeChild(textArea);
      if (tooltip) {
        tooltip.style.opacity = '1';
        setTimeout(() => {
          tooltip.style.opacity = '0';
        }, 2000);
      }
    }
  });
</script>
