---
/**
 * ═══════════════════════════════════════════════════════════════════════════
 * FASHIONMARKET - Footer Component
 * Pie de página de la tienda - Diseño Premium
 * ═══════════════════════════════════════════════════════════════════════════
 */

const currentYear = new Date().getFullYear();

const footerLinks = {
  tienda: [
    { href: '/categoria/camisas', label: 'Camisas' },
    { href: '/categoria/pantalones', label: 'Pantalones' },
    { href: '/categoria/trajes', label: 'Trajes' },
    { href: '/tienda', label: 'Ver todo' },
  ],
  ayuda: [
    { href: '/envios', label: 'Envíos y entregas' },
    { href: '/devoluciones', label: 'Devoluciones' },
    { href: '/tallas', label: 'Guía de tallas' },
    { href: '/contacto', label: 'Contacto' },
  ],
  empresa: [
    { href: '/sobre-nosotros', label: 'Sobre nosotros' },
    { href: '/tiendas', label: 'Tiendas físicas' },
    { href: '/sostenibilidad', label: 'Sostenibilidad' },
    { href: '/trabaja-con-nosotros', label: 'Trabaja con nosotros' },
  ],
  legal: [
    { href: '/privacidad', label: 'Privacidad' },
    { href: '/terminos', label: 'Términos' },
    { href: '/cookies', label: 'Cookies' },
  ],
};
---

<footer class="bg-navy-900 text-white">
  <!-- Main Footer Content -->
  <div class="container-custom py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block mb-6">
          <span class="font-serif text-3xl font-semibold tracking-tight">
            Fashion<span class="text-gold-matte">Market</span>
          </span>
        </a>
        <p class="text-charcoal-300 text-sm leading-relaxed mb-8 max-w-xs">
          Moda masculina premium para el hombre contemporáneo. Calidad artesanal, diseño atemporal, elegancia en cada detalle.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4">
          <a href="#" class="w-10 h-10 bg-navy-800 flex items-center justify-center text-charcoal-400 hover:bg-gold-matte hover:text-navy-900 transition-all duration-300" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-navy-800 flex items-center justify-center text-charcoal-400 hover:bg-gold-matte hover:text-navy-900 transition-all duration-300" aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-navy-800 flex items-center justify-center text-charcoal-400 hover:bg-gold-matte hover:text-navy-900 transition-all duration-300" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="#" class="w-10 h-10 bg-navy-800 flex items-center justify-center text-charcoal-400 hover:bg-gold-matte hover:text-navy-900 transition-all duration-300" aria-label="Pinterest">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24 12 24c6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Tienda Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] text-gold-matte mb-6">
          Tienda
        </h4>
        <ul class="space-y-4">
          {footerLinks.tienda.map((link) => (
            <li>
              <a href={link.href} class="text-charcoal-300 hover:text-white text-sm transition-colors hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Ayuda Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] text-gold-matte mb-6">
          Ayuda
        </h4>
        <ul class="space-y-4">
          {footerLinks.ayuda.map((link) => (
            <li>
              <a href={link.href} class="text-charcoal-300 hover:text-white text-sm transition-colors hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Empresa Links -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] text-gold-matte mb-6">
          Empresa
        </h4>
        <ul class="space-y-4">
          {footerLinks.empresa.map((link) => (
            <li>
              <a href={link.href} class="text-charcoal-300 hover:text-white text-sm transition-colors hover:translate-x-1 inline-block">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div class="lg:col-span-2">
        <h4 class="font-sans text-xs font-semibold uppercase tracking-[0.2em] text-gold-matte mb-6">
          Contacto
        </h4>
        <ul class="space-y-4 text-sm text-charcoal-300">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 text-gold-matte flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:hola@fashionmarket.com" class="hover:text-white transition-colors">
              hola@fashionmarket.com
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 text-gold-matte flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+34900123456" class="hover:text-white transition-colors">
              +34 900 123 456
            </a>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 mt-0.5 text-gold-matte flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Lun - Vie: 9:00 - 20:00</span>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Payment Methods & Trust -->
  <div class="border-t border-navy-800">
    <div class="container-custom py-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-center gap-4">
          <span class="text-xs text-charcoal-400 uppercase tracking-wider">Pago seguro</span>
          <div class="flex items-center gap-3">
            <div class="w-12 h-8 bg-white/10 flex items-center justify-center text-xs text-charcoal-300">VISA</div>
            <div class="w-12 h-8 bg-white/10 flex items-center justify-center text-xs text-charcoal-300">MC</div>
            <div class="w-12 h-8 bg-white/10 flex items-center justify-center text-xs text-charcoal-300">AMEX</div>
            <div class="w-12 h-8 bg-white/10 flex items-center justify-center text-xs text-charcoal-300">PayPal</div>
          </div>
        </div>
        <div class="flex items-center gap-6 text-charcoal-400 text-xs">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            Compra 100% segura
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            Garantía de calidad
          </span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-navy-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-charcoal-500 text-xs">
          © {currentYear} FashionMarket. Todos los derechos reservados. Diseñado con ♥ en España.
        </p>
        <div class="flex space-x-6">
          {footerLinks.legal.map((link) => (
            <a href={link.href} class="text-charcoal-500 hover:text-white text-xs transition-colors">
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
