<script>
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  // COOKIE CONSENT LOGIC
  // â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
  
  const COOKIE_CONSENT_KEY = 'fm_cookie_consent';
  const COOKIE_PREFERENCES_KEY = 'fm_cookie_preferences';
  
  interface CookiePreferences {
    necessary: boolean;
    analytics: boolean;
    marketing: boolean;
    personalization: boolean;
    timestamp: number;
  }
  
  // Check if consent was already given
  function hasConsent(): boolean {
    return localStorage.getItem(COOKIE_CONSENT_KEY) !== null;
  }
  
  // Get saved preferences
  function getPreferences(): CookiePreferences | null {
    const saved = localStorage.getItem(COOKIE_PREFERENCES_KEY);
    return saved ? JSON.parse(saved) : null;
  }
  
  // Save consent
  function saveConsent(preferences: CookiePreferences): void {
    localStorage.setItem(COOKIE_CONSENT_KEY, 'true');
    localStorage.setItem(COOKIE_PREFERENCES_KEY, JSON.stringify(preferences));
    
    // Dispatch event for other scripts to react
    window.dispatchEvent(new CustomEvent('cookieConsentUpdated', { detail: preferences }));
  }
  
  // Show banner with animation
  function showBanner(): void {
    const banner = document.getElementById('cookie-consent-banner');
    if (banner) {
      // Small delay to ensure CSS is applied
      requestAnimationFrame(() => {
        banner.classList.remove('translate-y-full');
        banner.classList.add('translate-y-0');
      });
    }
  }
  
  // Hide banner with animation
  function hideBanner(): void {
    const banner = document.getElementById('cookie-consent-banner');
    if (banner) {
      banner.classList.remove('translate-y-0');
      banner.classList.add('translate-y-full');
    }
  }
  
  // Show settings modal
  function showSettingsModal(): void {
    const modal = document.getElementById('cookie-settings-modal');
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      
      // Load saved preferences into checkboxes
      const prefs = getPreferences();
      if (prefs) {
        (document.getElementById('cookie-analytics') as HTMLInputElement).checked = prefs.analytics;
        (document.getElementById('cookie-marketing') as HTMLInputElement).checked = prefs.marketing;
        (document.getElementById('cookie-personalization') as HTMLInputElement).checked = prefs.personalization;
      }
    }
  }
  
  // Hide settings modal
  function hideSettingsModal(): void {
    const modal = document.getElementById('cookie-settings-modal');
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }
  
  // Accept all cookies
  function acceptAll(): void {
    const preferences: CookiePreferences = {
      necessary: true,
      analytics: true,
      marketing: true,
      personalization: true,
      timestamp: Date.now()
    };
    saveConsent(preferences);
    hideBanner();
    hideSettingsModal();
  }
  
  // Reject optional cookies (only necessary)
  function rejectOptional(): void {
    const preferences: CookiePreferences = {
      necessary: true,
      analytics: false,
      marketing: false,
      personalization: false,
      timestamp: Date.now()
    };
    saveConsent(preferences);
    hideBanner();
    hideSettingsModal();
  }
  
  // Save custom preferences
  function saveSettings(): void {
    const preferences: CookiePreferences = {
      necessary: true,
      analytics: (document.getElementById('cookie-analytics') as HTMLInputElement)?.checked ?? false,
      marketing: (document.getElementById('cookie-marketing') as HTMLInputElement)?.checked ?? false,
      personalization: (document.getElementById('cookie-personalization') as HTMLInputElement)?.checked ?? false,
      timestamp: Date.now()
    };
    saveConsent(preferences);
    hideBanner();
    hideSettingsModal();
  }
  
  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', () => {
    // Show banner if no consent
    if (!hasConsent()) {
      // Small delay for better UX
      setTimeout(showBanner, 1000);
    }
    
    // Event listeners
    document.getElementById('cookie-accept-btn')?.addEventListener('click', acceptAll);
    document.getElementById('cookie-reject-btn')?.addEventListener('click', rejectOptional);
    document.getElementById('cookie-settings-btn')?.addEventListener('click', showSettingsModal);
    document.getElementById('cookie-modal-close')?.addEventListener('click', hideSettingsModal);
    document.getElementById('cookie-modal-backdrop')?.addEventListener('click', hideSettingsModal);
    document.getElementById('cookie-save-settings')?.addEventListener('click', saveSettings);
    
    // Close modal on ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        hideSettingsModal();
      }
    });
  });
  
  // Expose function to open settings (for footer link)
  (window as any).openCookieSettings = () => {
    showSettingsModal();
    showBanner();
  };
</script>
